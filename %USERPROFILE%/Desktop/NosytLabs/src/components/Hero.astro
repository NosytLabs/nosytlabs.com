<style>
  .hero {
    position: relative;
    min-height: calc(100vh - 80px);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    padding: var(--spacing-8) 0;
  }
  
  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }
  
  .hero-particles {
    position: absolute;
    inset: 0;
    z-index: 1;
  }
  
  .hero-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, var(--primary-dark), var(--primary), var(--secondary));
    z-index: 0;
  }
  
  .hero-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 2;
  }
  
  .hero-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: var(--spacing-12);
    width: 100%;
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }
  
  .hero-text {
    max-width: 600px;
    color: var(--white);
    background-color: rgba(0, 0, 0, 0.65);
    backdrop-filter: blur(12px);
    padding: var(--spacing-8);
    border-radius: var(--border-radius-lg);
    border: 1px solid rgba(255, 255, 255, 0.2);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
  }
  
  .hero-title {
    font-size: var(--font-size-5xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--spacing-4);
    color: var(--white);
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.9), 0 0 30px rgba(0, 0, 0, 0.5);
    position: relative;
  }
  
  .hero-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 100px;
    height: 4px;
    background: var(--accent);
    border-radius: 2px;
  }
  
  .hero-subtitle {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-semibold);
    margin-bottom: var(--spacing-6);
    color: var(--white);
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.9), 0 0 20px rgba(0, 0, 0, 0.7);
  }
  
  .hero-rotating-text {
    height: 80px;
    margin-bottom: var(--spacing-8);
    position: relative;
  }
  
  .rotating-item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.5s ease, transform 0.5s ease;
    font-size: var(--font-size-lg);
    color: var(--gray-200);
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }
  
  .rotating-item.active {
    opacity: 1;
    transform: translateY(0);
  }
  
  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-4);
  }
  
  .hero-cta .btn {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-6);
    font-weight: var(--font-weight-medium);
    border-radius: var(--border-radius-md);
    transition: all var(--transition-normal) var(--transition-timing-ease);
  }
  
  .hero-cta .btn svg {
    transition: transform var(--transition-normal) var(--transition-timing-ease);
  }
  
  .hero-cta .btn:hover svg {
    transform: translateX(4px);
  }
  
  .hero-image {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-8);
  }
  
  .hero-logo {
    width: 180px;
    height: 180px;
    background: linear-gradient(135deg, var(--primary), var(--accent));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5), 0 0 60px rgba(76, 29, 149, 0.5);
    position: relative;
    z-index: 1;
  }
  
  .hero-logo::before {
    content: '';
    position: absolute;
    inset: -10px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--primary-light), var(--accent-light));
    opacity: 0.3;
    z-index: -1;
    animation: pulse 3s infinite;
  }
  
  @keyframes pulse {
    0% {
      transform: scale(1);
      opacity: 0.3;
    }
    50% {
      transform: scale(1.1);
      opacity: 0.2;
    }
    100% {
      transform: scale(1);
      opacity: 0.3;
    }
  }
  
  .hero-logo-letter {
    font-size: 100px;
    font-weight: var(--font-weight-bold);
    color: var(--white);
    text-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
  }
  
  .hero-features {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-4);
  }
  
  .hero-feature {
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: var(--border-radius-lg);
    padding: var(--spacing-4);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    transition: all var(--transition-normal) var(--transition-timing-ease);
    cursor: pointer;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .hero-feature:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    border-color: rgba(255, 255, 255, 0.2);
  }
  
  .hero-feature-icon {
    font-size: 32px;
  }
  
  .hero-feature-text {
    font-weight: var(--font-weight-medium);
    color: var(--white);
  }
  
  .scroll-indicator {
    position: absolute;
    bottom: var(--spacing-8);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--white);
    z-index: 20;
  }
  
  .scroll-indicator span {
    font-size: var(--font-size-sm);
    text-transform: uppercase;
    letter-spacing: 2px;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.8);
  }
  
  .scroll-button {
    background-color: transparent;
    border: none;
    color: var(--white);
    cursor: pointer;
    padding: var(--spacing-2);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    animation: bounce 2s infinite;
  }
  
  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }
</style>

<script>
  // Rotating text animation
  document.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.rotating-item');
    let currentIndex = 0;
    
    function rotateText() {
      // Hide current item
      items[currentIndex].classList.remove('active');
      
      // Move to next item
      currentIndex = (currentIndex + 1) % items.length;
      
      // Show next item
      items[currentIndex].classList.add('active');
    }
    
    // Set initial item as active
    items[0].classList.add('active');
    
    // Start rotation
    setInterval(rotateText, 4000);
  });
</script>
