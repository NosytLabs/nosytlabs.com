  <!-- Canonical URL -->
  <link rel="canonical" href={new URL(Astro.url.pathname, Astro.site || 'https://nosytlabs.com').href}>

  <!-- Keywords -->
  <meta name="keywords" content="AI solutions, web development, mobile apps, 3D printing, technology">

