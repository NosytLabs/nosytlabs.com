</BaseLayout>

<style>
  .blog-page {
    padding: var(--spacing-12) 0;
  }
  
  .page-header {
    text-align: center;
    margin-bottom: var(--spacing-12);
  }
  
  .page-header h1 {
    font-size: var(--font-size-5xl);
    margin-bottom: var(--spacing-4);
    color: var(--primary);
  }
  
  .dark .page-header h1 {
    color: var(--primary-light);
  }
  
  .lead {
    font-size: var(--font-size-xl);
    color: var(--gray-600);
    max-width: 800px;
    margin: 0 auto;
  }
  
  .dark .lead {
    color: var(--gray-300);
  }
  
  .blog-filter {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-8);
  }
  
  .filter-button {
    background-color: var(--gray-100);
    color: var(--gray-700);
    border: none;
    border-radius: var(--border-radius-full);
    padding: var(--spacing-2) var(--spacing-4);
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    transition: all var(--transition-normal) var(--transition-timing-ease);
  }
  
  .dark .filter-button {
    background-color: var(--gray-800);
    color: var(--gray-300);
  }
  
  .filter-button:hover {
    background-color: var(--gray-200);
  }
  
  .dark .filter-button:hover {
    background-color: var(--gray-700);
  }
  
  .filter-button.active {
    background-color: var(--primary);
    color: white;
  }
  
  .dark .filter-button.active {
    background-color: var(--primary-light);
  }
  
  .blog-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: var(--spacing-8);
    margin-bottom: var(--spacing-12);
  }
  
  @media (min-width: 768px) {
    .blog-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .blog-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .blog-card {
    background-color: white;
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    box-shadow: var(--shadow-md);
    transition: all var(--transition-normal) var(--transition-timing-ease);
    height: 100%;
    display: flex;
    flex-direction: column;
  }
  
  .dark .blog-card {
    background-color: var(--gray-800);
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-xl);
  }
  
  .blog-image {
    height: 200px;
    overflow: hidden;
  }
  
  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }
  
  .blog-content {
    padding: var(--spacing-6);
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .blog-meta {
    display: flex;
    justify-content: space-between;
    margin-bottom: var(--spacing-2);
    font-size: var(--font-size-sm);
  }
  
  .blog-category {
    color: var(--accent);
    font-weight: var(--font-weight-medium);
  }
  
  .blog-date {
    color: var(--gray-500);
  }
  
  .dark .blog-date {
    color: var(--gray-400);
  }
  
  .blog-content h2 {
    font-size: var(--font-size-xl);
    margin-bottom: var(--spacing-2);
    color: var(--primary);
  }
  
  .dark .blog-content h2 {
    color: var(--primary-light);
  }
  
  .blog-excerpt {
    color: var(--gray-600);
    margin-bottom: var(--spacing-4);
  }
  
  .dark .blog-excerpt {
    color: var(--gray-300);
  }
  
  .blog-link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    color: var(--primary);
    font-weight: var(--font-weight-medium);
    margin-top: auto;
    transition: all var(--transition-normal) var(--transition-timing-ease);
  }
  
  .dark .blog-link {
    color: var(--primary-light);
  }
  
  .blog-link:hover {
    color: var(--accent);
    text-decoration: none;
  }
  
  .dark .blog-link:hover {
    color: var(--accent-light);
  }
  
  .blog-link svg {
    transition: transform var(--transition-normal) var(--transition-timing-ease);
  }
  
  .blog-link:hover svg {
    transform: translateX(4px);
  }
  
  .blog-pagination {
    display: flex;
    justify-content: center;
    gap: var(--spacing-2);
    margin-bottom: var(--spacing-16);
  }
  
  .pagination-button {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 40px;
    height: 40px;
    padding: 0 var(--spacing-4);
    background-color: var(--gray-100);
    border: none;
    border-radius: var(--border-radius-md);
    font-weight: var(--font-weight-medium);
    cursor: pointer;
    transition: all var(--transition-normal) var(--transition-timing-ease);
  }
  
  .dark .pagination-button {
    background-color: var(--gray-800);
    color: var(--gray-300);
  }
  
  .pagination-button:hover {
    background-color: var(--gray-200);
  }
  
  .dark .pagination-button:hover {
    background-color: var(--gray-700);
  }
  
  .pagination-button.active {
    background-color: var(--primary);
    color: white;
  }
  
  .dark .pagination-button.active {
    background-color: var(--primary-light);
  }
  
  .pagination-button.next {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
  }
  
  .blog-subscribe {
    text-align: center;
    background-color: var(--primary);
    color: white;
    padding: var(--spacing-12);
    border-radius: var(--border-radius-lg);
  }
  
  .dark .blog-subscribe {
    background-color: var(--primary-light);
  }
  
  .blog-subscribe h2 {
    font-size: var(--font-size-3xl);
    margin-bottom: var(--spacing-4);
    color: white;
  }
  
  .blog-subscribe p {
    font-size: var(--font-size-lg);
    margin-bottom: var(--spacing-6);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }
  
  .subscribe-form {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-4);
    max-width: 500px;
    margin: 0 auto;
  }
  
  @media (min-width: 768px) {
    .subscribe-form {
      flex-direction: row;
    }
  }
  
  .subscribe-form input {
    flex: 1;
    padding: var(--spacing-3) var(--spacing-4);
    border: none;
    border-radius: var(--border-radius-md);
    font-size: var(--font-size-base);
  }
  
  .subscribe-form .btn {
    white-space: nowrap;
  }
</style>

<script>
  // Initialize blog filter
  document.addEventListener('DOMContentLoaded', function() {
    const filterButtons = document.querySelectorAll('.filter-button');
    const blogCards = document.querySelectorAll('.blog-card');
    
    // Add click event to filter buttons
    filterButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        filterButtons.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to clicked button
        button.classList.add('active');
        
        // Get filter value
        const filter = button.dataset.filter;
        
        // Filter blog posts
        blogCards.forEach(card => {
          if (filter === 'all' || card.dataset.category === filter) {
            card.style.display = 'flex';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
    
    // Initialize pagination
    const paginationButtons = document.querySelectorAll('.pagination-button');
    
    paginationButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Remove active class from all buttons
        paginationButtons.forEach(btn => btn.classList.remove('active'));
        
        // Add active class to clicked button
        if (!button.classList.contains('next')) {
          button.classList.add('active');
        }
        
        // In a real implementation, you would load the next page of blog posts here
      });
    });
    
    // Initialize subscribe form
    const subscribeForm = document.querySelector('.subscribe-form');
    
    if (subscribeForm) {
      subscribeForm.addEventListener('submit', function(e) {
        e.preventDefault();
        
        // Get email
        const email = subscribeForm.querySelector('input').value;
        
        // Show success message (in a real implementation, you would send the data to a server)
        alert(`Thank you for subscribing with ${email}! You will now receive our latest blog posts and announcements.`);
        
        // Reset form
        subscribeForm.reset();
      });
    }
  });
</script>
