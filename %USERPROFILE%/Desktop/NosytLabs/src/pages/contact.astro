---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact Us - NosytLabs" description="Get in touch with NosytLabs for inquiries, quotes, or to discuss your project.">
  <div class="contact-page">
    <div class="container">
      <div class="page-header">
        <h1>Contact Us</h1>
        <p class="lead">Get in touch with us for inquiries, quotes, or to discuss your project.</p>
      </div>
      
      <div class="contact-grid">
        <div class="contact-form-container">
          <h2>Send Us a Message</h2>
          
          <form id="contact-form" class="contact-form">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" id="name" name="name" required>
            </div>
            
            <div class="form-group">
              <label for="email">Email</label>
              <input type="email" id="email" name="email" required>
            </div>
            
            <div class="form-group">
              <label for="phone">Phone (Optional)</label>
              <input type="tel" id="phone" name="phone">
            </div>
            
            <div class="form-group">
              <label for="subject">Subject</label>
              <input type="text" id="subject" name="subject" required>
            </div>
            
            <div class="form-group">
              <label for="service">Service</label>
              <select id="service" name="service" required>
                <option value="">Select a service</option>
                <option value="web-development">Web Development</option>
                <option value="content-creation">Content Creation</option>
                <option value="crypto-mining">Crypto Mining</option>
                <option value="3d-printing">3D Printing</option>
                <option value="consulting">Consulting</option>
                <option value="other">Other</option>
              </select>
            </div>
            
            <div class="form-group">
              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" required></textarea>
            </div>
            
            <div class="form-group file-upload">
              <label for="file">Attach File (Optional)</label>
              <input type="file" id="file" name="file">
              <p class="file-info">Max file size: 10MB. Supported formats: PDF, JPG, PNG, STL</p>
            </div>
            
            <div class="form-group budget-range">
              <label for="budget">Budget Range (Optional)</label>
              <div class="range-container">
                <input type="range" id="budget" name="budget" min="100" max="10000" step="100" value="1000">
                <span id="budget-value">$1,000</span>
              </div>
            </div>
            
            <div class="form-group">
              <button type="submit" class="btn btn-primary">Send Message</button>
            </div>
          </form>
        </div>
        
        <div class="contact-info">
          <h2>Contact Information</h2>
          
          <div class="info-item">
            <div class="info-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                <polyline points="22,6 12,13 2,6"></polyline>
              </svg>
            </div>
            <div class="info-content">
              <h3>Email</h3>
              <p><a href="mailto:info@nosytlabs.com">info@nosytlabs.com</a></p>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M15.05 5A5 5 0 0 1 19 8.95M15.05 1A9 9 0 0 1 23 8.94m-1 7.98v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
              </svg>
            </div>
            <div class="info-content">
              <h3>Phone</h3>
              <p><a href="tel:+1234567890">+1 (234) 567-890</a></p>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
            </div>
            <div class="info-content">
              <h3>Location</h3>
              <p>United States</p>
            </div>
          </div>
          
          <div class="info-item">
            <div class="info-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
            </div>
            <div class="info-content">
              <h3>Business Hours</h3>
              <p>Monday - Friday: 9:00 AM - 5:00 PM EST</p>
              <p>Saturday - Sunday: Closed</p>
            </div>
          </div>
          
          <div class="social-links">
            <h3>Connect With Us</h3>
            <div class="social-icons">
              <a href="https://github.com/NosytLabs" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
