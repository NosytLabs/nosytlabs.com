{
  "name": "@nosytlabs/shared-utils",
  "version": "1.0.0",
  "description": "Shared utility functions for NosytLabs project",
  "type": "module",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "require": "./dist/src/index.cjs"
    },
    "./theme/theme-manager": {
      "types": "./dist/src/theme/theme-manager.d.ts",
      "import": "./dist/src/theme/theme-manager.js",
      "require": "./dist/src/theme/theme-manager.cjs"
    },
    "./validation": {
      "types": "./dist/src/validation/index.d.ts",
      "import": "./dist/src/validation/index.js",
      "require": "./dist/src/validation/index.cjs"
    },
    "./validation/email-validator": {
      "types": "./dist/src/validation/email-validator.d.ts",
      "import": "./dist/src/validation/email-validator.js",
      "require": "./dist/src/validation/email-validator.cjs"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "utilities",
    "validation",
    "sanitization",
    "date-utils",
    "shared",
    "nosytlabs"
  ],
  "author": "NosytLabs Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4",
    "dompurify": "^3.0.5",
    "jsdom": "^22.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.6.0",
    "@types/dompurify": "^3.0.2",
    "@types/jsdom": "^21.1.3",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "typescript": "^5.2.2",
    "rimraf": "^5.0.1"
  },
  "peerDependencies": {},
  "files": [
    "dist",
    "README.md"
  ],
  "engines": {
    "node": ">=16.0.0"
  }
}