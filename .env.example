# NosytLabs Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Node Environment (development, production, test)
NODE_ENV=development

# Application Configuration
APP_URL=http://localhost:3000
APP_NAME=NosytLabs
APP_VERSION=1.0.0
PORT=3000

# =============================================================================
# DATABASE CONFIGURATION (SUPABASE)
# =============================================================================

# Supabase Project Configuration
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# Legacy Database URL (for compatibility)
DATABASE_URL=postgresql://postgres:password@db.your-project-id.supabase.co:5432/postgres

# =============================================================================
# EMAIL SERVICE CONFIGURATION (RESEND)
# =============================================================================

# Resend API Configuration
RESEND_API_KEY=re_your_resend_api_key_here

# Email Addresses
FROM_EMAIL=hello@nosytlabs.com
ADMIN_EMAIL=admin@nosytlabs.com
CONTACT_EMAIL=contact@nosytlabs.com
REPLY_TO_EMAIL=noreply@nosytlabs.com

# Alternative SMTP Configuration (backup)
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASS=your-resend-api-key

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption & JWT
ENCRYPTION_KEY=your-32-character-encryption-key-here-must-be-32-chars
JWT_SECRET=your-super-secure-jwt-secret-key-for-authentication-tokens
JWT_EXPIRES_IN=7d

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-for-token-generation

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=/api/csp-report

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GTAG_ID=GT-XXXXXXXXX
PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token
PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Uptime Monitoring
UPTIME_ROBOT_API_KEY=your-uptimerobot-api-key

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================

# AI Services (if needed)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Payment Processing (if needed)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Social Media APIs (if needed)
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Development Tools
ENABLE_SOURCE_MAPS=true
ENABLE_HOT_RELOAD=true

# Testing Configuration
TEST_DATABASE_URL=postgresql://postgres:password@localhost:5432/nosytlabs_test
TEST_EMAIL_PROVIDER=mock

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These variables should be set differently in production:
#
# NODE_ENV=production
# APP_URL=https://nosytlabs.com
# DEBUG_MODE=false
# LOG_LEVEL=warn
# VERBOSE_LOGGING=false
# CORS_ORIGIN=https://nosytlabs.com
# ENABLE_SOURCE_MAPS=false
# ENABLE_HOT_RELOAD=false
#
# Security Notes:
# - Use strong, unique secrets for JWT_SECRET and ENCRYPTION_KEY
# - Rotate API keys regularly
# - Enable HTTPS in production
# - Set appropriate CORS origins
# - Use environment-specific Supabase projects
# - Configure proper rate limiting for production traffic
