# NosytLabs Environment Variables Template
# Copy this file to .env.local and fill in your actual values
# IMPORTANT: Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION SETTINGS
# =============================================================================

# Node Environment (development, production, test)
NODE_ENV=development

# Application Configuration
APP_URL=http://localhost:3000
APP_NAME=NosytLabs
APP_VERSION=1.0.0
PORT=3000



# =============================================================================
# EMAIL SERVICE CONFIGURATION (EMAILJS)
# =============================================================================

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Encryption & JWT
ENCRYPTION_KEY=your-32-character-encryption-key-here-must-be-32-chars
JWT_SECRET=your-super-secure-jwt-secret-key-for-authentication-tokens
JWT_EXPIRES_IN=7d

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key-for-token-generation

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
CORS_CREDENTIALS=true

# Security Headers
HSTS_MAX_AGE=31536000
CSP_REPORT_URI=/api/csp-report

# =============================================================================
# ANALYTICS & MONITORING
# =============================================================================

# Vercel Analytics
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GTAG_ID=GT-XXXXXXXXX
PUBLIC_GA_ID=G-XXXXXXXXXX

# Sentry Error Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token
PUBLIC_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Uptime Monitoring
UPTIME_ROBOT_API_KEY=your-uptimerobot-api-key

# =============================================================================
# EMAIL SERVICE CONFIGURATION (EMAILJS)
# =============================================================================

# EmailJS Configuration for Contact Forms
# Get these values from your EmailJS dashboard at https://www.emailjs.com/
VITE_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
VITE_EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here
VITE_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here

# Alternative naming (for compatibility)
PUBLIC_EMAILJS_SERVICE_ID=your_emailjs_service_id_here
PUBLIC_EMAILJS_TEMPLATE_ID=your_emailjs_template_id_here
PUBLIC_EMAILJS_PUBLIC_KEY=your_emailjs_public_key_here

# =============================================================================
# THIRD-PARTY API KEYS
# =============================================================================

# AI Services (if needed)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Payment Processing (if needed)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Social Media APIs (if needed)
TWITTER_API_KEY=your-twitter-api-key
LINKEDIN_API_KEY=your-linkedin-api-key

# =============================================================================
# DEVELOPMENT & DEBUGGING
# =============================================================================

# Debug Settings
DEBUG_MODE=true
LOG_LEVEL=info
VERBOSE_LOGGING=false

# Development Tools
ENABLE_SOURCE_MAPS=true
ENABLE_HOT_RELOAD=true

# Testing Configuration
TEST_EMAIL_PROVIDER=mock

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
# These variables should be set differently in production:
#
# NODE_ENV=production
# APP_URL=https://nosytlabs.com
# DEBUG_MODE=false
# LOG_LEVEL=warn
# VERBOSE_LOGGING=false
# CORS_ORIGIN=https://nosytlabs.com
# ENABLE_SOURCE_MAPS=false
# ENABLE_HOT_RELOAD=false
#
# Security Notes:
# - Use strong, unique secrets for JWT_SECRET and ENCRYPTION_KEY
# - Rotate API keys regularly
# - Enable HTTPS in production
# - Set appropriate CORS origins

# - Configure proper rate limiting for production traffic
