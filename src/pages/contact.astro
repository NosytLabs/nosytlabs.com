---
/**
 * Contact Page
 *
 * Modular contact page using extracted components for better maintainability
 */

import BaseLayout from '../layouts/base-layout.astro';
import { generateCanonicalUrl } from '../utils/path-resolvers';
import ContactHero from '../components/contact/ContactHero.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import ContactInfo from '../components/contact/ContactInfo.astro';
import ContactFAQ from '../components/contact/ContactFAQ.astro';
import ContactCTA from '../components/contact/ContactCTA.astro';

const canonicalUrl = generateCanonicalUrl('/contact');

// SEO configuration
const seoConfig = {
  title: 'Contact NosytLabs | Get In Touch Today',
  description:
    'Ready to transform your operations with cutting-edge technology? Contact NosytLabs for expert web development, AI integration, and technical consulting services.',
  keywords: [
    'contact nosytlabs',
    'web development consultation',
    'AI integration services',
    'technical consulting',
    'business technology solutions',
    'get in touch',
  ],
};
---

<BaseLayout
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
  {canonicalUrl}
  type="website"
>
  <ContactHero />

  <!-- Enhanced Contact Form & Info Section -->
  <section class="section-xl">
    <div class="container">
      <div class="grid lg:grid-cols-2 gap-16 items-start">
        <ContactForm />
        <ContactInfo />
      </div>
    </div>
  </section>

  <ContactFAQ />

  <ContactCTA />
</BaseLayout>
