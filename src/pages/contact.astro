---
// Contact page for NosytLabs - Redesigned 2025
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/unified/Card.astro';
---
<BaseLayout
  title="Connect With Our Team - NosytLabs Contact"
  description="Get in touch with NosytLabs for your next digital project. Free consultations available for web development, AI integration, and technology solutions."
  pageKey="contact"
  keywords="contact NosytLabs, free consultation, web development quote, technology consulting, digital solutions, project inquiry"
>
  <!-- Enhanced Hero Section -->
  <!-- Important Notice -->
  <section class="py-8 bg-gradient-to-r from-primary-50 to-accent-50 dark:from-primary-900 dark:to-accent-900">
    <div class="container-xl mx-auto px-6">
      <div class="glass p-6 rounded-2xl text-center">
        <p class="text-neutral-700 dark:text-neutral-300">
          <strong>Note:</strong> NosytLabs is a portfolio site for NOSYT LLC. We offer limited services based on availability and project fit. Response times may vary.
        </p>
      </div>
    </div>
  </section>
  <!-- Contact Form Section -->
  <section class="responsive-spacing bg-white dark:bg-gray-900">
    <div class="container-xl mx-auto px-6">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Enhanced Contact Information -->
        <div class="lg:w-1/3">
          <div class="bg-white dark:bg-gray-800 rounded-xl p-8 shadow-xl border border-gray-100 dark:border-gray-700 transform transition-all duration-500 hover:shadow-2xl card-3d relative">
            <!-- Decorative elements -->
            <h2 class="text-2xl font-bold mb-6 relative inline-block text-gray-800 dark:text-white">
              Get in Touch
            </h2>
            <div class="space-y-8">
              <div class="contact-info-item">
                <div class="flex items-center mb-3">
                  <div class="contact-icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold ml-3 text-gray-800 dark:text-white">Email</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 pl-10">hi@nosytlabs.com</p>
              </div>
              <div class="contact-info-item">
                <div class="flex items-center mb-3">
                  <div class="contact-icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold ml-3 text-gray-800 dark:text-white">Social Media</h3>
                </div>
                <div class="flex space-x-4 pl-10">
                  <a href="https://github.com/NosytLabs" target="_blank" rel="noopener noreferrer" class="social-icon-link">
                    <span class="sr-only">GitHub</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
                    </svg>
                  </a>
                  <a href="https://kick.com/Tycen" target="_blank" rel="noopener noreferrer" class="social-icon-link">
                    <span class="sr-only">Kick</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-2-3.5v-7l6 3.5-6 3.5z" />
                    </svg>
                  </a>
                  <a href="https://www.youtube.com/@TycenYT" target="_blank" rel="noopener noreferrer" class="social-icon-link">
                    <span class="sr-only">YouTube</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M19.615 3.184c-3.604-.246-11.631-.245-15.23 0-3.897.266-4.356 2.62-4.385 8.816.029 6.185.484 8.549 4.385 8.816 3.6.245 11.626.246 15.23 0 3.897-.266 4.356-2.62 4.385-8.816-.029-6.185-.484-8.549-4.385-8.816zm-10.615 12.816v-8l8 3.993-8 4.007z" />
                    </svg>
                  </a>
                  <a href="/3d-printing" class="social-icon-link">
                    <span class="sr-only">3D Printing Portfolio</span>
                    <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 2L2 7v10c0 5.55 3.84 9.739 9 11 5.16-1.261 9-5.45 9-11V7l-10-5z" />
                    </svg>
                  </a>
                </div>
              </div>
              <div class="contact-info-item">
                <div class="flex items-center mb-3">
                  <div class="contact-icon-container">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                  </div>
                  <h3 class="text-lg font-semibold ml-3 text-gray-800 dark:text-white">Response Time</h3>
                </div>
                <p class="text-gray-600 dark:text-gray-300 pl-10">We aim to respond within 2-3 business days, depending on availability</p>
              </div>
            </div>
          </div>
        </div>
        <!-- Enhanced Contact Form -->
        <div class="lg:w-2/3">
          <div class="bg-gradient-to-br from-white via-purple-50/20 to-orange-50/20 dark:from-gray-800 dark:via-purple-900/10 dark:to-orange-900/10 rounded-xl p-8 shadow-xl border border-nosyt-purple/20 dark:border-gray-700 relative backdrop-blur-sm">
            <!-- Decorative elements -->
            <h2 class="text-2xl font-bold mb-6 relative inline-block text-gray-800 dark:text-white">
              Send Us a Message
            </h2>
            <form class="space-y-6" id="contact-form">
              <div class="responsive-grid1 md:grid-cols-2 gap-6">
                <div class="form-group">
                  <label for="name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Name</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                      </svg>
                    </div>
                    <input
                      type="text"
                      id="name"
                      name="name"
                      class="form-input w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Email</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                      </svg>
                    </div>
                    <input
                      type="email"
                      id="email"
                      name="email"
                      class="form-input w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300"
                      required
                    />
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="subject" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Subject</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 20l4-16m2 16l4-16M6 9h14M4 15h14" />
                    </svg>
                  </div>
                  <input
                    type="text"
                    id="subject"
                    name="subject"
                    class="form-input w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300"
                    required
                  />
                </div>
              </div>
              <div class="form-group">
                <label for="service" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Service Interested In</label>
                <div class="relative">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                  </div>
                  <select
                    id="service"
                    name="service"
                    class="form-select w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300 appearance-none"
                  >
                    <option value="">Select a service</option>
                    <option value="web-development">Web Development</option>
                    <option value="ai-solutions">AI Integration</option>
                    <option value="consulting">Tech Consulting & SEO Audit</option>
                    <option value="3d-printing">3D Printing Services</option>
                    <option value="other">Other</option>
                  </select>
                  <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                  </div>
                </div>
              </div>
              <div class="form-group">
                <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Message</label>
                <div class="relative">
                  <textarea
                    id="message"
                    name="message"
                    rows="5"
                    class="form-textarea w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300"
                    required
                  ></textarea>
                </div>
              </div>
              <!-- File Upload for All Services -->
              <div class="form-group">
                <label for="general-file-upload" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                  Upload Files (Optional)
                </label>
                <div class="mt-1 flex justify-center px-6 pt-5 pb-6 border-2 border-gray-300 dark:border-gray-600 border-dashed rounded-lg hover:border-accent dark:hover:border-accent transition-colors">
                  <div class="space-y-1 text-center">
                    <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48" aria-hidden="true">
                      <path d="M28 8H12a4 4 0 00-4 4v20m32-12v8m0 0v8a4 4 0 01-4 4H12a4 4 0 01-4-4v-4m32-4l-3.172-3.172a4 4 0 00-5.656 0L28 28M8 32l9.172-9.172a4 4 0 015.656 0L28 28m0 0l4 4m4-24h8m-4-4v8m-12 4h.02" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                    <div class="flex text-sm text-gray-600 dark:text-gray-400">
                      <label for="general-file-upload" class="relative cursor-pointer bg-white dark:bg-gray-700 rounded-md font-medium text-accent hover:text-accent-dark focus-within:outline-none">
                        <span>Upload a file</span>
                        <input id="general-file-upload" name="general-file-upload" type="file" class="sr-only" multiple />
                      </label>
                      <p class="pl-1">or drag and drop</p>
                    </div>
                    <p class="text-xs text-gray-500 dark:text-gray-400">
                      PDF, PNG, JPG, GIF up to 10MB
                    </p>
                  </div>
                </div>
              </div>
              <!-- Enhanced 3D Printing Specific Fields (hidden by default) -->
              <div id="3d-printing-fields" class="hidden space-y-6 p-6 border border-accent/30 rounded-lg bg-accent/5">
                <h3 class="text-lg font-semibold text-gray-800 dark:text-white mb-4 flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                  </svg>
                  3D Printing Details
                </h3>
                <div class="form-group">
                  <label for="budget" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Budget Range</label>
                  <div class="relative">
                    <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                    </div>
                    <select
                      id="budget"
                      name="budget"
                      class="form-select w-full pl-10 pr-4 py-2 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-accent focus:border-accent bg-white dark:bg-gray-700 text-gray-900 dark:text-white transition-all duration-300 appearance-none"
                    >
                      <option value="">Select budget range</option>
                      <option value="under-100">Under $100</option>
                      <option value="100-250">$100 - $250</option>
                      <option value="250-500">$250 - $500</option>
                      <option value="500-1000">$500 - $1,000</option>
                      <option value="1000-plus">$1,000+</option>
                      <option value="custom">Custom (specify in message)</option>
                    </select>
                    <div class="absolute inset-y-0 right-0 flex items-center pr-3 pointer-events-none">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                      </svg>
                    </div>
                  </div>
                </div>
                <div class="form-group">
                  <label for="file-upload" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Upload STL or Image File</label>
                  <div class="relative">
                    <div class="file-upload-container border-2 border-dashed border-gray-300 dark:border-gray-600 rounded-lg p-6 text-center hover:border-accent transition-colors duration-300">
                      <svg xmlns="http://www.w3.org/2000/svg" class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                      </svg>
                      <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">Drag and drop your file here, or click to browse</p>
                      <p class="mt-1 text-xs text-gray-500 dark:text-gray-400">Accepted formats: .stl, .obj, .3mf, .jpg, .jpeg, .png</p>
                      <input
                        type="file"
                        id="file-upload"
                        name="file"
                        class="absolute inset-0 w-full h-full opacity-0 cursor-pointer"
                        accept=".stl,.obj,.3mf,.jpg,.jpeg,.png"
                      />
                    </div>
                    <div id="file-name" class="mt-2 text-sm text-gray-500 dark:text-gray-400 hidden">
                      <span class="font-medium text-accent">Selected file: </span>
                      <span id="file-name-text"></span>
                    </div>
                    <!-- 3D Model Preview (for STL files) -->
                    <div id="model-preview-container" class="mt-4 hidden">
                      <h4 class="text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">3D Model Preview:</h4>
                      <div id="model-preview" class="w-full h-64 bg-gray-100 dark:bg-gray-700 rounded-lg border border-gray-200 dark:border-gray-600 overflow-hidden">
                        <!-- 3D preview will be rendered here -->
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="text-center">
                <button
                  type="submit"
                  class="w-full group relative inline-flex items-center justify-center px-8 py-4 text-lg font-semibold text-white bg-gradient-to-r from-nosyt-purple to-nosyt-orange rounded-full hover:from-nosyt-purple-dark hover:to-nosyt-orange-dark transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl"
                  aria-label="Send message to NosytLabs">
                  <span class="relative z-10 flex items-center">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span>Send Message</span>
                  </span>
                  <div class="absolute inset-0 bg-gradient-to-r from-nosyt-orange to-nosyt-purple rounded-full opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </button>

                <p class="mt-4 text-sm text-gray-600 dark:text-gray-400">
                  We'll respond within 24 hours to <strong>hi@nosytlabs.com</strong>
                </p>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
<script>
  // Enhanced contact form functionality
  document.addEventListener('DOMContentLoaded', function() {
    const serviceSelect = document.getElementById('service');
    const printingFields = document.getElementById('3d-printing-fields');
    const fileUpload = document.getElementById('file-upload');
    const fileName = document.getElementById('file-name');
    const fileNameText = document.getElementById('file-name-text');
    // Show/hide 3D printing specific fields based on service selection with animation
    if (serviceSelect && printingFields) {
      serviceSelect.addEventListener('change', function() {
        if (this.value === '3d-printing') {
          // Show with animation
          printingFields.classList.remove('hidden');
          printingFields.style.opacity = '0';
          printingFields.style.transform = 'translateY(1.250rem)';
          // Trigger animation after a small delay to ensure the element is visible
          setTimeout(() => {
            printingFields.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
            printingFields.style.opacity = '1';
            printingFields.style.transform = 'translateY(0)';
          }, 10);
        } else {
          // Hide with animation
          printingFields.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
          printingFields.style.opacity = '0';
          printingFields.style.transform = 'translateY(1.250rem)';
          // After animation completes, hide the element
          setTimeout(() => {
            printingFields.classList.add('hidden');
          }, 500);
        }
      });
    }
    // File upload handling for 3D printing
    if (fileUpload && fileName && fileNameText) {
      fileUpload.addEventListener('change', function() {
        if (this.files && this.files.length > 0) {
          // Show file name
          fileNameText.textContent = this.files[0].name;
          fileName.classList.remove('hidden');
          // Add visual feedback to the upload container
          const uploadContainer = document.querySelector('.file-upload-container');
          if (uploadContainer) {
            uploadContainer.classList.add('border-accent');
            uploadContainer.classList.add('bg-accent/5');
          }
        } else {
          // Hide file name
          fileName.classList.add('hidden');
          // Remove visual feedback
          const uploadContainer = document.querySelector('.file-upload-container');
          if (uploadContainer) {
            uploadContainer.classList.remove('border-accent');
            uploadContainer.classList.remove('bg-accent/5');
          }
        }
      });
    }
    // General file upload handling
    const generalFileUpload = document.getElementById('general-file-upload');
    const generalFileList = document.getElementById('general-file-list');
    if (generalFileUpload && generalFileList) {
      generalFileUpload.addEventListener('change', function() {
        if (this.files && this.files.length > 0) {
          // Clear previous file list
          generalFileList.innerHTML = '';
          // Create file list with file names
          const fileListHeader = document.createElement('div');
          fileListHeader.className = 'font-medium text-accent mb-1';
          fileListHeader.textContent = `Selected files (${this.files.length}):`;
          generalFileList.appendChild(fileListHeader);
          // Add each file to the list
          Array.from(this.files).forEach(file => {
            const fileItem = document.createElement('div');
            fileItem.className = 'flex items-center';
