.hero-content { position: relative; z-index: 2000; }
  /* Contact page specific styles */
  /* Form styles */
  .form-group {
    position: relative;
  }
  .form-input:focus,
  .form-select:focus,
  .form-textarea:focus {
    box-shadow: 0 0 0 0.188rem rgba(255, 107, 0, 0.2);
  }
  .input-focused::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 0.188rem;
    height: 100%;
    background-color: var(--nosyt-orange-main);
    border-radius: 0.250rem 0 0 0.250rem;
    transform: scaleY(0);
    transform-origin: bottom;
    transition: transform 0.3s ease;
    z-index: 10;
  }
  .input-focused::before {
    transform: scaleY(1);
  }
  /* File upload container */
  .file-upload-container {
    transition: all 0.3s ease;
  }
  .file-upload-container:hover {
    border-color: var(--nosyt-orange-main);
    background-color: rgba(255, 107, 0, 0.05);
  }
</style>
