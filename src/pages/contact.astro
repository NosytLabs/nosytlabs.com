---
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/ui/Button.astro';
import Icon from '../components/ui/Icon.astro';
---

<MainLayout title="Contact Us - Nosyt Labs">
  <main class="layout-section contact-section">
    <div class="layout-container">
      <!-- Header Section -->
      <header class="section-header section-header--center" data-animate="fade-up">
        <h1 class="section-title">
          Get In <span class="text-primary">Touch</span>
        </h1>
        <p class="section-description">
          Ready to transform your digital presence? Let's discuss your project and explore how we can bring your vision to life with cutting-edge technology.
        </p>
      </header>

      <div class="contact-content grid-enhanced lg:grid-cols-2 gap-16 items-start">
        <!-- Contact Form -->
        <section class="contact-form-section" data-animate="fade-up" data-animate-delay="200">
          <div class="contact-form-container bg-surface-secondary rounded-2xl p-8 shadow-xl">
            <h2 class="text-responsive-3xl font-bold text-primary mb-8">Send Us a Message</h2>
            
            <!-- Form Status Messages -->
            <div id="form-messages" class="mb-6 hidden">
              <div id="success-message" class="alert alert--success hidden" data-animate="fade-in">
                <div class="flex-enhanced">
                  <Icon name="check" size="sm" class="text-success" />
                  <span>Message sent successfully! We'll get back to you within 24 hours.</span>
                </div>
              </div>
              <div id="error-message" class="alert alert--error hidden" data-animate="fade-in">
                <div class="flex-enhanced">
                  <Icon name="alert-circle" size="sm" class="text-error" />
                  <span id="error-text">There was an error sending your message. Please try again.</span>
                </div>
              </div>
            </div>

            <form id="contact-form" class="form-enhanced space-y-enhanced">
              <div class="form-row grid-enhanced md:grid-cols-2 gap-6">
                <div class="form-group">
                  <label for="name" class="form-label">Name <span class="text-error">*</span></label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    required
                    pattern="[A-Za-z\\s]{2,50}"
                    minlength="2"
                    maxlength="50"
                    class="form-input"
                    placeholder="Your full name"
                    aria-describedby="name-error"
                    autocomplete="name"
                  />
                  <div class="form-error hidden" data-field="name"></div>
                </div>
                <div class="form-group">
                  <label for="email" class="form-label">Email <span class="text-error">*</span></label>
                  <input 
                    type="email" 
                    id="email" 
                    name="email" 
                    required
                    pattern="[^\s@]+@[^\s@]+\.[^\s@]+"
                    class="form-input"
                    placeholder="your@email.com"
                    aria-describedby="email-error"
                    autocomplete="email"
                  />
                  <div class="form-error hidden" data-field="email"></div>
                </div>
              </div>
              
              <div class="form-group">
                <label for="subject" class="form-label">Subject <span class="text-error">*</span></label>
                <input 
                  type="text" 
                  id="subject" 
                  name="subject" 
                  required
                  minlength="5"
                  maxlength="200"
                  class="form-input"
                  placeholder="Project Inquiry"
                  aria-describedby="subject-error"
                />
                <div class="form-error hidden" data-field="subject"></div>
              </div>
              
              <div class="form-group">
                <label for="service" class="form-label">Service Interested In <span class="text-error">*</span></label>
                <select
                  id="service"
                  name="service"
                  required
                  class="form-select"
                  aria-label="Select the service you're interested in"
                  aria-describedby="service-help service-error"
                  aria-required="true"
                >
                  <option value="">Select a service</option>
                  <option value="web-development">Web Development</option>
                  <option value="ai-integration">AI Integration</option>
                  <option value="tech-consulting-seo-audit">Tech Consulting & SEO Audit</option>
                  <option value="3d-printing">3D Printing Services</option>
                  <option value="other">Other</option>
                </select>
                <div id="service-help" class="sr-only">Choose the service that best matches your project needs to help us provide accurate consultation</div>
                <div class="form-error hidden" data-field="service"></div>
              </div>
              
              <div class="form-group">
                <label for="message" class="form-label">Message <span class="text-error">*</span></label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="6" 
                  required
                  minlength="10"
                  maxlength="2000"
                  class="form-textarea"
                  placeholder="Tell us about your project..."
                  aria-describedby="message-error"
                ></textarea>
                <div class="form-error hidden" data-field="message"></div>
                <div class="form-helper text-right">
                  <span id="message-count">0</span>/2000 characters
                </div>
              </div>
              
              <div class="form-group">
                <label for="files" class="form-label">Upload Files (Optional)</label>
                <div id="file-drop-zone" class="file-upload-zone">
                  <input 
                    type="file" 
                    id="files" 
                    name="files" 
                    multiple
                    accept=".pdf,.png,.jpg,.jpeg,.gif"
                    class="hidden"
                  />
                  <div class="file-upload-content text-center space-y-enhanced">
                    <Icon name="upload" size="lg" class="text-muted mx-auto" />
                    <p class="text-responsive text-muted">Drag and drop files here or click to upload</p>
                    <p class="text-responsive-sm text-muted">PDF, PNG, JPG, GIF up to 10MB</p>
                  </div>
                </div>
              </div>
              
              <div class="form-actions">
                <Button 
                  type="submit"
                  variant="primary"
                  size="lg"
                  class="btn--full"
                  aria-label="Send contact message"
                >
                  Send Message
                  <Icon name="send" size="sm" class="btn-icon" />
                </Button>
              </div>
            </form>
          </div>
        </section>

        <!-- Contact Information -->
        <section class="contact-info-section space-y-enhanced" data-animate="fade-up" data-animate-delay="400">
          <div class="contact-info-container bg-surface-secondary rounded-2xl p-8 shadow-xl">
            <h3 class="text-responsive-3xl font-bold text-primary mb-6">Let's Connect</h3>
            <div class="contact-methods space-y-enhanced">
              <div class="contact-method flex-enhanced">
                <div class="contact-method-icon icon-container-enhanced icon-container-lg bg-accent/10 rounded-lg">
                  <Icon name="mail" size="lg" class="text-primary" />
                </div>
                <div class="contact-method-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-2">Email</h4>
                  <p class="text-responsive text-muted">hi@nosytlabs.com</p>
                </div>
              </div>
              
              <div class="contact-method flex-enhanced">
                <div class="contact-method-icon icon-container-enhanced icon-container-lg bg-accent/10 rounded-lg">
                  <Icon name="clock" size="lg" class="text-primary" />
                </div>
                <div class="contact-method-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-2">Response Time</h4>
                  <p class="text-responsive text-muted">Within 24 hours</p>
                </div>
              </div>
              
              <div class="contact-method flex-enhanced">
                <div class="contact-method-icon icon-container-enhanced icon-container-lg bg-accent/10 rounded-lg">
                  <Icon name="map-pin" size="lg" class="text-primary" />
                </div>
                <div class="contact-method-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-2">Location</h4>
                  <p class="text-responsive text-muted">Remote & Global</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="contact-expectations-container bg-surface-secondary rounded-2xl p-8 shadow-xl">
            <h3 class="text-responsive-3xl font-bold text-primary mb-6">What to Expect</h3>
            <div class="expectations-list space-y-enhanced">
              <div class="expectation-item flex-enhanced">
                <div class="expectation-bullet w-2 h-2 bg-primary rounded-full mt-3 flex-shrink-0"></div>
                <div class="expectation-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-1">Initial Consultation</h4>
                  <p class="text-responsive text-muted">Free 30-minute discovery call to understand your needs</p>
                </div>
              </div>
              <div class="expectation-item flex-enhanced">
                <div class="expectation-bullet w-2 h-2 bg-primary rounded-full mt-3 flex-shrink-0"></div>
                <div class="expectation-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-1">Detailed Proposal</h4>
                  <p class="text-responsive text-muted">Comprehensive project scope, timeline, and pricing</p>
                </div>
              </div>
              <div class="expectation-item flex-enhanced">
                <div class="expectation-bullet w-2 h-2 bg-primary rounded-full mt-3 flex-shrink-0"></div>
                <div class="expectation-content">
                  <h4 class="text-responsive-lg font-semibold text-primary mb-1">Transparent Process</h4>
                  <p class="text-responsive text-muted">Regular updates and collaborative development approach</p>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
    </div>
  </main>
</MainLayout>
