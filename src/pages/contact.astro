.z-navigation { z-index: 8000; }
.z-sticky { z-index: 7000; }
.z-floating { z-index: 6000; }
.z-hero-content { z-index: 2000; }
.z-hero-particles { z-index: 1900; }
.z-hero-floating { z-index: 1800; }
