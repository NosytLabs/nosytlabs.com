<script>
  // Earnings calculator functionality
  document.addEventListener('DOMContentLoaded', function() {
    const calculateBtn = document.getElementById('calculate-btn');
    const resultsDiv = document.getElementById('results');
    const dailyEarningsEl = document.getElementById('daily-earnings');
    const monthlyEarningsEl = document.getElementById('monthly-earnings');
    const daysToPayoutEl = document.getElementById('days-to-payout');
    const annualEarningsEl = document.getElementById('annual-earnings');



    calculateBtn.addEventListener('click', function() {
      const devices = parseInt(document.getElementById('devices').value) || 1;
      const hours = parseInt(document.getElementById('hours').value) || 12;
      const referrals = parseInt(document.getElementById('referrals').value) || 0;
      const location = document.getElementById('location').value || "US";

      // Base rates (2025 updated rates)
      const ratePerGB = 0.15; // $0.15 per GB (increased from previous $0.10)

      // Data sharing rates vary by device type and usage
      const dataRates = {
        desktop: 0.02, // GB per hour (20MB)
        mobile: 0.01,  // GB per hour (10MB)
      };

      // Location multipliers (some regions earn more/less)
      const locationMultipliers = {
        "US": 1.0,
        "UK": 1.0,
        "EU": 0.9,
        "Asia": 0.7,
        "Other": 0.6
      };

      // Calculate device distribution (assuming 70% desktop, 30% mobile)
      const desktopCount = Math.ceil(devices * 0.7);
      const mobileCount = devices - desktopCount;

      // Calculate total data shared
      const desktopData = desktopCount * hours * dataRates.desktop;
      const mobileData = mobileCount * hours * dataRates.mobile;
      const totalData = desktopData + mobileData;

      // Apply location multiplier
      const multiplier = locationMultipliers[location] || locationMultipliers.Other;

      // Calculate base earnings
      const dailyBandwidthEarnings = totalData * ratePerGB * multiplier;

      // Content Delivery earnings (if applicable)
      // Assuming CD is available 70% of the time and works on desktops only
      const cdHoursPerDay = Math.min(hours, 12); // CD has diminishing returns after ~12 hours
      const cdEarnings = desktopCount * 0.06 * cdHoursPerDay * 0.7 * multiplier;

      // Lucky Pot earnings (average $0.10-0.50 per day)
      const luckyPotAvg = 0.25; // $0.25 average in 2025

      // Referral earnings (10% of referrals' earnings)
      // Assuming each referral earns $0.15 per day on average
      const avgReferralEarning = 0.15;
      const referralEarnings = referrals * avgReferralEarning * 0.1; // 10% commission

      // Calculate total daily earnings
      const totalDailyEarnings =
        dailyBandwidthEarnings +
        cdEarnings +
        luckyPotAvg +
        referralEarnings;

      // Calculate monthly and annual earnings
      const monthlyEarnings = totalDailyEarnings * 30;
      const annualEarnings = monthlyEarnings * 12;

      // Days to reach payout threshold
      const daysToPayoutThreshold = Math.ceil(20 / totalDailyEarnings);

      // Update the UI
      dailyEarningsEl.textContent = `$${totalDailyEarnings.toFixed(2)}`;
      monthlyEarningsEl.textContent = `$${monthlyEarnings.toFixed(2)}`;
      daysToPayoutEl.textContent = daysToPayoutThreshold;
      annualEarningsEl.textContent = `$${annualEarnings.toFixed(2)}`;

      // Add detailed breakdown
      const breakdownDiv = document.createElement('div');
      breakdownDiv.className = 'mt-4 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg text-sm';
      breakdownDiv.innerHTML = `
        <h5 class="font-medium mb-2 text-gray-900 dark:text-white">Earnings Breakdown:</h5>
        <div class="grid grid-cols-2 gap-2">
          <div>Bandwidth sharing:</div>
          <div class="text-right">$${dailyBandwidthEarnings.toFixed(2)}/day</div>
          <div>Content Delivery:</div>
          <div class="text-right">$${cdEarnings.toFixed(2)}/day</div>
          <div>Lucky Pot:</div>
          <div class="text-right">$${luckyPotAvg.toFixed(2)}/day</div>
          <div>Referral earnings:</div>
          <div class="text-right">$${referralEarnings.toFixed(2)}/day</div>
          <div>Data shared:</div>
          <div class="text-right">${totalData.toFixed(2)} GB/day</div>
        </div>
        <div class="mt-2 text-xs text-gray-500 dark:text-gray-400">
          Note: Actual earnings may vary based on network conditions, device usage, and market demand.
        </div>
      `;

      // Remove existing breakdown if any
      const existingBreakdown = resultsDiv.querySelector('.mt-4.p-4');
      if (existingBreakdown) {
        existingBreakdown.remove();
      }

      // Add the new breakdown
      resultsDiv.appendChild(breakdownDiv);

      // Show results
      resultsDiv.classList.remove('hidden');
    });
  });
</script>

