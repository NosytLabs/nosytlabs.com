---
/**
 * Consulting Service Detail Page
 * 
 * Comprehensive page showcasing consulting services with detailed expertise areas,
 * case studies, pricing, and conversion-optimized CTAs
 */

import ServiceDetail from '../../components/services/ServiceDetail.astro';
import { consultingServices } from '../../config/services/consulting';
import { allServices } from '../../config/services';

// Get the main consulting service
const service = consultingServices[0]; // Strategic Consulting

// Get related services (excluding current service)
const relatedServices = allServices.filter(s => 
  s.category !== service.category || s.id !== service.id
).slice(0, 3);

// Service-specific testimonials
const testimonials = [
  {
    name: "Jennifer Walsh",
    role: "CEO",
    company: "ScaleUp Ventures",
    content: "NosytLabs' strategic consulting helped us identify key technology gaps and develop a roadmap that accelerated our growth by 300% in just 18 months.",
    rating: 5,
    image: "/images/testimonials/jennifer-walsh.jpg"
  },
  {
    name: "Marcus Johnson",
    role: "VP of Technology",
    company: "Enterprise Corp",
    content: "Their technical advisory services were instrumental in our digital transformation. The team's expertise saved us from costly mistakes and optimized our tech stack.",
    rating: 5,
    image: "/images/testimonials/marcus-johnson.jpg"
  },
  {
    name: "Anna Rodriguez",
    role: "Founder",
    company: "TechStartup Inc.",
    content: "The strategic insights and actionable recommendations we received were game-changing. Our product-market fit improved dramatically following their guidance.",
    rating: 5,
    image: "/images/testimonials/anna-rodriguez.jpg"
  }
];

// Service-specific FAQs
const faqs = [
  {
    question: "What areas do your consulting services cover?",
    answer: "We provide strategic technology consulting, digital transformation guidance, architecture reviews, team scaling advice, product strategy, and technical due diligence for investments."
  },
  {
    question: "How do you approach strategic consulting engagements?",
    answer: "We start with a comprehensive assessment of your current state, identify opportunities and challenges, develop actionable strategies, and provide ongoing support for implementation."
  },
  {
    question: "What's the typical duration of a consulting engagement?",
    answer: "Engagements vary from short-term assessments (2-4 weeks) to long-term strategic partnerships (6-12 months). We tailor the approach based on your specific needs and objectives."
  },
  {
    question: "Do you provide hands-on implementation support?",
    answer: "Yes, we offer both strategic guidance and hands-on implementation support. We can work alongside your team or provide complete implementation services as needed."
  },
  {
    question: "How do you measure the success of consulting projects?",
    answer: "We establish clear KPIs and success metrics upfront, provide regular progress reports, and conduct post-engagement reviews to ensure objectives are met and value is delivered."
  }
];

// Consulting process steps
const processSteps = [
  {
    step: 1,
    title: "Current State Assessment",
    description: "Comprehensive analysis of your technology stack, processes, team capabilities, and business objectives.",
    duration: "1-2 weeks"
  },
  {
    step: 2,
    title: "Strategy Development",
    description: "Create detailed strategic recommendations with prioritized action items and implementation roadmaps.",
    duration: "2-4 weeks"
  },
  {
    step: 3,
    title: "Implementation Planning",
    description: "Develop detailed implementation plans with timelines, resource requirements, and risk mitigation strategies.",
    duration: "1-2 weeks"
  },
  {
    step: 4,
    title: "Ongoing Support",
    description: "Provide continuous guidance, progress monitoring, and strategic adjustments throughout implementation.",
    duration: "Ongoing"
  }
];
---

<ServiceDetail 
  service={service}
  testimonials={testimonials}
  faqs={faqs}
  relatedServices={relatedServices}
  processSteps={processSteps}
/>