---
import MainLayout from '../../layouts/MainLayout.astro';
import EnhancedHero from '../../components/enhanced/EnhancedHero.astro';
import EnhancedCTA from '../../components/enhanced/EnhancedCTA.astro';

const pageTitle = "Support Services | NosytLabs";
const pageDescription = "Comprehensive technical support and maintenance services to keep your web applications running smoothly and efficiently.";

const heroData = {
  title: "Technical Support & Maintenance",
  subtitle: "Keep Your Applications Running Smoothly",
  description: "Our comprehensive support services ensure your web applications remain secure, fast, and up-to-date. From bug fixes to performance optimization, we've got you covered.",
  primaryCTA: {
    text: "Get Support",
    href: "/contact",
    variant: "primary"
  },
  secondaryCTA: {
    text: "View Plans",
    href: "#support-plans",
    variant: "outline"
  },
  features: [
    "24/7 Technical Support",
    "Performance Monitoring",
    "Security Updates & Patches",
    "Bug Fixes & Maintenance"
  ]
};

const supportServices = [
  {
    title: "Emergency Support",
    description: "Critical issue resolution with 1-hour response time for production emergencies.",
    features: [
      "24/7 Emergency Hotline",
      "1-Hour Response Time",
      "Critical Bug Fixes",
      "Server Issue Resolution"
    ],
    price: "$200/month",
    popular: false
  },
  {
    title: "Standard Support",
    description: "Regular maintenance and support for ongoing web application needs.",
    features: [
      "Business Hours Support",
      "4-Hour Response Time",
      "Monthly Updates",
      "Performance Monitoring",
      "Security Patches",
      "Bug Fixes"
    ],
    price: "$500/month",
    popular: true
  },
  {
    title: "Premium Support",
    description: "Comprehensive support with proactive monitoring and optimization.",
    features: [
      "24/7 Priority Support",
      "30-Minute Response Time",
      "Proactive Monitoring",
      "Performance Optimization",
      "Security Audits",
      "Feature Enhancements",
      "Dedicated Support Manager"
    ],
    price: "$1,200/month",
    popular: false
  }
];

const supportProcess = [
  {
    step: "01",
    title: "Issue Reporting",
    description: "Submit support tickets through our portal or emergency hotline for critical issues."
  },
  {
    step: "02",
    title: "Rapid Assessment",
    description: "Our team quickly evaluates the issue and provides an initial response within SLA timeframes."
  },
  {
    step: "03",
    title: "Resolution & Testing",
    description: "We implement fixes and thoroughly test to ensure the issue is completely resolved."
  },
  {
    step: "04",
    title: "Follow-up & Prevention",
    description: "Post-resolution follow-up and recommendations to prevent similar issues in the future."
  }
];
---

<MainLayout title={pageTitle} description={pageDescription}>
  <EnhancedHero {heroData} />

  <!-- Support Services Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 font-heading">Support Plans</h2>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
          Choose the support level that best fits your needs and budget
        </p>
      </div>

      <div id="support-plans" class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {supportServices.map((service) => (
          <div class={`relative p-8 rounded-2xl border transition-all duration-300 hover:shadow-xl ${
            service.popular 
              ? 'border-primary bg-primary/5 scale-105' 
              : 'border-border bg-card hover:border-primary/50'
          }`}>
            {service.popular && (
              <div class="absolute -top-4 left-1/2 transform -translate-x-1/2">
                <span class="bg-primary text-primary-foreground px-4 py-2 rounded-full text-sm font-semibold">
                  Most Popular
                </span>
              </div>
            )}
            
            <div class="text-center mb-6">
              <h3 class="text-2xl font-bold text-foreground mb-2">{service.title}</h3>
              <p class="text-muted-foreground mb-4">{service.description}</p>
              <div class="text-3xl font-bold text-primary">{service.price}</div>
            </div>

            <ul class="space-y-3 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-center text-muted-foreground">
                  <svg class="w-5 h-5 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

            <a 
              href="/contact" 
              class={`block w-full text-center py-3 px-6 rounded-lg font-semibold transition-colors ${
                service.popular
                  ? 'bg-primary text-primary-foreground hover:bg-primary/90'
                  : 'bg-secondary text-secondary-foreground hover:bg-secondary/80'
              }`}
            >
              Get Started
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Support Process Section -->
  <section class="py-20 bg-muted/30">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 font-heading">Our Support Process</h2>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
          A streamlined approach to resolving your technical issues quickly and effectively
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {supportProcess.map((step, index) => (
          <div class="text-center">
            <div class="relative mb-6">
              <div class="w-16 h-16 bg-primary text-primary-foreground rounded-full flex items-center justify-center text-xl font-bold mx-auto mb-4">
                {step.step}
              </div>
              {index < supportProcess.length - 1 && (
                <div class="hidden lg:block absolute top-8 left-full w-full h-0.5 bg-border transform -translate-y-1/2"></div>
              )}
            </div>
            <h3 class="text-xl font-semibold text-foreground mb-3">{step.title}</h3>
            <p class="text-muted-foreground">{step.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 font-heading">Support FAQ</h2>
        <p class="text-xl text-muted-foreground max-w-3xl mx-auto">
          Common questions about our support services
        </p>
      </div>

      <div class="max-w-4xl mx-auto space-y-6">
        <div class="border border-border rounded-lg p-6">
          <h3 class="text-lg font-semibold text-foreground mb-2">What's included in the response time?</h3>
          <p class="text-muted-foreground">Response time refers to our initial acknowledgment and assessment of your issue. Resolution time varies based on complexity but we provide regular updates throughout the process.</p>
        </div>

        <div class="border border-border rounded-lg p-6">
          <h3 class="text-lg font-semibold text-foreground mb-2">Do you provide support for third-party integrations?</h3>
          <p class="text-muted-foreground">Yes, we support applications we've built that include third-party integrations. For issues originating from external services, we'll help coordinate with the relevant providers.</p>
        </div>

        <div class="border border-border rounded-lg p-6">
          <h3 class="text-lg font-semibold text-foreground mb-2">Can I upgrade or downgrade my support plan?</h3>
          <p class="text-muted-foreground">Absolutely! You can change your support plan at any time. Upgrades take effect immediately, while downgrades take effect at the next billing cycle.</p>
        </div>

        <div class="border border-border rounded-lg p-6">
          <h3 class="text-lg font-semibold text-foreground mb-2">What happens if I exceed my support hours?</h3>
          <p class="text-muted-foreground">Additional support hours are billed at our standard hourly rate. We'll always notify you before exceeding your plan limits and get approval for additional work.</p>
        </div>
      </div>
    </div>
  </section>

  <EnhancedCTA />
</MainLayout>
