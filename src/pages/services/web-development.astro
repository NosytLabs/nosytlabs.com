---
import MainLayout from '../../layouts/MainLayout.astro';
import EnhancedHero from '../../components/enhanced/EnhancedHero.astro';
import EnhancedCTA from '../../components/enhanced/EnhancedCTA.astro';

const pageTitle = "Web Development Services | NosytLabs";
const pageDescription = "Professional web development services with modern frameworks, responsive design, and AI integration. Transform your digital presence with our expert team.";

const heroData = {
  title: "Professional Web Development Services",
  subtitle: "Transform Your Digital Presence",
  description: "We create modern, responsive websites and web applications using cutting-edge technologies. From concept to deployment, we deliver exceptional digital experiences that drive results.",
  primaryCTA: {
    text: "Start Your Project",
    href: "/contact",
    variant: "primary"
  },
  secondaryCTA: {
    text: "View Portfolio",
    href: "/portfolio",
    variant: "outline"
  },
  features: [
    "Modern React & Astro Development",
    "Responsive Design & Mobile-First",
    "SEO Optimization & Performance",
    "AI Integration & Automation"
  ]
};

const services = [
  {
    title: "Custom Web Applications",
    description: "Full-stack web applications built with modern frameworks like React, Next.js, and Astro.",
    features: [
      "React & Next.js Development",
      "API Integration & Development",
      "Database Design & Management",
      "Authentication & Security"
    ],
    price: "Starting at $2,500",
    timeline: "4-8 weeks"
  },
  {
    title: "E-commerce Solutions",
    description: "Complete e-commerce platforms with payment processing, inventory management, and analytics.",
    features: [
      "Shopify & WooCommerce",
      "Payment Gateway Integration",
      "Inventory Management",
      "Analytics & Reporting"
    ],
    price: "Starting at $3,500",
    timeline: "6-10 weeks"
  },
  {
    title: "Website Redesign & Optimization",
    description: "Transform your existing website with modern design, improved performance, and better user experience.",
    features: [
      "UI/UX Design Overhaul",
      "Performance Optimization",
      "SEO Improvements",
      "Mobile Responsiveness"
    ],
    price: "Starting at $1,800",
    timeline: "3-6 weeks"
  }
];

const technologies = [
  {
    category: "Frontend",
    items: ["React", "Next.js", "Astro", "TypeScript", "Tailwind CSS", "Framer Motion"]
  },
  {
    category: "Backend",
    items: ["Node.js", "Python", "PostgreSQL", "MongoDB", "Redis", "GraphQL"]
  },
  {
    category: "Tools & Services",
    items: ["Vercel", "AWS", "Docker", "GitHub Actions", "Stripe", "Sanity CMS"]
  }
];

const process = [
  {
    step: "01",
    title: "Discovery & Planning",
    description: "We start by understanding your business goals, target audience, and technical requirements.",
    duration: "1-2 weeks"
  },
  {
    step: "02",
    title: "Design & Prototyping",
    description: "Create wireframes, mockups, and interactive prototypes to visualize the final product.",
    duration: "2-3 weeks"
  },
  {
    step: "03",
    title: "Development & Testing",
    description: "Build your application with clean, scalable code and comprehensive testing.",
    duration: "4-8 weeks"
  },
  {
    step: "04",
    title: "Launch & Support",
    description: "Deploy your application and provide ongoing maintenance and support.",
    duration: "Ongoing"
  }
];

const faqs = [
  {
    question: "What technologies do you use for web development?",
    answer: "We specialize in modern technologies including React, Next.js, Astro, TypeScript, and Tailwind CSS for frontend development. For backend, we use Node.js, Python, and various databases like PostgreSQL and MongoDB."
  },
  {
    question: "How long does a typical web development project take?",
    answer: "Project timelines vary based on complexity. Simple websites take 3-4 weeks, while complex web applications can take 8-12 weeks. We provide detailed timelines during the planning phase."
  },
  {
    question: "Do you provide ongoing maintenance and support?",
    answer: "Yes, we offer comprehensive maintenance packages including security updates, performance monitoring, content updates, and technical support to keep your website running smoothly."
  },
  {
    question: "Can you integrate AI features into my website?",
    answer: "Absolutely! We specialize in AI integration including chatbots, recommendation systems, automated content generation, and intelligent data analysis to enhance user experience."
  },
  {
    question: "What's included in your web development service?",
    answer: "Our service includes responsive design, SEO optimization, performance optimization, security implementation, content management system setup, and comprehensive testing across all devices and browsers."
  }
];
---

<MainLayout title={pageTitle} description={pageDescription}>
  <!-- Enhanced Hero Section -->
  <EnhancedHero {...heroData} />

  <!-- Services Overview -->
  <section class="py-20 bg-muted/30">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold text-foreground mb-6">
          Our Web Development Services
        </h2>
        <p class="text-xl text-muted-foreground">
          From simple websites to complex web applications, we deliver solutions that drive business growth.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service) => (
          <div class="glass p-8 rounded-xl hover:shadow-lg transition-all duration-300">
            <h3 class="text-2xl font-bold text-foreground mb-4">{service.title}</h3>
            <p class="text-muted-foreground mb-6">{service.description}</p>
            
            <ul class="space-y-2 mb-6">
              {service.features.map((feature) => (
                <li class="flex items-center text-sm text-muted-foreground">
                  <svg class="icon-xs text-primary mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>
            
            <div class="border-t pt-6">
              <div class="flex justify-between items-center mb-4">
                <span class="text-sm text-muted-foreground">Timeline:</span>
                <span class="text-sm font-medium text-foreground">{service.timeline}</span>
              </div>
              <div class="text-2xl font-bold text-primary mb-4">{service.price}</div>
              <a 
                href="/contact" 
                class="w-full inline-flex items-center justify-center px-6 py-3 bg-gradient-primary text-primary-foreground font-semibold rounded-lg hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 transition-all duration-300"
              >
                Get Started
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold text-foreground mb-6">
          Technologies We Use
        </h2>
        <p class="text-xl text-muted-foreground">
          We leverage the latest technologies to build fast, secure, and scalable web solutions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        {technologies.map((tech) => (
          <div class="text-center">
            <h3 class="text-2xl font-bold text-foreground mb-6">{tech.category}</h3>
            <div class="space-y-3">
              {tech.items.map((item) => (
                <div class="inline-block px-4 py-2 bg-muted rounded-full text-sm font-medium text-foreground mr-2 mb-2">
                  {item}
                </div>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-20 bg-muted/30">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl font-bold text-foreground mb-6">
          Our Development Process
        </h2>
        <p class="text-xl text-muted-foreground">
          A proven methodology that ensures successful project delivery every time.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        {process.map((step, index) => (
          <div class="relative">
            {index < process.length - 1 && (
              <div class="hidden lg:block absolute top-12 left-full w-full h-0.5 bg-border z-0"></div>
            )}
            <div class="relative z-10 text-center">
              <div class="w-24 h-24 bg-gradient-primary rounded-full flex items-center justify-center mx-auto mb-6">
                <span class="text-2xl font-bold text-primary-foreground">{step.step}</span>
              </div>
              <h3 class="text-xl font-bold text-foreground mb-4">{step.title}</h3>
              <p class="text-muted-foreground mb-4">{step.description}</p>
              <span class="text-sm font-medium text-primary">{step.duration}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Pricing CTA Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="glass p-12 rounded-2xl text-center">
          <div class="max-w-2xl mx-auto">
            <h2 class="text-4xl font-bold text-foreground mb-6">
              Ready to Transform Your Digital Presence?
            </h2>
            <p class="text-xl text-muted-foreground mb-8">
              Let's discuss your project and create a custom solution that drives results for your business.
            </p>
            
            <div class="bg-muted/50 rounded-xl p-8 mb-8">
              <h3 class="text-xl font-bold text-foreground mb-2">Ready to Get Started?</h3>
              <div class="flex items-center justify-center gap-4 mb-4">
                <span class="text-lg text-muted-foreground">AI-Enhanced Web Development</span>
                <span class="text-2xl font-bold text-primary">$1,200+</span>
              </div>
              <a 
                href="/contact" 
                class="inline-flex items-center px-8 py-4 bg-gradient-primary text-primary-foreground text-lg font-semibold rounded-lg hover:shadow-lg hover:scale-105 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-offset-2 transition-all duration-300 group"
              >
                <span>Start Your Project</span>
                <svg 
                  class="icon-sm ml-2 group-hover:translate-x-1 transition-transform duration-300" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
              <p class="text-sm text-muted-foreground mt-2">30-day money-back guarantee</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-20 bg-background">
    <div class="container mx-auto px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-4xl font-bold text-foreground mb-6">
            Frequently Asked Questions
          </h2>
          <p class="text-xl text-muted-foreground">
            Get answers to common questions about our web development services.
          </p>
        </div>

        <div class="space-y-6">
          {faqs.map((faq, index) => (
            <div class="glass rounded-xl overflow-hidden">
              <button 
                class="w-full px-8 py-6 text-left flex items-center justify-between hover:bg-muted/30 transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-accent focus:ring-inset"
                type="button"
                aria-expanded="false"
                data-faq-trigger={index}
              >
                <h3 class="text-lg font-semibold text-foreground pr-4">{faq.question}</h3>
                <svg 
                  class="icon-sm text-muted-foreground transition-transform duration-200" 
                  fill="none" 
                  stroke="currentColor" 
                  viewBox="0 0 24 24"
                  data-faq-icon={index}
                >
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                </svg>
              </button>
              <div 
                class="px-8 pb-6 text-muted-foreground hidden"
                data-faq-content={index}
              >
                <p>{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Enhanced CTA -->
  <EnhancedCTA />
</MainLayout>

<script>
  // FAQ functionality
  document.addEventListener('DOMContentLoaded', () => {
    const faqTriggers = document.querySelectorAll('[data-faq-trigger]');
    
    faqTriggers.forEach((trigger) => {
      trigger.addEventListener('click', () => {
        const index = trigger.getAttribute('data-faq-trigger');
        const content = document.querySelector(`[data-faq-content="${index}"]`);
        const icon = document.querySelector(`[data-faq-icon="${index}"]`);
        
        if (content && icon) {
          const isOpen = !content.classList.contains('hidden');
          
          // Close all other FAQs
          faqTriggers.forEach((otherTrigger) => {
            const otherIndex = otherTrigger.getAttribute('data-faq-trigger');
            const otherContent = document.querySelector(`[data-faq-content="${otherIndex}"]`);
            const otherIcon = document.querySelector(`[data-faq-icon="${otherIndex}"]`);
            
            if (otherContent && otherIcon && otherIndex !== index) {
              otherContent.classList.add('hidden');
              otherIcon.classList.remove('rotate-180');
              otherTrigger.setAttribute('aria-expanded', 'false');
            }
          });
          
          // Toggle current FAQ
          if (isOpen) {
            content.classList.add('hidden');
            icon.classList.remove('rotate-180');
            trigger.setAttribute('aria-expanded', 'false');
          } else {
            content.classList.remove('hidden');
            icon.classList.add('rotate-180');
            trigger.setAttribute('aria-expanded', 'true');
          }
        }
      });
    });
  });
</script>