---
import MainLayout from '@/layouts/MainLayout.astro';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';
import SectionHeader from '@/components/layout/SectionHeader.astro';
import { getCollection, getEntryBySlug } from 'astro:content';
import { SITE_CONFIG } from '@/lib/constants';

// Get Web3 service details
const web3Service = await getEntryBySlug('services', 'web3-blockchain-integration');

// Structured data for Web3 page
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Web3 & Blockchain Integration - Solana Development",
  "description": web3Service.data.description,
  "url": `${SITE_CONFIG.BASE_URL}/services/web3`,
  "provider": {
    "@type": "Organization",
    "name": "NOSYT Labs"
  }
};
---

<MainLayout 
  title="Solana Web3 Development - Smart Contracts & dApps"
  description="Professional Solana blockchain development. Build smart contracts, tokens, NFT platforms, and DeFi applications with low fees and instant transactions."
  keywords={["Solana development", "Web3", "blockchain", "smart contracts", "dApp development", "SPL tokens", "NFT marketplace"]}
  jsonLd={jsonLd}
>
  <script type="application/ld+json" is:inline set:html={JSON.stringify(jsonLd)} />

  <main>
    <!-- Hero Section -->
    <Section background="gradient" spacing="md">
      <Container size="standard">
        <div class="text-center max-w-4xl mx-auto">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
            <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 24 24">
              <circle cx="12" cy="12" r="10" />
            </svg>
            <span class="text-sm font-semibold text-primary uppercase tracking-wide">Web3 Development</span>
          </div>
          
          <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
            Solana Blockchain Development
          </h1>
          
          <p class="text-xl lg:text-2xl text-muted-foreground leading-relaxed mb-8">
            Build fast, low-cost Web3 applications on Solana. Smart contracts, tokens, NFTs, DeFi protocols, and decentralized applications‚Äîall with blazing-fast transactions and minimal fees.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-5 justify-center">
            <a href="/contact?service=web3-integration" class="inline-flex items-center justify-center px-10 py-5 text-lg font-bold rounded-2xl bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-2xl hover:shadow-3xl hover:scale-105 active:scale-95 transition-all duration-300">
              Start Your Web3 Project
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
              </svg>
            </a>
            <a href="#features" class="inline-flex items-center justify-center px-10 py-5 text-lg font-semibold rounded-2xl border-2 border-default-300 hover:border-primary hover:bg-primary/10 hover:scale-105 active:scale-95 transition-all duration-300 shadow-md hover:shadow-lg">
              Learn More
              <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7"/>
              </svg>
            </a>
          </div>
        </div>
      </Container>
    </Section>

    <!-- Why Solana Section -->
    <Section background="muted" spacing="md">
      <Container size="standard">
        <SectionHeader
          title="Why Build on Solana?"
          subtitle="Fast, cheap, and scalable blockchain for Web3 applications"
          level={2}
          align="center"
        />
        
        <div class="grid md:grid-cols-3 gap-8 mt-12">
          <div class="p-8 rounded-2xl border border-border/40 hover:border-primary/40 transition-colors">
            <div class="text-4xl font-bold text-primary mb-4">400ms</div>
            <h3 class="text-xl font-bold mb-3">Lightning Fast</h3>
            <p class="text-muted-foreground">Block confirmation in milliseconds. Ethereum takes 12+ seconds.</p>
          </div>
          
          <div class="p-8 rounded-2xl border border-border/40 hover:border-primary/40 transition-colors">
            <div class="text-4xl font-bold text-primary mb-4">$0.0002</div>
            <h3 class="text-xl font-bold mb-3">Ultra Low Fees</h3>
            <p class="text-muted-foreground">Transactions cost less than a penny. Ethereum: $5-50.</p>
          </div>
          
          <div class="p-8 rounded-2xl border border-border/40 hover:border-primary/40 transition-colors">
