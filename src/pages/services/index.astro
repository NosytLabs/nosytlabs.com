---
import HeroUILayout from '../../layouts/HeroUILayout.astro';
import { HeroUIServiceCard } from '../../components/ui/HeroUIServiceCard.tsx';
import { getCollection } from 'astro:content';

const services = await getCollection('services');
---

<HeroUILayout
  title="Services - NOSYT Labs"
  description="Professional web development and AI integration services"
>
  <div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold mb-8">Our Services</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {services.map((service) => (
        <HeroUIServiceCard 
          title={service.data.title}
          description={service.data.description}
          features={service.data.features || []}
          price={service.data.price}
          icon={service.data.icon}
          href={`/services/${service.slug}/`}
          client:load
        />
      ))}
    </div>
  </div>
</HeroUILayout>