---
import MainLayout from '@/layouts/MainLayout.astro';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';
import SectionHeader from '@/components/layout/SectionHeader.astro';
import { HeroUIWrapper } from '@/components/providers/HeroUIWrapper';
import ServicesHeroUI from '@/components/content/ServicesHeroUI';
import { getCollection } from 'astro:content';
import { SITE_CONFIG } from '@/lib/constants';

const services = await getCollection('services');

// Structured data for services page
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": "NOSYT Labs Services",
  "description": "Professional web development, AI integration, and digital solutions",
  "url": `${SITE_CONFIG.BASE_URL}/services`,
  "numberOfItems": services.length,
  "itemListElement": services.map((service, index) => ({
    "@type": "ListItem",
    "position": index + 1,
    "item": {
      "@type": "Service",
      "name": service.data.title,
      "description": service.data.description,
      "provider": {
        "@type": "Organization",
        "name": "NOSYT Labs"
      }
    }
  }))
};
---

<MainLayout 
  title="Services - NOSYT Labs | Web Development & AI Integration"
  description="Professional web development, AI integration, mobile apps, and digital solutions. Expert services to help your business grow with modern technology."
  keywords={["web development services", "AI integration", "mobile app development", "digital solutions", "tech consulting", "rapid prototyping"]}
  jsonLd={jsonLd}
>
  <!-- Hero Section -->
  <Section background="gradient" spacing="md">
    <Container size="standard">
      <div class="text-center max-w-5xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
          <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <span class="text-sm font-semibold text-primary uppercase tracking-wide">Our Services</span>
        </div>
        
        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight mb-6">
          Professional Digital Solutions
        </h1>
        
        <p class="text-xl lg:text-2xl text-muted-foreground leading-relaxed mb-8">
          From web development to AI integration, we deliver modern solutions that drive real results for your business.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-5 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center px-10 py-5 text-lg font-bold rounded-2xl bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-2xl hover:shadow-3xl hover:scale-105 active:scale-95 transition-all duration-300">
            Get Started
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
            </svg>
          </a>
          <a href="#services" class="inline-flex items-center justify-center px-10 py-5 text-lg font-semibold rounded-2xl border-2 border-default-300 hover:border-primary hover:bg-primary/10 hover:scale-105 active:scale-95 transition-all duration-300 shadow-md hover:shadow-lg">
            Browse Services
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 9l-7 7-7-7"/>
            </svg>
          </a>
        </div>
      </div>
    </Container>
  </Section>

  <!-- Services Grid Section -->
  <Section background="default" spacing="md" id="services">
    <Container size="standard">
      <HeroUIWrapper client:load>
        <ServicesHeroUI services={services} client:load />
      </HeroUIWrapper>
    </Container>
  </Section>

  <!-- Why Choose Us Section -->
  <Section background="muted" spacing="md">
    <Container size="standard">
      <SectionHeader 
        title="Why Choose NOSYT Labs"
        subtitle="What makes us different"
        level={2}
        align="center"
      />
      
      <div class="grid-responsive-4 max-w-none">
        <div class="card-professional group p-6 md:p-8 text-center">
          <div class="card-icon-wrapper w-16 h-16 md:w-18 md:h-18 mx-auto mb-5">
            <svg class="w-8 h-8 md:w-9 md:h-9 text-primary group-hover:text-accent transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M13 10V3L4 14h7v7l9-11h-7z"/>
            </svg>
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-3 group-hover:text-primary transition-colors">Fast Delivery</h3>
          <p class="text-sm md:text-base text-muted-foreground leading-relaxed">AI-assisted development for rapid turnaround without compromising quality</p>
        </div>
        
        <div class="card-professional group p-6 md:p-8 text-center">
          <div class="card-icon-wrapper w-16 h-16 md:w-18 md:h-18 mx-auto mb-5">
            <svg class="w-8 h-8 md:w-9 md:h-9 text-primary group-hover:text-accent transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
            </svg>
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-3 group-hover:text-primary transition-colors">Affordable Rates</h3>
          <p class="text-sm md:text-base text-muted-foreground leading-relaxed">Solo developer pricing with enterprise-quality results</p>
        </div>
        
        <div class="card-professional group p-6 md:p-8 text-center">
          <div class="card-icon-wrapper w-16 h-16 md:w-18 md:h-18 mx-auto mb-5">
            <svg class="w-8 h-8 md:w-9 md:h-9 text-primary group-hover:text-accent transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-3 group-hover:text-primary transition-colors">Proven Results</h3>
          <p class="text-sm md:text-base text-muted-foreground leading-relaxed">47 successful deployments with measurable business impact</p>
        </div>
        
        <div class="card-professional group p-6 md:p-8 text-center">
          <div class="card-icon-wrapper w-16 h-16 md:w-18 md:h-18 mx-auto mb-5">
            <svg class="w-8 h-8 md:w-9 md:h-9 text-primary group-hover:text-accent transition-colors duration-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="2.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/>
            </svg>
          </div>
          <h3 class="text-lg md:text-xl font-bold mb-3 group-hover:text-primary transition-colors">Direct Communication</h3>
          <p class="text-sm md:text-base text-muted-foreground leading-relaxed">Work directly with the developer, no middlemen or account managers</p>
        </div>
      </div>
    </Container>
  </Section>

  <!-- CTA Section -->
  <Section background="gradient" spacing="md">
    <Container size="standard">
      <div class="text-center max-w-4xl mx-auto">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6">
          Ready to Start Your Project?
        </h2>
        <p class="text-xl text-muted-foreground mb-8">
          Let's discuss your needs and create a solution that drives real results for your business.
        </p>
        <a href="/contact" class="inline-flex items-center justify-center px-12 py-6 text-xl font-bold rounded-2xl bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-2xl hover:shadow-3xl hover:scale-105 active:scale-95 transition-all duration-300">
          Get Free Consultation
          <svg class="w-6 h-6 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>
      </div>
    </Container>
  </Section>
</MainLayout>
