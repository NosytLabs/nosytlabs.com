---
import Layout from '../../layouts/Layout.astro';
import ServicePageLayout from '../../components/ServicePageLayout.astro';
---

<Layout title="E-commerce Solutions | Nosyt Labs" description="Build powerful online stores with our comprehensive e-commerce solutions. Custom shopping platforms, payment integration, and scalable architecture.">
  <ServicePageLayout
    title="E-commerce"
    subtitle="Solutions"
    description="Build powerful, scalable online stores that convert visitors into customers. Our comprehensive e-commerce solutions include custom shopping platforms, secure payment processing, and advanced analytics."
    primaryCTA={{
      text: "Start Your Store",
      href: "/contact?service=E-commerce Solutions",
      price: "$4,500"
    }}
    secondaryCTA={{
      text: "View E-commerce Portfolio",
      href: "/projects?category=ecommerce"
    }}
    benefits={[
      {
        metric: "150%",
        description: "Average increase in online sales"
      },
      {
        metric: "99.9%",
        description: "Uptime with secure hosting"
      },
      {
        metric: "<2s",
        description: "Average page load time"
      }
    ]}
    features={[
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4m0 0L7 13m0 0l-1.1 5M6 18a2 2 0 100 4 2 2 0 000-4zm10 0a2 2 0 100 4 2 2 0 000-4z"></path></svg>',
        title: "Custom Shopping Cart",
        description: "Advanced shopping cart functionality with wishlist, comparison tools, and abandoned cart recovery."
      },
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 9V7a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2m2 4h10a2 2 0 002-2v-6a2 2 0 00-2-2H9a2 2 0 00-2 2v6a2 2 0 002 2zm7-5a2 2 0 11-4 0 2 2 0 014 0z"></path></svg>',
        title: "Secure Payment Processing",
        description: "Multiple payment gateways including Stripe, PayPal, and cryptocurrency with PCI compliance."
      },
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4-8-4m16 0v10l-8 4-8-4V7"></path></svg>',
        title: "Inventory Management",
        description: "Real-time inventory tracking, automated stock alerts, and multi-warehouse support."
      },
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path></svg>',
        title: "Analytics & Reporting",
        description: "Comprehensive sales analytics, customer insights, and performance tracking dashboards."
      },
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"></path></svg>',
        title: "SEO Optimization",
        description: "Built-in SEO tools, structured data, and performance optimization for better search rankings."
      },
      {
        icon: '<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path></svg>',
        title: "Mobile Commerce",
        description: "Fully responsive design with mobile-optimized checkout and progressive web app features."
      }
    ]}
  >
    <!-- Additional E-commerce Specific Content -->
    <section class="py-20 bg-muted/30">
      <div class="container mx-auto px-6">
        <div class="max-w-6xl mx-auto">
          <div class="text-center mb-16">
            <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-4 font-heading">
              E-commerce <span class="text-primary">Platforms</span>
            </h2>
            <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
              We work with leading e-commerce platforms and custom solutions
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
            <div class="text-center p-6 bg-background rounded-xl border border-border/50">
              <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"/>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-foreground mb-2">Shopify Plus</h3>
              <p class="text-sm text-muted-foreground">Enterprise-grade platform</p>
            </div>
            
            <div class="text-center p-6 bg-background rounded-xl border border-border/50">
              <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"/>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-foreground mb-2">WooCommerce</h3>
              <p class="text-sm text-muted-foreground">WordPress integration</p>
            </div>
            
            <div class="text-center p-6 bg-background rounded-xl border border-border/50">
              <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"/>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-foreground mb-2">Magento</h3>
              <p class="text-sm text-muted-foreground">Advanced customization</p>
            </div>
            
            <div class="text-center p-6 bg-background rounded-xl border border-border/50">
              <div class="w-16 h-16 bg-primary/10 rounded-xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-primary" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2L2 7v10c0 5.55 3.84 9.74 9 11 5.16-1.26 9-5.45 9-11V7l-10-5z"/>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-foreground mb-2">Custom Build</h3>
              <p class="text-sm text-muted-foreground">Tailored solutions</p>
            </div>
          </div>
        </div>
      </div>
    </section>
  </ServicePageLayout>
</Layout>