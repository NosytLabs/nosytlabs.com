---
/**
 * Dynamic Service Detail Pages
 *
 * This file implements dynamic service detail pages using Astro's static path generation.
 *
 * STATIC PATH GENERATION:
 * - Uses getStaticPaths() to pre-generate all service pages at build time
 * - Maps each service from src/config/services.ts to a URL parameter
 * - URL structure: /services/[slug] where slug matches service.slug
 *
 * SLUG VALIDATION METHODOLOGY:
 * - Service slugs are validated at build time through getStaticPaths()
 * - Runtime validation ensures params.name matches an existing service
 * - Invalid or missing services trigger 404 redirect
 * - Sanitization prevents XSS in dynamic content
 *
 * SEO OPTIMIZATION:
 * - Dynamic title, description, and keywords based on service data
 * - Canonical URLs for proper indexing
 * - Schema.org structured data for rich snippets
 * - Open Graph metadata for social sharing
 */

import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../layouts/base-layout.astro';
import { allServices as services, type ServiceData } from '../../config/services/index';
import { generateCanonicalUrl } from '../../utils/path-resolvers';
import ServiceCTAWrapper from '../../components/conversion/ServiceCTAWrapper.astro';
import Button from '../../components/ui/Button.astro';
// Using inline SVG icons for better performance and compatibility
import AstroIcon from '../../components/ui/AstroIcon.astro';
// Using AstroIcon components instead of inline SVGs

export const prerender = true;

export const getStaticPaths: GetStaticPaths = () => {
  return services.map(service => ({
    params: { name: service.slug },
    props: { service },
  }));
};

interface Props {
  service: ServiceData;
}

// Import logger
import { logger } from '../../utils/logger';

// Parameter extraction and validation
const { name } = Astro.params;
const { service } = Astro.props;

// Enhanced error handling with multiple validation layers
if (!name || typeof name !== 'string') {
  logger.error(`Invalid service name parameter: ${name}`, undefined, 'ServicePage');
  return Astro.redirect('/404');
}

if (!service) {
  logger.error(`Service not found for slug: ${name}`, undefined, 'ServicePage');
  return Astro.redirect('/404');
}

// Validate service data integrity
if (!service.name || !service.description || !service.slug) {
  logger.error(
    'Invalid service data structure',
    new Error(`Missing required fields in service: ${JSON.stringify(service)}`),
    'ServicePage'
  );
  return Astro.redirect('/404');
}

// Verify slug matches parameter (additional security)
if (service.slug !== name) {
  logger.error(
    'Service slug mismatch',
    new Error(`Expected: ${name}, Actual: ${service.slug}`),
    'ServicePage'
  );
  return Astro.redirect('/404');
}

// Sanitize service name for SEO contexts (prevent XSS)
const sanitizedServiceName = service.name.replace(/[<>"'&]/g, '');
const canonicalUrl = generateCanonicalUrl(service.href);

// Import SEO utilities
import { generateServiceSEO } from '../../config/seo/index';
import { generateServiceStructuredData } from '../../utils/seo';

// Generate dynamic SEO configuration
const serviceSEO = generateServiceSEO(
  sanitizedServiceName,
  service.description,
  service.category.toLowerCase().replace(/\s+/g, '-'),
  service.href
);

// Generate structured data for Schema.org
const structuredData = generateServiceStructuredData(
  sanitizedServiceName,
  service.description,
  service.category,
  service.price
).data;

// Ensure all SEO properties are properly defined
const seoTitle = serviceSEO.title || sanitizedServiceName;
const seoDescription = serviceSEO.description || service.description;
const seoKeywords = serviceSEO.keywords || [];
---

<BaseLayout
  title={seoTitle}
  description={seoDescription}
  keywords={seoKeywords}
  {canonicalUrl}
  type="service"
  {structuredData}
>
  <!-- Hero Section -->
  <section class="section-lg">
    <div
      class="relative container py-24 flex justify-center items-center"
    >
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center max-w-6xl">
        <div>
          <div class="flex items-center gap-3 mb-6">
            <div class="p-3 bg-background/10 backdrop-blur-sm rounded-lg">
              <AstroIcon name="tabler:player-play" class="w-6 h-6 text-on-primary" />
            </div>
            <span
              class="px-3 py-1 bg-primary/20 text-primary-muted rounded-full text-sm font-medium"
            >
              {service.category}
            </span>
            {
              service.popular && (
                <span class="px-3 py-1 bg-warning/20 text-warning-muted rounded-full text-sm font-medium flex items-center gap-1">
                  <AstroIcon name="tabler:star-filled" class="w-4 h-4" />
                  Popular
                </span>
              )
            }
          </div>

          <h1 id="service-title" class="text-4xl lg:text-5xl font-bold text-on-primary mb-6">
            {sanitizedServiceName}
          </h1>

          <p class="text-xl text-text-muted mb-8 leading-relaxed">
            {service.description} Our approach emphasizes sustainable, ethical practices for long-term
            impact.
          </p>

          <div class="flex flex-wrap gap-4 mb-8">
            <div class="flex items-center gap-2 text-text-muted">
              <AstroIcon name="tabler:clock" class="w-5 h-5" />
              <span>{service.timeline}</span>
            </div>
            <div class="flex items-center gap-2 text-text-muted">
              <AstroIcon name="tabler:users" class="w-5 h-5" />
              <span>{service.price}</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <Button variant="primary" class="btn-lg flex items-center justify-center gap-2">
              Get Started Today
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                <path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path>
              </svg>
            </Button>
            <Button variant="secondary" class="btn-lg"> Learn More </Button>
          </div>
        </div>

        <div class="relative">
          <div class="bg-background/10 backdrop-blur-sm rounded-2xl p-8">
            <h3 class="text-xl font-semibold text-on-primary mb-4">Key Features</h3>
            <ul class="space-y-4">
              {
                service.features.map(feature => (
                  <li class="flex items-start gap-3 text-text-muted">
                    <AstroIcon
                      name="tabler:circle-check"
                      class="w-5 h-5 text-success flex-shrink-0 mt-0.5"
                    />
                    <span>{feature}</span>
                  </li>
                ))
              }
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Detailed Features Section -->
  <section class="section-lg bg-background">
    <div class="container">
      <div class="text-center mb-16">
        <h1 class="text-4xl font-bold text-text mb-4">{service.title}</h1>
        <p class="text-xl text-text-muted mb-8">{service.description}</p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          service.detailedFeatures.map((featureGroup, index) => (
            <div class="bg-background-muted rounded-xl p-8">
              <div class="w-12 h-12 bg-primary/10 rounded-lg flex items-center justify-center mb-6">
                <span class="text-primary font-bold text-lg">{index + 1}</span>
              </div>
              <h3 class="text-xl font-semibold text-text mb-3">
                {featureGroup.title}
              </h3>
              <p class="text-text-muted mb-6">{featureGroup.description}</p>
              <ul class="space-y-2">
                {featureGroup.items.map(item => (
                  <li class="flex items-start gap-2 text-text">
                    <AstroIcon
                      name="tabler:circle-check"
                      class="w-4 h-4 text-success mt-0.5"
                    />
                    <span class="text-sm">{item}</span>
                  </li>
                ))}
              </ul>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-lg bg-background-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <h2 class="text-3xl font-bold text-center mb-12 text-text">
        Frequently Asked Questions
      </h2>
      <div class="space-y-8 max-w-4xl mx-auto">
        <div>
          <h3 class="text-xl font-semibold mb-2 text-text">
            What makes this service unique?
          </h3>
          <p class="text-text-muted">
            Our approach combines cutting-edge technology with personalized strategies to deliver
            measurable results tailored to your needs.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2 text-text">
            How long does it take to see results?
          </h3>
          <p class="text-text-muted">
            Most clients see initial improvements within the first 4-6 weeks, with significant
            results in 3 months.
          </p>
        </div>
        <div>
          <h3 class="text-xl font-semibold mb-2 text-text">
            What is your pricing structure?
          </h3>
          <p class="text-text-muted">
            We offer flexible packages starting from {service.price}, customized based on your
            specific requirements.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonial Section -->
  {
    service.testimonial && (
      <section class="section-lg bg-background">
        <div class="container max-w-4xl text-center">
          <blockquote class="text-2xl lg:text-3xl font-medium text-on-primary mb-8">
            "{service.testimonial.quote}"
          </blockquote>
          <div class="text-text-muted">
            <p class="font-semibold">{service.testimonial.author}</p>
            <p>{service.testimonial.role}</p>
          </div>
        </div>
      </section>
    )
  }

  <!-- Conversion-Optimized CTA Section -->
  <ServiceCTAWrapper serviceSlug={service.slug} serviceName={service.name} />

  <!-- Related Services -->
  <section class="section-lg bg-background-muted">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold text-text mb-4">
          Related Services
        </h2>
        <p class="text-xl text-text-muted">
          Explore our other services that complement {service.name.toLowerCase()}
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          services
            .filter(s => s.slug !== service.slug && s.category === service.category)
            .slice(0, 3)
            .map(relatedService => (
              <a
                href={relatedService.href}
                class="group bg-background rounded-xl p-6 shadow-sm hover:shadow-md transition-shadow border border-border"
              >
                <div class="flex items-center gap-3 mb-4">
                  <div class="p-2 bg-background-muted rounded-lg group-hover:bg-primary/10 transition-colors">
                    <AstroIcon
                      name="tabler:player-play"
                      class="w-5 h-5 text-text-muted"
                    />
                  </div>
                  <span class="px-2 py-1 bg-background-muted text-text-muted rounded text-sm">
                    {relatedService.category}
                  </span>
                </div>
                <h3 class="text-lg font-semibold text-text mb-2 group-hover:text-primary transition-colors">
                  {relatedService.name}
                </h3>
                <p class="text-text-muted text-sm mb-4">
                  {relatedService.shortDescription}
                </p>
                <div class="flex items-center justify-between">
                  <span class="text-sm text-text-muted">
                    {relatedService.price}
                  </span>
                  <AstroIcon
                    name="tabler:arrow-right"
                    class="w-4 h-4 text-text-muted group-hover:text-primary transition-colors"
                  />
                </div>
              </a>
            ))
        }
      </div>
    </div>
  </section>
</BaseLayout>

<script>
  // Add any client-side interactivity here if needed
  document.addEventListener('DOMContentLoaded', () => {
    // Example: Smooth scroll for anchor links
    const ctaButtons = document.querySelectorAll('button');
    ctaButtons.forEach(button => {
      button.addEventListener('click', () => {
        // Add analytics tracking or form handling here
        // CTA button clicked - can add analytics tracking here
      });
    });
  });
</script>
