---
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.slug },
    props: post,
  }));
}

const { Content } = await Astro.props.render();
const post = Astro.props;

// Generate JSON-LD for the blog post
const postJsonLd = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "mainEntityOfPage": {
    "@type": "WebPage",
    "@id": `https://nosytlabs.com/blog/${post.slug}`
  },
  "headline": post.data.title,
  "description": post.data.description,
  "datePublished": post.data.pubDate,
  "dateModified": post.data.pubDate,
  "author": {
    "@type": "Person",
    "name": post.data.author
  },
  "publisher": {
    "@type": "Organization",
    "name": "Nosyt Labs",
    "logo": {
      "@type": "ImageObject",
      "url": "https://nosytlabs.com/images/logo.svg"
    }
  },
  "image": post.data.heroImage ? `https://nosytlabs.com${post.data.heroImage}` : "https://nosytlabs.com/images/blog-default.jpg",
  "articleBody": "Content of the blog post"
};

// Get related posts (same tags)
const allPosts = await getCollection('blog');
const relatedPosts = allPosts
  .filter(p => p.slug !== post.slug && p.data.tags?.some(tag => post.data.tags?.includes(tag)))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<Layout 
  title={`${post.data.title} | Nosyt Labs Blog`}
  description={post.data.description}
  ogTitle={post.data.title}
  ogDescription={post.data.description}
  ogImage={post.data.heroImage ? `https://nosytlabs.com${post.data.heroImage}` : "https://nosytlabs.com/images/blog-default.jpg"}
  ogUrl={`https://nosytlabs.com/blog/${post.slug}`}
  twitterCard="summary_large_image"
  twitterTitle={post.data.title}
  twitterDescription={post.data.description}
  twitterImage={post.data.heroImage ? `https://nosytlabs.com${post.data.heroImage}` : "https://nosytlabs.com/images/blog-default.jpg"}
  canonicalUrl={`https://nosytlabs.com/blog/${post.slug}`}
  jsonLd={postJsonLd}
>
  <main class="relative min-h-screen bg-background overflow-hidden">
    <div class="relative container mx-auto px-4 py-24">
      <!-- Hero Image -->
      <div class="mb-12 rounded-2xl overflow-hidden shadow-xl">
        <img 
          src={post.data.heroImage} 
          alt={post.data.title}
          class="w-full h-64 md:h-96 object-cover"
        />
      </div>
      
      <article class="prose prose-invert lg:prose-xl mx-auto">
        <div class="text-center mb-12">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-foreground mb-6 font-heading">{post.data.title}</h1>
          <div class="flex flex-wrap items-center justify-center gap-4 text-muted-foreground">
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              {new Date(post.data.pubDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
            </span>
            <span class="flex items-center gap-2">
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
              {post.data.author}
            </span>
          </div>
          {post.data.tags && (
            <div class="flex flex-wrap justify-center gap-2 mt-6">
              {post.data.tags.map(tag => (
                <span class="px-3 py-1 text-sm font-medium bg-primary/10 text-primary rounded-full border border-primary/20">
                  {tag}
                </span>
              ))}
            </div>
          )}
        </div>
        <div class="p-8 bg-card border border-border rounded-2xl shadow-lg">
          {post.data.heroImage ? (
            <img 
              src={post.data.heroImage} 
              alt={post.data.title}
              class="w-full h-64 md:h-96 object-cover rounded-lg mb-8"
            />
          ) : (
            <div class="w-full h-64 md:h-96 flex items-center justify-center bg-gradient-to-r from-primary/10 to-primary/5 rounded-lg mb-8">
              <svg class="w-16 h-16 text-primary/30" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
            </div>
          )}
          <Content />
        </div>
      </article>
      
      <!-- Author Bio -->
      <div class="mt-16 p-8 bg-card border border-border rounded-2xl shadow-lg">
        <div class="flex items-center gap-6">
          <div class="w-16 h-16 rounded-full bg-primary/10 flex items-center justify-center">
            <svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <h3 class="text-xl font-bold text-foreground">About the Author</h3>
            <p class="text-muted-foreground mt-2">Nosyt Labs is a small business web development studio focused on practical, no-nonsense solutions for real business needs. We specialize in AI integration, modern web development, and performance optimization.</p>
          </div>
        </div>
      </div>
      
      <!-- Related Posts -->
      <div class="mt-16">
        <h2 class="text-3xl font-bold text-foreground mb-8 text-center font-heading">Related Articles</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {relatedPosts.length > 0 ? (
            relatedPosts.map((relatedPost) => (
              <article class="group bg-card border border-border rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-2">
                <div class="h-48 bg-gradient-to-r from-primary/10 to-primary/5"></div>
                <div class="p-6">
                  <div class="flex flex-wrap gap-2 mb-4">
                    {relatedPost.data.tags.slice(0, 2).map((tag) => (
                      <span class="px-2 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">
                        {tag}
                      </span>
                    ))}
                  </div>
                  <h3 class="text-xl font-bold text-foreground mb-3 group-hover:text-primary transition-colors">
                    <a href={`/blog/${relatedPost.slug}`}>{relatedPost.data.title}</a>
                  </h3>
                  <p class="text-muted-foreground text-sm mb-4 line-clamp-3">
                    {relatedPost.data.description}
                  </p>
                  <div class="flex items-center justify-between text-sm text-muted-foreground">
                    <span>{new Date(relatedPost.data.pubDate).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}</span>
                    <a href={`/blog/${relatedPost.slug}`} class="text-primary font-medium flex items-center gap-1 group-hover:gap-2 transition-all">
                      Read more
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))
          ) : (
            <div class="p-6 bg-card border border-border rounded-xl col-span-full text-center">
              <h3 class="text-lg font-bold text-foreground mb-2">More Web Development Insights</h3>
              <p class="text-muted-foreground text-sm mb-4">Explore our complete collection of web development articles and tutorials.</p>
              <a href="/blog" class="inline-flex items-center gap-2 text-primary font-medium mt-4 hover:text-primary/80">
                View All Posts
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          )}
        </div>
      </div>
      
      <!-- Newsletter CTA -->
      <div class="mt-16 p-8 bg-gradient-to-r from-primary/5 via-primary/10 to-primary/5 border border-primary/20 rounded-2xl text-center">
        <h2 class="text-3xl font-bold text-foreground mb-4 font-heading">Stay Updated</h2>
        <p class="text-lg text-muted-foreground mb-6 max-w-2xl mx-auto">
          Get the latest insights on AI, web development, and design delivered to your inbox.
        </p>
        <form class="max-w-md mx-auto flex gap-4">
          <input 
            type="email" 
            placeholder="Your email address" 
            class="flex-1 px-4 py-3 rounded-xl border border-border bg-background text-foreground focus:outline-none focus:ring-2 focus:ring-primary"
            required
          />
          <button 
            type="submit" 
            class="px-6 py-3 bg-primary text-primary-foreground rounded-xl font-semibold hover:bg-primary/90 transition-all duration-300 shadow-lg hover:shadow-xl"
          >
            Subscribe
          </button>
        </form>
        <p class="text-sm text-muted-foreground mt-4">
          No spam. Unsubscribe anytime.
        </p>
      </div>
    </div>
  </main>
</Layout>