---
import type { GetStaticPaths } from 'astro';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { blogPosts, getAllBlogCategories, getBlogPostsByCategory } from '../../../config/blog';
import { generateCanonicalUrl, generateBreadcrumbs, generateBlogPath } from '../../../utils/pathResolvers';

export const getStaticPaths: GetStaticPaths = () => {
  const categories = getAllBlogCategories();

  return categories.map(category => {
    return {
      params: { category: category.slug },
      props: {
        category: category.name,
        categorySlug: category.slug,
        posts: getBlogPostsByCategory(category.name)
      }
    };
  });
};

interface Props {
  category: string;
  categorySlug: string;
  posts: typeof blogPosts;
}

const { category, categorySlug, posts } = Astro.props;
const breadcrumbs = generateBreadcrumbs(`/blog/category/${categorySlug}`);
const canonicalUrl = generateCanonicalUrl(`/blog/category/${categorySlug}`);
---

<BaseLayout
  title={`${category} Articles | NosytLabs Blog`}
  description={`Explore our ${category.toLowerCase()} articles and insights. Discover the latest trends, tips, and expert guidance from NosytLabs.`}
>
  <!-- Breadcrumbs -->
  <nav class="container mx-auto px-4 py-4" aria-label="Breadcrumb">
    <ol class="flex items-center space-x-2 text-sm text-gray-600">
      {breadcrumbs.map((crumb, index) => (
        <li class="flex items-center">
          {index > 0 && <span class="mx-2 text-gray-400">/</span>}
          {index === breadcrumbs.length - 1 ? (
            <span class="text-gray-900 font-medium">{crumb.label}</span>
          ) : (
            <a href={crumb.href} class="hover:text-blue-600 transition-colors">
              {crumb.label}
            </a>
          )}
        </li>
      ))}
    </ol>
  </nav>

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-orange-900/20"></div>
    <div class="container mx-auto px-4 text-center relative z-10">
      <div class="flex items-center justify-center mb-6">
        <svg class="h-10 w-10 text-orange-400 mr-4" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h1 class="text-4xl lg:text-6xl font-bold">
          {category} Articles
        </h1>
      </div>
      <p class="text-xl text-blue-100 max-w-3xl mx-auto mb-8">
        Discover insights, trends, and expert guidance in {category.toLowerCase()}. 
        {posts.length} article{posts.length !== 1 ? 's' : ''} to explore.
      </p>
      <div class="flex items-center justify-center">
        <span class="bg-orange-500 text-white px-4 py-2 rounded-full font-semibold">
          {posts.length} Posts
        </span>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent"></div>
  </section>

  <!-- Blog Posts Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      {posts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {posts.map((post) => {
            const estimatedReadTime = Math.ceil(post.content.replace(/<[^>]*>/g, '').split(' ').length / 200);
            const postPath = generateBlogPath(post.slug);
            
            return (
              <article class="bg-white rounded-xl shadow-sm border border-gray-100 overflow-hidden hover:shadow-lg transition-all duration-300 group">
                <div class="p-6">
                  <!-- Post Meta -->
                  <div class="flex items-center text-sm text-gray-500 mb-3">
                    <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd" />
                    </svg>
                    <time datetime={post.publishDate.toISOString()}>
                      {post.publishDate.toLocaleDateString('en-US', { 
                        year: 'numeric', 
                        month: 'long', 
                        day: 'numeric' 
                      })}
                    </time>
                    <span class="mx-2">â€¢</span>
                    <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
                    </svg>
                    <span>{post.readingTime}</span>
                  </div>

                  <!-- Post Title -->
                  <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                    <a href={postPath} class="hover:underline">
                      {post.title}
                    </a>
                  </h2>

                  <!-- Post Excerpt -->
                  <p class="text-gray-600 mb-4 line-clamp-3">
                    {post.excerpt}
                  </p>

                  <!-- Post Tags -->
                  {post.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.tags.slice(0, 3).map((tag) => (
                        <span class="bg-gray-100 text-gray-700 px-2 py-1 rounded-md text-xs">
                          {tag}
                        </span>
                      ))}
                      {post.tags.length > 3 && (
                        <span class="text-gray-500 text-xs">
                          +{post.tags.length - 3} more
                        </span>
                      )}
                    </div>
                  )}

                  <!-- Author & Read More -->
                  <div class="flex items-center justify-between">
                    <div class="flex items-center text-sm text-gray-500">
                      <svg class="h-4 w-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                      </svg>
                      <span>{post.author}</span>
                    </div>
                    <a 
                      href={postPath}
                      class="inline-flex items-center text-blue-600 hover:text-blue-700 text-sm font-medium transition-colors"
                    >
                      Read More
                      <svg class="h-4 w-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg class="h-16 w-16 text-gray-300 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 4.804A7.968 7.968 0 005.5 4c-1.255 0-2.443.29-3.5.804v10A7.969 7.969 0 015.5 14c1.669 0 3.218.51 4.5 1.385A7.962 7.962 0 0114.5 14c1.255 0 2.443.29 3.5.804v-10A7.968 7.968 0 0014.5 4c-1.255 0-2.443.29-3.5.804V12a1 1 0 11-2 0V4.804z" />
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">No Articles Found</h3>
          <p class="text-gray-600 mb-6">
            We haven't published any articles in the {category.toLowerCase()} category yet.
          </p>
          <a 
            href="/blog" 
            class="inline-flex items-center bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors"
          >
            Explore All Articles
            <svg class="h-4 w-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      )}
    </div>
  </section>

  <!-- Related Categories -->
  <section class="bg-gray-50 py-16">
    <div class="container mx-auto px-4">
      <h2 class="text-2xl font-bold text-gray-900 mb-8 text-center">
        Explore Other Categories
      </h2>
      <div class="flex flex-wrap justify-center gap-4">
        {getAllBlogCategories()
          .filter(cat => cat.name !== category)
          .slice(0, 6)
          .map((cat) => (
            <a 
              href={`/blog/category/${cat.slug}`}
              class="bg-white px-4 py-2 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 border border-gray-100 hover:border-blue-300"
            >
              <span class="text-gray-700 hover:text-blue-600">
                {cat.name}
              </span>
              <span class="text-gray-400 ml-2 text-sm">
                ({cat.count})
              </span>
            </a>
          ))
        }
      </div>
      <div class="text-center mt-8">
        <a 
          href="/blog"
          class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium"
        >
          View All Articles
          <svg class="h-4 w-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>