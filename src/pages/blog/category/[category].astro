---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/base-layout.astro';
import Button from '../../../components/ui/Button.astro';
import AstroIcon from '../../../components/ui/AstroIcon.astro';
import Input from '../../../components/ui/Input.astro';
import { generateCanonicalUrl } from '../../../utils/path-resolvers';
import { generateCategorySEO } from '../../../utils/seo';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  // Get all unique categories
  const categories = [...new Set(blogPosts.map(post => post.data.category))];

  return categories.map((category) => {
    const categoryPosts = blogPosts.filter(post => post.data.category === category);
    return {
      params: { category: category.toLowerCase().replace(/\s+/g, '-') },
      props: { 
        category,
        posts: categoryPosts.sort((a, b) => 
          new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
        )
      },
    };
  });
}

type Props = {
  category: string;
  posts: CollectionEntry<'blog'>[];
};

const { category, posts } = Astro.props;
const canonicalUrl = generateCanonicalUrl(`/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`);
const seoData = generateCategorySEO(category, posts.length);
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalUrl={seoData.canonicalUrl}
  type="website"
>
  <!-- Hero Section -->
  <section class="section-lg bg-gradient-to-br from-primary/5 via-background to-secondary/5">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-primary/10 rounded-full text-primary font-medium mb-6">
          <AstroIcon name="tabler:category" class="w-5 h-5" />
          <span>Category</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-text via-primary to-secondary bg-clip-text text-transparent">
          {category}
        </h1>
        
        <p class="text-xl text-text-muted mb-8 leading-relaxed">
          Discover {posts.length} article{posts.length !== 1 ? 's' : ''} in {category.toLowerCase()}. 
          From beginner guides to advanced techniques, find the knowledge you need.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
<Button variant="primary" href="/blog" class="btn-lg flex items-center gap-2">
            <AstroIcon name="tabler:arrow-left" class="w-4 h-4" />
            All Articles
          </Button>
<Button variant="secondary" href="/contact" class="btn-lg">
            Get Expert Help
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Articles Grid -->
  <section class="section-lg">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => {
          const publishDate = new Date(post.data.publishDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          });
          
          return (
            <article class="bg-background rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group hover:scale-105">
              <div class="relative">
                {post.data.featuredImage && (
                  <img
                    src={post.data.featuredImage}
                    alt={post.data.title}
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                )}
                <div class="absolute top-4 right-4">
                  <span class="px-3 py-1 bg-primary text-on-primary text-sm font-medium rounded-full">
                    {post.data.category}
                  </span>
                </div>
                {post.data.featured && (
                  <div class="absolute top-4 left-4">
                    <span class="px-2 py-1 bg-secondary text-on-secondary text-xs font-medium rounded-full flex items-center gap-1">
                      <AstroIcon name="tabler:star-filled" class="w-3 h-3" />
                      Featured
                    </span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <p class="text-sm text-text-muted">{publishDate}</p>
                  <p class="text-sm text-text-muted">{post.data.readingTime}</p>
                </div>
                
                <h3 class="text-xl font-bold text-text mb-3 group-hover:text-primary transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                
                <p class="text-text-muted mb-4 leading-relaxed line-clamp-3">
                  {post.data.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-primary to-secondary rounded-full flex items-center justify-center">
                      <AstroIcon name="tabler:user-circle" class="w-4 h-4 text-on-primary" />
                    </div>
                    <p class="text-sm font-medium text-text">{post.data.author}</p>
                  </div>
                  
                  <a 
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center gap-2 text-primary hover:text-primary-dark font-medium transition-colors"
                  >
                    Read More
                    <AstroIcon name="tabler:arrow-right" class="w-4 h-4" />
                  </a>
                </div>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-border">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <a
                        href={`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`}
                        class="px-2 py-1 bg-secondary/10 text-secondary text-xs rounded-full hover:bg-secondary/20 transition-colors"
                      >
                        #{tag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          );
        })}
      </div>
      
      {posts.length === 0 && (
        <div class="text-center py-16">
          <AstroIcon name="tabler:article-off" class="w-16 h-16 text-text-muted mx-auto mb-4" />
          <h3 class="text-2xl font-bold text-text mb-2">No Articles Found</h3>
          <p class="text-text-muted mb-6">There are no articles in this category yet.</p>
          <Button variant="primary" href="/blog">Browse All Articles</Button>
        </div>
      )}
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="section-lg bg-gradient-to-r from-primary/10 to-secondary/10">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Stay Updated</h2>
        <p class="text-xl text-text-muted mb-8">
          Get the latest {category.toLowerCase()} insights delivered to your inbox.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-md mx-auto">
          <Input
            type="email"
            placeholder="Enter your email"
            class="flex-1"
          />
          <Button variant="primary" class="px-8">
            Subscribe
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>