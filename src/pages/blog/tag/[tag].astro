---
import { type CollectionEntry, getCollection } from 'astro:content';
import BaseLayout from '../../../layouts/base-layout.astro';
import Button from '../../../components/ui/Button.astro';
import AstroIcon from '../../../components/ui/AstroIcon.astro';
import { generateCanonicalUrl } from '../../../utils/path-resolvers';
import { generateTagSEO } from '../../../utils/seo';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => {
    return data.draft !== true;
  });

  // Get all unique tags
  const allTags = blogPosts.flatMap(post => post.data.tags || []);
  const uniqueTags = [...new Set(allTags)];

  return uniqueTags.map((tag) => {
    const tagPosts = blogPosts.filter(post => 
      post.data.tags && post.data.tags.includes(tag)
    );
    return {
      params: { tag: tag.toLowerCase().replace(/\s+/g, '-') },
      props: { 
        tag,
        posts: tagPosts.sort((a, b) => 
          new Date(b.data.publishDate).getTime() - new Date(a.data.publishDate).getTime()
        )
      },
    };
  });
}

type Props = {
  tag: string;
  posts: CollectionEntry<'blog'>[];
};

const { tag, posts } = Astro.props;
const canonicalUrl = generateCanonicalUrl(`/blog/tag/${tag.toLowerCase().replace(/\s+/g, '-')}`);
const seoData = generateTagSEO(tag, posts.length);

// Get related tags from the posts
const relatedTags = [...new Set(
  posts.flatMap(post => post.data.tags || [])
    .filter(t => t !== tag)
)].slice(0, 8);
---

<BaseLayout
  title={seoData.title}
  description={seoData.description}
  keywords={seoData.keywords}
  canonicalUrl={canonicalUrl}
  type="website"
>
  <!-- Hero Section -->
  <section class="section-lg bg-gradient-to-br from-secondary/5 via-background to-primary/5">
    <div class="container">
      <div class="text-center max-w-4xl mx-auto">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-secondary/10 rounded-full text-secondary font-medium mb-6">
          <AstroIcon name="tabler:hash" class="w-5 h-5" />
          <span>Tag</span>
        </div>
        
        <h1 class="text-4xl md:text-6xl font-bold mb-6 bg-gradient-to-r from-text via-secondary to-primary bg-clip-text text-transparent">
          #{tag}
        </h1>
        
        <p class="text-xl text-text-muted mb-8 leading-relaxed">
          Explore {posts.length} article{posts.length !== 1 ? 's' : ''} tagged with <strong>{tag}</strong>. 
          Deep dive into specific topics and expand your knowledge.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
<Button variant="primary" href="/blog" class="btn-lg flex items-center gap-2">
            <AstroIcon name="tabler:arrow-left" class="w-4 h-4" />
            All Articles
          </Button>
<Button variant="secondary" href="/contact" class="btn-lg">
            Request Tutorial
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Related Tags -->
  {relatedTags.length > 0 && (
    <section class="py-8 bg-surface">
      <div class="container">
        <div class="text-center mb-6">
          <h2 class="text-lg font-semibold text-text mb-4">Related Tags</h2>
          <div class="flex flex-wrap justify-center gap-3">
            {relatedTags.map((relatedTag) => (
              <a
                href={`/blog/tag/${relatedTag.toLowerCase().replace(/\s+/g, '-')}`}
                class="px-4 py-2 bg-background border border-border rounded-full text-text hover:border-secondary hover:text-secondary transition-all duration-200 hover:scale-105"
              >
                #{relatedTag}
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
  )}

  <!-- Articles Grid -->
  <section class="section-lg">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.map((post) => {
          const publishDate = new Date(post.data.publishDate).toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          });
          
          return (
            <article class="bg-background rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 overflow-hidden group hover:scale-105">
              <div class="relative">
                {post.data.featuredImage && (
                  <img
                    src={post.data.featuredImage}
                    alt={post.data.title}
                    loading="lazy"
                    decoding="async"
                    fetchpriority="low"
                    class="w-full h-48 object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                )}
                <div class="absolute top-4 right-4">
                  <a
                    href={`/blog/category/${post.data.category.toLowerCase().replace(/\s+/g, '-')}`}
                    class="px-3 py-1 bg-primary text-on-primary text-sm font-medium rounded-full hover:bg-primary-dark transition-colors"
                  >
                    {post.data.category}
                  </a>
                </div>
                {post.data.featured && (
                  <div class="absolute top-4 left-4">
                    <span class="px-2 py-1 bg-secondary text-on-secondary text-xs font-medium rounded-full flex items-center gap-1">
                      <AstroIcon name="tabler:star-filled" class="w-3 h-3" />
                      Featured
                    </span>
                  </div>
                )}
              </div>
              
              <div class="p-6">
                <div class="flex items-center justify-between mb-3">
                  <p class="text-sm text-text-muted">{publishDate}</p>
                  <p class="text-sm text-text-muted">{post.data.readingTime}</p>
                </div>
                
                <h3 class="text-xl font-bold text-text mb-3 group-hover:text-secondary transition-colors line-clamp-2">
                  {post.data.title}
                </h3>
                
                <p class="text-text-muted mb-4 leading-relaxed line-clamp-3">
                  {post.data.excerpt}
                </p>
                
                <div class="flex items-center justify-between">
                  <div class="flex items-center gap-3">
                    <div class="w-8 h-8 bg-gradient-to-br from-secondary to-primary rounded-full flex items-center justify-center">
                      <AstroIcon name="tabler:user-circle" class="w-4 h-4 text-on-secondary" />
                    </div>
                    <p class="text-sm font-medium text-text">{post.data.author}</p>
                  </div>
                  
                  <a 
                    href={`/blog/${post.slug}`}
                    class="inline-flex items-center gap-2 text-secondary hover:text-secondary-dark font-medium transition-colors"
                  >
                    Read More
                    <AstroIcon name="tabler:arrow-right" class="w-4 h-4" />
                  </a>
                </div>
                
                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-4 pt-4 border-t border-border">
                    {post.data.tags.slice(0, 4).map((postTag) => (
                      <a
                        href={`/blog/tag/${postTag.toLowerCase().replace(/\s+/g, '-')}`}
                        class={`px-2 py-1 text-xs rounded-full transition-colors ${
                          postTag === tag 
                            ? 'bg-secondary text-on-secondary font-medium' 
                            : 'bg-secondary/10 text-secondary hover:bg-secondary/20'
                        }`}
                      >
                        #{postTag}
                      </a>
                    ))}
                  </div>
                )}
              </div>
            </article>
          );
        })}
      </div>
      
      {posts.length === 0 && (
        <div class="text-center py-16">
          <AstroIcon name="tabler:tag-off" class="w-16 h-16 text-text-muted mx-auto mb-4" />
          <h3 class="text-2xl font-bold text-text mb-2">No Articles Found</h3>
          <p class="text-text-muted mb-6">There are no articles with this tag yet.</p>
          <Button variant="primary" href="/blog">Browse All Articles</Button>
        </div>
      )}
    </div>
  </section>

  <!-- Tag Cloud Section -->
  <section class="section-lg bg-gradient-to-r from-secondary/5 to-primary/5">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Explore More Topics</h2>
        <p class="text-xl text-text-muted mb-8">
          Discover articles on various topics and expand your knowledge base.
        </p>
        <div class="flex flex-wrap justify-center gap-3">
          {relatedTags.map((relatedTag) => (
            <a
              href={`/blog/tag/${relatedTag.toLowerCase().replace(/\s+/g, '-')}`}
              class="px-6 py-3 bg-background border border-border rounded-full text-text hover:border-secondary hover:text-secondary hover:shadow-md transition-all duration-200 hover:scale-105 font-medium"
            >
              #{relatedTag}
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>