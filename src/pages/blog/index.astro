---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getBlogPostsWithPagination, getAllBlogCategories, getAllBlogTagsWithMetadata } from '../../config/blog';
import { generateBlogPath, generateBlogCategoryPath, generateBlogTagPath } from '../../utils/pathResolvers';

// Get blog posts with pagination (showing 12 per page)
const { posts, pagination } = getBlogPostsWithPagination(1, 12);
const categories = getAllBlogCategories();
const tags = getAllBlogTagsWithMetadata();
---

<BaseLayout title="NosytLabs Blog - Insights & Tutorials" description="Discover the latest insights, tutorials, and trends in web development, AI, and technology from the NosytLabs team.">
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-blue-900 via-blue-800 to-blue-700 text-white py-20 md:py-32">
    <div class="absolute inset-0 bg-gradient-to-r from-blue-900/90 to-orange-900/20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 animate-slide-up">NosytLabs Blog</h1>
        <p class="text-xl md:text-2xl text-blue-100 mb-8 animate-slide-up" style="animation-delay: 0.2s;">
          Insights, tutorials, and trends in web development, AI, and cutting-edge technology
        </p>
        <div class="flex flex-wrap justify-center gap-4 animate-fade-in" style="animation-delay: 0.4s;">
          <span class="px-4 py-2 bg-orange-500 text-white rounded-full font-medium">
            {posts.length} Articles
          </span>
          <span class="px-4 py-2 bg-blue-600 text-white rounded-full font-medium">
            {categories.length} Categories
          </span>
        </div>
      </div>
    </div>
    <div class="absolute bottom-0 left-0 right-0 h-24 bg-gradient-to-t from-white to-transparent"></div>
  </section>

  <!-- Blog Content -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="flex flex-col lg:flex-row gap-12">
        <!-- Main Content -->
        <div class="lg:w-2/3">
          <!-- Featured Post -->
          {posts.filter(post => post.featured).slice(0, 1).map(featuredPost => (
            <article class="mb-16 group">
              <div class="bg-white rounded-2xl shadow-xl overflow-hidden hover:shadow-2xl transition-all duration-500">
                {featuredPost.featuredImage && (
                  <div class="relative h-64 md:h-80 overflow-hidden">
                    <img
                      src={featuredPost.featuredImage}
                      alt={featuredPost.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="bg-gradient-to-r from-orange-500 to-orange-600 text-white px-3 py-1 rounded-full text-sm font-semibold">
                        Featured
                      </span>
                    </div>
                  </div>
                )}
                <div class="p-8">
                  <div class="flex items-center gap-4 mb-4">
                    <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">
                      {featuredPost.category}
                    </span>
                    <span class="text-gray-500 text-sm">{featuredPost.readingTime}</span>
                  </div>
                  <h2 class="text-3xl font-bold text-gray-900 mb-4 group-hover:text-blue-600 transition-colors duration-300">
                    <a href={generateBlogPath(featuredPost.slug)}>{featuredPost.title}</a>
                  </h2>
                  <p class="text-gray-600 text-lg mb-6 leading-relaxed">{featuredPost.excerpt}</p>
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <span class="text-sm text-gray-500">By {featuredPost.author}</span>
                      <span class="text-gray-300">â€¢</span>
                      <span class="text-sm text-gray-500">{featuredPost.publishDate.toLocaleDateString()}</span>
                    </div>
                    <a
                      href={generateBlogPath(featuredPost.slug)}
                      class="inline-flex items-center text-blue-600 hover:text-blue-800 font-semibold group-hover:translate-x-1 transition-all duration-300"
                    >
                      Read Article
                      <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </div>
            </article>
          ))}

          <!-- Regular Posts Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {posts.filter(post => !post.featured).map((post, index) => (
              <article class={`group bg-white rounded-2xl shadow-lg hover:shadow-xl transition-all duration-500 overflow-hidden animate-fade-in`} style={`animation-delay: ${index * 0.1}s;`}>
                {post.featuredImage && (
                  <div class="relative h-48 overflow-hidden">
                    <img
                      src={post.featuredImage}
                      alt={post.title}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                  </div>
                )}
                <div class="p-6">
                  <div class="flex items-center gap-3 mb-3">
                    <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded-full text-xs font-medium">
                      {post.category}
                    </span>
                    <span class="text-gray-500 text-xs">{post.readingTime}</span>
                  </div>
                  <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors duration-300 leading-tight">
                    <a href={generateBlogPath(post.slug)}>{post.title}</a>
                  </h3>
                  <p class="text-gray-600 text-sm mb-4 leading-relaxed">{post.excerpt}</p>
                  <div class="flex items-center justify-between">
                    <span class="text-xs text-gray-500">{post.publishDate.toLocaleDateString()}</span>
                    <a
                      href={generateBlogPath(post.slug)}
                      class="inline-flex items-center text-blue-600 hover:text-blue-800 font-medium text-sm group-hover:translate-x-1 transition-all duration-300"
                    >
                      Read More
                      <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                      </svg>
                    </a>
                  </div>
                </div>
              </article>
            ))}
          </div>
        </div>

        <!-- Sidebar -->
        <aside class="lg:w-1/3">
          <div class="sticky top-8 space-y-8">
            <!-- Categories -->
            <div class="bg-white rounded-2xl shadow-lg p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"></path>
                </svg>
                Categories
              </h3>
              <div class="space-y-3">
                {categories.map(category => (
                  <a
                    href={generateBlogCategoryPath(category.slug)}
                    class="flex items-center justify-between p-3 rounded-lg hover:bg-blue-50 transition-colors duration-300 group"
                  >
                    <span class="font-medium text-gray-700 group-hover:text-blue-600">{category.name}</span>
                    <span class="bg-gray-100 text-gray-600 px-2 py-1 rounded-full text-xs group-hover:bg-blue-100 group-hover:text-blue-600">
                      {category.count}
                    </span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Popular Tags -->
            <div class="bg-white rounded-2xl shadow-lg p-6">
              <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                <svg class="w-5 h-5 mr-2 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M17.707 9.293a1 1 0 010 1.414l-7 7a1 1 0 01-1.414 0l-7-7A.997.997 0 012 10V5a3 3 0 013-3h5c.256 0 .512.098.707.293l7 7zM5 6a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd"></path>
                </svg>
                Popular Tags
              </h3>
              <div class="flex flex-wrap gap-2">
                {tags.slice(0, 12).map(tag => (
                  <a
                    href={generateBlogTagPath(tag.slug)}
                    class="inline-flex items-center px-3 py-1 bg-orange-100 text-orange-800 rounded-full text-sm font-medium hover:bg-orange-200 transition-colors duration-300"
                  >
                    {tag.name}
                    <span class="ml-1 text-xs">({tag.count})</span>
                  </a>
                ))}
              </div>
            </div>

            <!-- Newsletter Signup -->
            <div class="bg-gradient-to-br from-blue-600 to-blue-700 rounded-2xl shadow-lg p-6 text-white">
              <h3 class="text-xl font-bold mb-4">Stay Updated</h3>
              <p class="text-blue-100 mb-6">Get the latest articles and insights delivered to your inbox.</p>
              <form class="space-y-4">
                <input
                  type="email"
                  placeholder="Enter your email"
                  class="w-full px-4 py-3 rounded-lg text-gray-800 focus:outline-none focus:ring-2 focus:ring-orange-400"
                  required
                />
                <button
                  type="submit"
                  class="w-full bg-orange-500 hover:bg-orange-600 text-white font-semibold py-3 px-4 rounded-lg transition-colors duration-300"
                >
                  Subscribe
                </button>
              </form>
            </div>
          </div>
        </aside>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Animation keyframes */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes slideUp {
    from { transform: translateY(30px); opacity: 0; }
    to { transform: translateY(0); opacity: 1; }
  }

  /* Animation classes */
  .animate-fade-in {
    animation: fadeIn 0.8s ease-in-out forwards;
  }

  .animate-slide-up {
    animation: slideUp 0.8s ease-in-out forwards;
  }
</style>