---
import MainLayout from "@/layouts/MainLayout.astro";
import Section from "@/components/layout/Section.astro";
import Container from "@/components/layout/Container.astro";
import PageHero from "@/components/layout/PageHero.astro";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";
import HeroUIContactForm from "@/components/forms/HeroUIContactForm";
import { HeroUIWrapper } from "@/components/providers/HeroUIWrapper";
import { SITE_CONFIG, createInternalLink } from "@/lib/constants";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Service",
  name: "Free Technical Consultation - NOSYT Labs",
  description:
    "Get a free technical consultation and project assessment from NOSYT Labs. Discuss your requirements, explore solutions, and receive transparent pricing.",
  provider: {
    "@type": "Organization",
    name: "NOSYT Labs",
    url: SITE_CONFIG.BASE_URL,
  },
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD",
    availability: "https://schema.org/InStock",
  },
};
---

<MainLayout
  title="Free Technical Consultation - NOSYT Labs"
  description="Schedule a free technical consultation with NOSYT Labs. Get expert assessment, discuss your project requirements, and receive transparent pricing within 24 hours."
  keywords={[
    "free consultation",
    "technical assessment",
    "project evaluation",
    "web development consultation",
    "AI integration consultation",
  ]}
  jsonLd={jsonLd}
>
  <Section background="default" spacing="none">
    <Container size="standard">
      <Breadcrumbs
        items={[
          { name: "Home", url: createInternalLink("/") },
          {
            name: "Free Consultation",
            url: createInternalLink("/consultation"),
          },
        ]}
      />
    </Container>
  </Section>

  <PageHero
    title="Free Technical Consultation"
    subtitle="Get expert guidance, project assessment, and transparent pricing - no obligation"
    size="standard"
    background="gradient"
  />

  <Section background="muted" spacing="lg">
    <Container size="standard">
      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <!-- Left Column: Benefits -->
        <div class="space-y-8">
          <div>
            <h2
              class="text-3xl md:text-4xl font-bold mb-6 bg-gradient-to-r from-foreground to-primary bg-clip-text text-transparent"
            >
              What You'll Get
            </h2>
            <p class="text-lg text-muted-foreground mb-8">
              Our free consultation is designed to give you clarity on your
              project, technology options, and realistic expectations - with no
              pressure to commit.
            </p>
          </div>

          <div class="space-y-6">
            {
              [
                {
                  icon: "📋",
                  title: "Technical Assessment",
                  description:
                    "Detailed evaluation of your requirements, goals, and existing systems to identify the best path forward.",
                },
                {
                  icon: "💡",
                  title: "Solution Recommendations",
                  description:
                    "Expert advice on technology stack, architecture, and implementation approach tailored to your needs.",
                },
                {
                  icon: "💰",
                  title: "Transparent Pricing",
                  description:
                    "Clear, itemized project estimate with no hidden fees. You'll know exactly what to expect.",
                },
                {
                  icon: "⏱️",
                  title: "Timeline & Milestones",
                  description:
                    "Realistic project timeline with key milestones and delivery expectations.",
                },
                {
                  icon: "🎯",
                  title: "Success Metrics",
                  description:
                    "Discussion of how we'll measure success and what outcomes you can expect from the project.",
                },
                {
                  icon: "🔒",
                  title: "Confidentiality",
                  description:
                    "Your ideas and business information are kept strictly confidential. We sign NDAs if needed.",
                },
              ].map((benefit) => (
                <div class="flex gap-4 p-5 rounded-xl bg-card border border-border hover:border-primary/50 transition-all duration-300 group">
                  <div class="text-4xl flex-shrink-0 group-hover:scale-110 transition-transform duration-300">
                    {benefit.icon}
                  </div>
                  <div>
                    <h3 class="text-xl font-semibold mb-2 group-hover:text-primary transition-colors">
                      {benefit.title}
                    </h3>
                    <p class="text-muted-foreground leading-relaxed">
                      {benefit.description}
                    </p>
                  </div>
                </div>
              ))
            }
          </div>

          <!-- Process -->
          <div
            class="bg-gradient-to-br from-primary/10 to-accent/5 border border-primary/20 rounded-xl p-6 mt-8"
          >
            <h3 class="text-2xl font-bold mb-4">How It Works</h3>
            <ol
              class="space-y-3 list-decimal list-inside text-muted-foreground"
            >
              <li>
                <strong class="text-foreground">Submit the form</strong> - Tell us
                about your project and needs
              </li>
              <li>
                <strong class="text-foreground"
                  >We'll respond within 24 hours</strong
                > - Usually much faster
              </li>
              <li>
                <strong class="text-foreground">Schedule a call</strong> - 30-60
                minute discussion via Zoom, phone, or in-person
              </li>
              <li>
                <strong class="text-foreground">Receive your assessment</strong>
                - Detailed proposal with pricing and timeline
              </li>
              <li>
                <strong class="text-foreground">Decide at your pace</strong> - No
                pressure, take time to review and ask questions
              </li>
            </ol>
          </div>

          <!-- Trust Signals -->
          <div class="flex flex-wrap gap-4 pt-4">
            <div class="flex items-center gap-2 text-sm text-muted-foreground">
              <svg
                class="w-5 h-5 text-success"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>No commitment required</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-muted-foreground">
              <svg
                class="w-5 h-5 text-success"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>100% free assessment</span>
            </div>
            <div class="flex items-center gap-2 text-sm text-muted-foreground">
              <svg
                class="w-5 h-5 text-success"
                fill="currentColor"
                viewBox="0 0 20 20"
              >
                <path
                  fill-rule="evenodd"
                  d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                  clip-rule="evenodd"></path>
              </svg>
              <span>24-hour response time</span>
            </div>
          </div>
        </div>

        <!-- Right Column: Form -->
        <div class="lg:sticky lg:top-24">
          <div
            class="bg-card border-2 border-border rounded-2xl p-6 md:p-8 shadow-xl"
          >
            <div class="mb-6">
              <h3 class="text-2xl font-bold mb-2">
                Request Your Free Consultation
              </h3>
              <p class="text-muted-foreground">
                Fill out the form below and we'll get back to you within 24
                hours.
              </p>
            </div>
            <HeroUIWrapper client:load>
              <HeroUIContactForm client:load />
            </HeroUIWrapper>
          </div>

          <!-- Alternative Contact -->
          <div class="mt-6 text-center text-sm text-muted-foreground">
            <p>Prefer to email directly?</p>
            <a
              href={`mailto:${SITE_CONFIG.EMAILS.CONTACT}?subject=Consultation Request`}
              class="text-primary hover:underline font-medium"
            >
              {SITE_CONFIG.EMAILS.CONTACT}
            </a>
          </div>
        </div>
      </div>
    </Container>
  </Section>

  <!-- FAQ Section -->
  <Section background="default" spacing="md">
    <Container size="standard">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-8">
        Frequently Asked Questions
      </h2>
      <div class="max-w-3xl mx-auto space-y-4">
        {
          [
            {
              question: "Is the consultation really free?",
              answer:
                "Yes, absolutely. There's no charge for the initial consultation and project assessment. We provide value upfront to help you make informed decisions.",
            },
            {
              question: "How long does a consultation take?",
              answer:
                "Typically 30-60 minutes, depending on project complexity. We'll spend as much time as needed to understand your requirements and provide thorough recommendations.",
            },
            {
              question: "What information should I prepare?",
              answer:
                "Have a general idea of what you're trying to accomplish, any existing systems or websites, your timeline, and approximate budget range. Don't worry if details are unclear - we'll help you figure it out.",
            },
            {
              question: "Will I receive a written proposal?",
              answer:
                "Yes. After our consultation call, you'll receive a detailed written proposal including technical approach, timeline, deliverables, and transparent pricing.",
            },
            {
              question: "What if I'm not ready to start immediately?",
              answer:
                "No problem. Many clients consult with us months before they're ready to begin. We're here when you need us, with no pressure to commit.",
            },
            {
              question: "Do you sign NDAs?",
              answer:
                "Yes, we're happy to sign non-disclosure agreements if you need to share sensitive business information during the consultation.",
            },
          ].map((faq) => (
            <details class="group bg-card border border-border rounded-lg p-6 hover:border-primary/50 transition-all duration-300">
              <summary class="font-semibold text-lg cursor-pointer flex justify-between items-center group-hover:text-primary transition-colors">
                {faq.question}
                <svg
                  class="w-5 h-5 text-primary group-open:rotate-180 transition-transform duration-300"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M19 9l-7 7-7-7"
                  />
                </svg>
              </summary>
              <p class="text-muted-foreground mt-4 leading-relaxed">
                {faq.answer}
              </p>
            </details>
          ))
        }
      </div>
    </Container>
  </Section>
</MainLayout>
