---
import MainLayout from '../layouts/MainLayout.astro'
import EnhancedHero from '../components/enhanced/EnhancedHero.astro'
import EnhancedCTA from '../components/enhanced/EnhancedCTA.astro'

const primaryCTA = {
  text: "Quick Start Guide",
  href: "#quick-start"
}

const secondaryCTA = {
  text: "API Reference", 
  href: "#api-reference"
}
---

<MainLayout 
  title="Documentation | Developer Resources & Guides - Nosyt Labs"
  description="Comprehensive documentation, API references, and developer guides for working with Nosyt Labs projects and services."
>
  <EnhancedHero
    title="Developer Documentation"
    subtitle="Everything you need to get started"
    description="Comprehensive guides, API references, and best practices for developers working with our projects and services."
    primaryCTA={primaryCTA}
    secondaryCTA={secondaryCTA}
  />

  <main>
    <section class="py-20">
      <div class="container mx-auto px-6">
        <h2 class="text-3xl font-bold text-center mb-12">Documentation</h2>
        <p class="text-center text-[hsl(var(--text-secondary))] dark:text-[hsl(var(--text-tertiary))]">
          This is a minimal version to test parsing issues.
        </p>
      </div>
    </section>
  </main>

  <EnhancedCTA />
</MainLayout>
