  // Enhanced Kick.com embed handling
  document.addEventListener('DOMContentLoaded', () => {
    const kickEmbed = document.querySelector('.kick-embed-container iframe');
    const kickFallback = document.querySelector('.kick-fallback');

    if (kickEmbed && kickFallback) {
      // Set a timeout to check if the iframe loaded successfully
      setTimeout(() => {
        try {
          // If the iframe is still not visible after 5 seconds, show the fallback
          if (kickEmbed.style.display === 'none') {
            console.log('Kick.com embed timeout - showing fallback');
            kickEmbed.style.display = 'none';
            kickFallback.style.display = 'flex';
          }
        } catch (e) {
          console.error('Kick.com embed timeout error:', e);
          kickEmbed.style.display = 'none';
          kickFallback.style.display = 'flex';
        }
      }, 5000);

      // Add event listener for iframe load
      kickEmbed.addEventListener('load', function() {
        try {
          // Check if we can access the iframe content
          if (kickEmbed.contentWindow && kickEmbed.contentDocument) {
            console.log('Kick.com embed loaded successfully');
            kickEmbed.style.display = 'block';
            kickFallback.style.display = 'none';
          } else {
            throw new Error('Cannot access iframe content');
          }
        } catch (e) {
          console.error('Kick.com embed load error:', e);
          kickEmbed.style.display = 'none';
          kickFallback.style.display = 'flex';
        }
      });

      // Add event listener for iframe error
      kickEmbed.addEventListener('error', function(e) {
        console.error('Kick.com embed error:', e);
        kickEmbed.style.display = 'none';
        kickFallback.style.display = 'flex';
      });
    }
  });
