---
// Services Page - Complete Service Offerings
import UnifiedLayout from '@/layouts/UnifiedLayout.astro';
import Card from '@/components/core/Card.astro';
import { CONTACT } from '@/config/constants.ts';
import Hero from '@/components/Hero.astro';
import { services } from '@/config/services';
import { generateServicePath } from '@/utils/pathResolvers';
import { Button } from "@/components/ui/button.tsx"; // Import Button
import { Icon } from "@/components/ui/icon.tsx"; // Import Icon

// DEBUG: Log the services data
console.log('DEBUG: Services data in services.astro:');
services.forEach(service => {
  console.log(`  ${service.name}: href = "${service.href}"`);
});

const pageTitle = "Our Services | NosytLabs";
const pageDescription = "Comprehensive digital solutions including web development, AI integration, performance optimization, consulting, and 3D printing services. Transform your business with cutting-edge technology.";
---

<UnifiedLayout
  title={pageTitle}
  description={pageDescription}
>
  <Hero
    title="Our Services"
    subtitle="Comprehensive digital solutions that help businesses thrive in the modern landscape through innovation and expertise."
    ctaText="Explore Services"
    ctaLink="#services"
  />

  <!-- Core Services Section -->
  <section id="services" class="py-20 bg-gray-50 dark:bg-neutral-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Our Services</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          From initial concept to final deployment, we provide comprehensive digital solutions meticulously tailored to your business's unique requirements.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12" data-stagger data-stagger-delay="150">
        {services.map((service) => (
          <Card
            contentType="service"
            title={service.name}
            description={service.description}
            icon={service.emoji}
            pricing={service.price}
            timeline={service.timeline}
            highlight={service.popular ? "Most Popular" : undefined}
            primaryAction={{
              text: service.cta,
              href: service.href,
              variant: "primary",
              icon: "arrow-right"
            }}
            class="stagger-item"
          >
            <div className="prose prose-sm dark:prose-invert max-w-none">
              <p><strong>Process:</strong> {service.process}</p>
              <p><strong>Key Benefits:</strong> {service.benefits}</p>
              <p><strong>Expected Outcomes:</strong> {service.outcomes}</p>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Our Approach to Service Delivery Section -->
  <section className="py-20 bg-white dark:bg-neutral-800">
    <div className="container mx-auto px-4">
      <div className="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 className="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Our Approach to Service Delivery</h2>
        <p className="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          At NosytLabs, we believe in a collaborative and iterative approach to ensure your project's success.
        </p>
      </div>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-stagger data-stagger-delay="150">
        <div className="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-neutral-900 rounded-lg shadow-md stagger-item">
          <Icon name="handshake" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Client Collaboration</h3>
          <p className="text-neutral-600 dark:text-neutral-300">We work closely with you from concept to launch, ensuring your vision is realized and your goals are met.</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-neutral-900 rounded-lg shadow-md stagger-item">
          <Icon name="refreshCw" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Iterative Development</h3>
          <p className="text-neutral-600 dark:text-neutral-300">Our agile methodology allows for continuous feedback and adjustments, ensuring flexibility and optimal outcomes.</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-neutral-900 rounded-lg shadow-md stagger-item">
          <Icon name="checkCircle" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Quality Assurance</h3>
          <p className="text-neutral-600 dark:text-neutral-300">Rigorous testing and quality checks are integrated throughout the development process to deliver robust and reliable solutions.</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-gray-50 dark:bg-neutral-900 rounded-lg shadow-md stagger-item">
          <Icon name="lifeBuoy" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Post-Launch Support</h3>
          <p className="text-neutral-600 dark:text-neutral-300">Our commitment extends beyond launch with ongoing support and maintenance to ensure your solution continues to perform optimally.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section className="py-20 nosyt-hero">
    <div className="container mx-auto px-4 text-center">
      <div data-scroll-animate data-animation-type="fade-in-up">
        <h2 className="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Transform Your Business?</h2>
        <p className="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Let's discuss your project and find the perfect solution to help your business grow and succeed.
        </p>
      </div>
      <div className="flex flex-col sm:flex-row gap-4 justify-center" data-stagger data-stagger-delay="120">
        <Button href="/contact" variant="primary" size="default" client:load className="stagger-item">
          Start Your Project
        </Button>
        <Button href={`mailto:${CONTACT.EMAIL.MAIN}?subject=Service Inquiry`} variant="outline" size="default" client:load className="stagger-item">
          Get in Touch
        </Button>
      </div>
    </div>
  </section>
</UnifiedLayout>