---
/**
 * Enhanced Services Page
 * 
 * Comprehensive services showcase with modern design, filtering, and conversion optimization
 */

import MainLayout from '../layouts/MainLayout.astro';
import EnhancedHero from '../components/hero/EnhancedHero.astro';
import EnhancedParticleSystem from '../components/hero/EnhancedParticleSystem.astro';
import ServicesShowcase from '../components/services/ServicesShowcase.astro';
import { allServices } from '../config/services';

const services = allServices;

// SEO Configuration
const seoConfig = {
  title: 'Professional Services | NosytLabs - Web Development, AI Integration & Consulting',
  description: 'Discover our comprehensive range of professional services including modern web development, AI integration, and strategic consulting. Transform your business with expert solutions.',
  keywords: 'web development services, AI integration, consulting, progressive web apps, e-commerce solutions, technical advisory, strategic consulting, NosytLabs'
};

// Hero configuration
const heroConfig = {
  title: "Professional Services That Drive Results",
  subtitle: "From cutting-edge web development to AI-powered automation, we deliver comprehensive technology solutions that transform your business and accelerate growth.",
  primaryCTA: {
    text: "Explore Our Services",
    href: "#services-showcase"
  },
  secondaryCTA: {
    text: "Get Free Consultation",
    href: "/contact"
  }
};
---

<MainLayout
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
>
  <!-- Enhanced Hero Section -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden" role="banner" aria-label="Services hero section">
    <EnhancedParticleSystem 
      particleCount={150}
      connectionDistance={120}
      particleSpeed={0.5}
      interactive={true}
      theme="ai"
      intensity="medium"
    />
    <EnhancedHero 
      title={heroConfig.title}
      subtitle={heroConfig.subtitle}
      primaryCTA={heroConfig.primaryCTA}
      secondaryCTA={heroConfig.secondaryCTA}
      background="gradient"
      size="large"
    />
  </section>

  <!-- Services Showcase -->
  <main>
    <section id="services-showcase" class="section-lg" role="main" aria-label="Services showcase">
    <div class="container">
      <ServicesShowcase services={services} />
    </div>
    </section>
  </main>

</MainLayout>
