---
import MainLayout from '../layouts/MainLayout.astro';
import ResponsiveImageOptimizer from '../components/layout/ResponsiveImageOptimizer.astro';

---

<MainLayout title="Gallery | Nosyt Labs">
  <main class="container mx-auto px-4 py-16">
    
    <h1 class="brand-heading-1 text-center">Gallery</h1>
    <p class="brand-body text-center max-w-3xl mx-auto mt-4">
      Explore our portfolio of innovative projects and key moments at Nosyt Labs.
    </p>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
      <!-- Gallery Item 1 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery1.svg"
          alt="AI Analytics Dashboard"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">AI Analytics Platform</h3>
          <p class="text-muted-foreground">Advanced data visualization and predictive analytics tool developed for enterprise clients.</p>
        </div>
      </div>
      <!-- Gallery Item 2 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery2.svg"
          alt="Blockchain Application"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Decentralized Finance App</h3>
          <p class="text-muted-foreground">Secure blockchain-based solution for financial transactions and smart contracts.</p>
        </div>
      </div>
      <!-- Gallery Item 3 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery3.svg"
          alt="Team Event"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Tech Conference 2023</h3>
          <p class="text-muted-foreground">Nosyt Labs team presenting innovations at the annual technology summit.</p>
        </div>
      </div>
      <!-- Gallery Item 4 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery1.svg"
          alt="IoT Device Prototype"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">IoT Smart Device</h3>
          <p class="text-muted-foreground">Prototype for connected home automation system with AI integration.</p>
        </div>
      </div>
      <!-- Gallery Item 5 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery2.svg"
          alt="Cloud Infrastructure"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Cloud Migration Project</h3>
          <p class="text-muted-foreground">Seamless transition to scalable cloud architecture for a major client.</p>
        </div>
      </div>
      <!-- Gallery Item 6 -->
      <div class="bg-surface-secondary rounded-lg overflow-hidden border border-border">
        <ResponsiveImageOptimizer
          src="/images/gallery/gallery3.svg"
          alt="Mobile Application"
          width={400}
          height={256}
          aspectRatio="25/16"
          loading="lazy"
          fetchpriority="low"
          class="w-full h-64 object-cover"
        />
        <div class="p-6">
          <h3 class="text-xl font-semibold mb-2">Mobile Health App</h3>
          <p class="text-muted-foreground">Cross-platform app for health monitoring and telemedicine services.</p>
        </div>
      </div>
    </div>
  </main>
</MainLayout>
