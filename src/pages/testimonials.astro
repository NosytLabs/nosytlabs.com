---
import BaseLayout from '../layouts/base-layout.astro';
import Button from '../components/ui/Button.astro';
import AstroIcon from '../components/ui/AstroIcon.astro';

const title = 'Testimonials - Coming Soon';
const description = 'We are a new studio. Testimonials will be available once projects launch.';
---

<BaseLayout title={title} description={description} pageKey="testimonials" type="website" noindex={true}>
  <section class="section-lg">
    <div class="container text-center">
      <div class="max-w-3xl mx-auto">
        <div class="mb-8">
          <AstroIcon name="tabler:message" class="w-16 h-16 mx-auto text-primary mb-4" />
        </div>
        <h1 class="text-4xl md:text-5xl font-bold text-text mb-6">
          Testimonials Coming Soon
        </h1>
        <p class="text-xl text-text-muted mb-8 leading-relaxed">
          We do not have client reviews yet. We will publish honest feedback once initial projects are completed.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/services" variant="primary">
            <AstroIcon name="tabler:brain" class="w-5 h-5 mr-2" />
            Explore Services
          </Button>
          <Button href="/contact" variant="outline">
            <AstroIcon name="tabler:mail" class="w-5 h-5 mr-2" />
            Start a Conversation
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>