---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="NosytOS95 - NosytLabs"
  description="Experience the retro Windows 95 aesthetic with NosytOS95, featuring classic applications and games."
  isNosytOS95={true}
>
<main class="nosytos95-container">
  <div class="win95-desktop" id="desktop">
    <!-- Desktop Icons -->
    <div class="desktop-icons">
      <!-- My Computer -->
      <div class="desktop-icon" data-app="my-computer">
        <img src="/images/win95/computer.png" alt="My Computer" class="icon-img">
        <span class="icon-text">My Computer</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Notepad -->
      <div class="desktop-icon" data-app="notepad">
        <img src="/images/win95/notepad.png" alt="Notepad" class="icon-img">
        <span class="icon-text">Notepad</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Duck Hunt -->
      <div class="desktop-icon" data-app="duck-hunt">
        <img src="/images/win95/duck-hunt.png" alt="Duck Hunt" class="icon-img">
        <span class="icon-text">Duck Hunt</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Terminal -->
      <div class="desktop-icon" data-app="terminal">
        <img src="/images/win95/utilities-terminal.png" alt="Terminal" class="icon-img">
        <span class="icon-text">Terminal</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Help -->
      <div class="desktop-icon" data-app="help">
        <img src="/images/win95/help.png" alt="Help" class="icon-img">
        <span class="icon-text">Help</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Do Not Click Folder -->
      <div class="desktop-icon" data-app="do-not-click">
        <img src="/images/win95/folder.png" alt="Do Not Click" class="icon-img">
        <span class="icon-text">Do Not Click</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Virtual PC -->
      <div class="desktop-icon" data-app="virtual-pc">
        <img src="/images/win95/computer.png" alt="Virtual PC" class="icon-img">
        <span class="icon-text">Virtual PC</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Chat -->
      <div class="desktop-icon" data-app="chat">
        <img src="/images/win95/chat.png" alt="Chat" class="icon-img">
        <span class="icon-text">Chat</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- File Explorer -->
      <div class="desktop-icon" data-app="explorer">
        <img src="/images/win95/folder.png" alt="File Explorer" class="icon-img">
        <span class="icon-text">File Explorer</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Soundboard -->
      <div class="desktop-icon" data-app="soundboard">
        <img src="/images/win95/sound.png" alt="Soundboard" class="icon-img">
        <span class="icon-text">Soundboard</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Photo Booth -->
      <div class="desktop-icon" data-app="photo-booth">
        <img src="/images/win95/camera.png" alt="Photo Booth" class="icon-img">
        <span class="icon-text">Photo Booth</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- iPod -->
      <div class="desktop-icon" data-app="ipod">
        <img src="/images/win95/music.png" alt="iPod" class="icon-img">
        <span class="icon-text">iPod</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Paint -->
      <div class="desktop-icon" data-app="paint">
        <img src="/images/win95/paint.png" alt="Paint" class="icon-img">
        <span class="icon-text">Paint</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Minesweeper -->
      <div class="desktop-icon" data-app="minesweeper">
        <img src="/images/win95/minesweeper.png" alt="Minesweeper" class="icon-img">
        <span class="icon-text">Minesweeper</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Tetris -->
      <div class="desktop-icon" data-app="tetris">
        <img src="/images/win95/tetris.png" alt="Tetris" class="icon-img">
        <span class="icon-text">Tetris</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Snake -->
      <div class="desktop-icon" data-app="snake">
        <img src="/images/win95/snake.png" alt="Snake" class="icon-img">
        <span class="icon-text">Snake</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Calculator -->
      <div class="desktop-icon" data-app="calculator">
        <img src="/images/win95/calculator.png" alt="Calculator" class="icon-img">
        <span class="icon-text">Calculator</span>
        <span class="coming-soon">Coming Soon</span>
      </div>

      <!-- Solitaire -->
      <div class="desktop-icon" data-app="solitaire">
        <img src="/images/win95/solitaire.png" alt="Solitaire" class="icon-img">
        <span class="icon-text">Solitaire</span>
        <span class="coming-soon">Coming Soon</span>
      </div>
    </div>

    <!-- Taskbar -->
    <div class="win95-taskbar" id="taskbar">
      <button class="start-button" id="start-button">
        <img src="/images/win95/start.png" alt="Start" class="start-icon">
        <span>Start</span>
      </button>
      
      <div class="taskbar-items" id="taskbar-items">
        <!-- Running applications will appear here -->
      </div>
      
      <div class="system-tray">
        <img src="/images/win95/volume.png" alt="Volume" class="tray-icon">
        <span class="clock" id="clock">12:38 PM</span>
      </div>
    </div>
  </div>

  <!-- Start Menu -->
  <div class="start-menu" id="start-menu" style="display: none;">
    <div class="start-menu-item">
      <img src="/images/win95/programs.png" alt="Programs">
      <span>Programs</span>
      <span class="arrow">▶</span>
    </div>
    <div class="start-menu-item">
      <img src="/images/win95/documents.png" alt="Documents">
      <span>Documents</span>
      <span class="arrow">▶</span>
    </div>
    <div class="start-menu-item">
      <img src="/images/win95/settings.png" alt="Settings">
      <span>Settings</span>
      <span class="arrow">▶</span>
    </div>
    <div class="start-menu-item">
      <img src="/images/win95/find.png" alt="Find">
      <span>Find</span>
      <span class="arrow">▶</span>
    </div>
    <div class="start-menu-item">
      <img src="/images/win95/help.png" alt="Help">
      <span>Help</span>
    </div>
    <div class="start-menu-item">
      <img src="/images/win95/run.png" alt="Run">
      <span>Run...</span>
    </div>
    <div class="start-menu-separator"></div>
    <div class="start-menu-item">
      <img src="/images/win95/shutdown.png" alt="Exit to Website">
      <span>Exit to Website</span>
    </div>
  </div>
</main>

<!-- NosytOS95 Scripts -->
<script src="/scripts/nosytos95/window-manager.js" defer></script>
<script src="/scripts/nosytos95/start-menu.js" defer></script>
<script src="/scripts/nosytos95/taskbar.js" defer></script>
<script src="/scripts/nosytos95/desktop-icons.js" defer></script>

<!-- NosytOS95 Styles -->
<link rel="stylesheet" href="/styles/win95-authentic.css">

</BaseLayout>
