---
import Layout from '../layouts/Layout.astro';
import type { Props as LayoutProps } from '../layouts/Layout.astro';

const pageData: LayoutProps = {
  title: "Pricing - Nosyt Labs",
  description: "Transparent pricing for our professional web development, AI integration, mobile apps, UI/UX design, and e-commerce solutions.",
  ogTitle: "Nosyt Labs Pricing",
  ogDescription: "See our transparent pricing for professional technology services including web development, AI integration, mobile apps, and more.",
  ogImage: "/images/og-image.jpg",
  canonicalUrl: "https://nosytlabs.com/pricing"
};

const pricingPlans = [
  {
    name: "Web Development",
    price: "$2,500",
    delivery: "2-4 weeks",
    features: [
      "Responsive Design & Mobile Optimization",
      "Performance Optimization & SEO",
      "Modern Framework Integration"
    ],
    popular: true
  },
  {
    name: "AI Integration",
    price: "$3,500",
    delivery: "2-5 weeks",
    features: [
      "Custom AI Solutions & Chatbots",
      "Machine Learning Integration",
      "Process Automation Tools"
    ],
    popular: false
  },
  {
    name: "Mobile App Development",
    price: "$2,800",
    delivery: "3-6 weeks",
    features: [
      "Cross-Platform Development",
      "Native Features & Performance",
      "App Store Deployment"
    ],
    popular: false
  },
  {
    name: "UI/UX Design",
    price: "$1,800",
    delivery: "2-4 weeks",
    features: [
      "User Research & Testing",
      "Wireframes & Prototypes",
      "Accessibility Compliance"
    ],
    popular: false
  },
  {
    name: "E-commerce Solutions",
    price: "$4,500",
    delivery: "4-8 weeks",
    features: [
      "Custom Shopping Cart & Checkout",
      "Secure Payment Processing",
      "Inventory & Analytics Dashboard"
    ],
    popular: false
  }
];
---

<Layout {...pageData}>
  <section class="relative py-24 lg:py-32">
    <!-- Subtle background pattern -->
    <div class="absolute inset-0 bg-gradient-to-br from-background via-background to-muted/10"></div>
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-20 left-20 w-32 h-32 border border-primary/20 rounded-2xl rotate-12"></div>
      <div class="absolute bottom-32 right-32 w-24 h-24 border border-primary/30 rounded-xl -rotate-12"></div>
    </div>
    
    <div class="relative z-10 container mx-auto px-6">
      <!-- Hero Section -->
      <div class="text-center mb-20">
        <!-- Service Badge -->
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
          <div class="w-2 h-2 bg-primary rounded-full animate-pulse"></div>
          <span class="text-sm font-medium text-primary uppercase tracking-wider">Transparent Pricing</span>
        </div>
        
        <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-foreground mb-6 font-heading leading-tight">
          Simple, <span class="text-brand-accent">Clear</span> Pricing
        </h1>
        
        <p class="text-lg md:text-xl text-muted-foreground max-w-4xl mx-auto font-sans leading-relaxed mb-8">
          No hidden fees, no surprises. Our pricing is straightforward and designed to deliver exceptional value for your investment.
        </p>
      </div>

      <!-- Pricing Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
        {pricingPlans.map((plan) => (
          <div class={`group relative p-8 rounded-2xl bg-card/50 backdrop-blur-sm border border-border/50 hover:border-primary/30 transition-all duration-300 hover:shadow-xl hover:scale-[1.02] ${plan.popular ? 'ring-2 ring-primary/30' : ''}`}>
            <div class="flex flex-col h-full">
              <div class="flex items-center justify-between mb-6">
                <h3 class="text-2xl font-bold text-foreground">{plan.name}</h3>
                {plan.popular && (
                  <span class="px-2 py-1 text-xs font-medium bg-primary/10 text-primary rounded-full">Popular</span>
                )}
              </div>
              
              <div class="mb-6">
                <div class="text-4xl font-bold text-primary mb-2">{plan.price}</div>
                <div class="text-sm text-muted-foreground">Starting Price</div>
                <div class="text-sm text-muted-foreground mt-1">{plan.delivery} Delivery</div>
              </div>
              
              <ul class="space-y-4 mb-8 flex-grow">
                {plan.features.map((feature) => (
                  <li class="flex items-start gap-3 text-sm text-muted-foreground">
                    <div class="w-5 h-5 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                      <svg class="w-3 h-3 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                      </svg>
                    </div>
                    <span>{feature}</span>
                  </li>
                ))}
              </ul>
              
              <a href={`/contact?service=${encodeURIComponent(plan.name)}`} class="inline-flex items-center justify-center gap-2 bg-primary text-primary-foreground px-6 py-3 rounded-lg font-semibold hover:bg-primary/90 transition-all duration-300 hover:scale-105">
                <span>Get Started</span>
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </a>
            </div>
          </div>
        ))}
      </div>

      <!-- Additional Information -->
      <div class="grid lg:grid-cols-2 gap-12 mb-16">
        <div class="bg-card/50 backdrop-blur-sm border border-border/50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-foreground mb-6">What's Included</h2>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-foreground">Project Management</h3>
                <p class="text-sm text-muted-foreground mt-1">Dedicated project manager to ensure smooth delivery</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-foreground">Quality Assurance</h3>
                <p class="text-sm text-muted-foreground mt-1">Comprehensive testing and quality checks</p>
              </div>
            </li>
            <li class="flex items-start gap-3">
              <div class="w-6 h-6 rounded-full bg-primary/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                <svg class="w-4 h-4 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <div>
                <h3 class="font-semibold text-foreground">30-Day Support</h3>
                <p class="text-sm text-muted-foreground mt-1">Post-launch support and bug fixes</p>
              </div>
            </li>
          </ul>
        </div>
        
        <div class="bg-card/50 backdrop-blur-sm border border-border/50 rounded-2xl p-8">
          <h2 class="text-2xl font-bold text-foreground mb-6">Frequently Asked Questions</h2>
          <div class="space-y-6">
            <div>
              <h3 class="font-semibold text-foreground mb-2">Do you offer custom pricing?</h3>
              <p class="text-sm text-muted-foreground">Yes, we can create custom packages for complex projects or ongoing partnerships.</p>
            </div>
            <div>
              <h3 class="font-semibold text-foreground mb-2">What payment methods do you accept?</h3>
              <p class="text-sm text-muted-foreground">We accept credit cards, bank transfers, and PayPal. Payment plans are available for larger projects.</p>
            </div>
            <div>
              <h3 class="font-semibold text-foreground mb-2">Can I upgrade my package later?</h3>
              <p class="text-sm text-muted-foreground">Absolutely. We can adjust your package as your needs evolve.</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Final CTA -->
      <div class="text-center py-16 px-8 rounded-2xl bg-gradient-to-r from-primary/5 via-primary/10 to-primary/5 border border-primary/20">
        <h2 class="text-3xl md:text-4xl font-bold text-foreground mb-6 font-heading">
          Ready to Get Started?
        </h2>
        <p class="text-lg text-muted-foreground mb-8 max-w-2xl mx-auto leading-relaxed">
          Let's discuss your project requirements and create something amazing together. 
          Get started with a free consultation today.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contact" class="inline-flex items-center justify-center gap-3 bg-primary text-primary-foreground px-8 py-4 rounded-xl font-semibold hover:bg-primary/90 transition-all duration-300 shadow-lg hover:shadow-xl hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.456L3 21l2.456-5.094A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z"></path>
            </svg>
            Contact Us
          </a>
          
          <a href="/book-a-consultation" class="inline-flex items-center justify-center gap-3 border-2 border-primary text-primary px-8 py-4 rounded-xl font-semibold hover:bg-primary hover:text-primary-foreground transition-all duration-300 hover:scale-105">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Book Free Consultation
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Enhanced hover effects and animations */
  .group:hover {
    transform: translateY(-4px);
  }
  
  /* Smooth transitions for all interactive elements */
  * {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  /* Professional spacing and typography */
  section {
    scroll-margin-top: var(--spacing-4xl);
  }
  
  /* Ensure consistent line heights */
  p, li {
    line-height: 1.6;
  }
</style>