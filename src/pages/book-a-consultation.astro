---
import Layout from '../layouts/Layout.astro';

---

<Layout title="Book a Consultation | Nosyt Labs">
  <main class="container mx-auto px-4 py-16">
    
    <h1 class="brand-heading-1 text-center">Book a Consultation</h1>
    <p class="brand-body text-center max-w-3xl mx-auto mt-4">
      Ready to discuss your next project? Schedule a free consultation with our experts.
    </p>
    <div class="max-w-2xl mx-auto mt-16">
      <div class="bg-secondary rounded-lg p-8">
        <form>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="flex flex-col">
              <label for="name" class="brand-body-sm mb-2">Full Name</label>
              <input type="text" id="name" name="name" class="bg-primary border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-nexus-cyan">
            </div>
            <div class="flex flex-col">
              <label for="email" class="brand-body-sm mb-2">Email Address</label>
              <input type="email" id="email" name="email" class="bg-primary border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-nexus-cyan">
            </div>
          </div>
          <div class="flex flex-col mt-6">
            <label for="message" class="brand-body-sm mb-2">Message</label>
            <textarea id="message" name="message" rows="4" class="bg-primary border border-gray-700 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-nexus-cyan"></textarea>
          </div>
          <div class="text-center mt-8">
            <button type="submit" class="bg-nexus-cyan text-primary font-bold rounded-full px-8 py-3 hover:bg-white transition-colors duration-300">
              Send Message
            </button>
          </div>
        </form>
      </div>
    </div>
  </main>
</Layout>