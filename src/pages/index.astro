---
import MainLayout from '@/layouts/MainLayout.astro';
import Section from '@/components/layout/Section.astro';
import Container from '@/components/layout/Container.astro';
import SectionHeader from '@/components/layout/SectionHeader.astro';
import Hero from '@/components/content/Hero.astro';
import Services from '@/components/content/Services.astro';
import Testimonials from '@/components/content/Testimonials.astro';
import CaseStudies from '@/components/content/CaseStudies.astro';
import StatsDisplay from '@/components/ui/StatsDisplay.astro';
import Button from '@/components/ui/Button.astro';
import { getPrimaryStats } from '@/lib/data/stats';
import { SITE_CONFIG } from '@/lib/constants';

const primaryStats = getPrimaryStats();

// Structured data for homepage
const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "NOSYT Labs",
  "description": "Notable Opportunities Shape Your Tomorrow - NOSYT helps businesses seize opportunities through innovative digital solutions that drive results.",
  "url": SITE_CONFIG.BASE_URL,
  "logo": `${SITE_CONFIG.BASE_URL}/images/logo-icon.webp`,
  "foundingDate": "2020",
  "founder": {
    "@type": "Person",
    "name": "Tyson Faulkner"
  },
  "address": {
    "@type": "PostalAddress",
    "addressCountry": "US"
  },
  "sameAs": [
    "https://github.com/nosytlabs",
    "https://linkedin.com/company/nosytlabs"
  ],
  "offers": {
    "@type": "Offer",
    "itemOffered": {
      "@type": "Service",
      "name": "Web Development & AI Integration Services",
      "description": "Custom web applications, AI integration, and digital solutions"
    }
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "5.0",
    "reviewCount": "47",
    "bestRating": "5",
    "worstRating": "1"
  }
};
---

<MainLayout 
  title="NOSYT Labs - Notable Opportunities Shape Your Tomorrow"
  description="NOSYT stands for Notable Opportunities Shape Your Tomorrow. We help businesses seize opportunities through innovative digital solutions, AI integration, and expert web development."
  keywords={["NOSYT", "web development", "AI integration", "digital solutions", "business opportunities", "innovation", "mobile apps", "UI/UX design", "custom software", "web applications"]}
  ogTitle="NOSYT Labs - Notable Opportunities Shape Your Tomorrow"
  ogDescription="NOSYT stands for Notable Opportunities Shape Your Tomorrow. We help businesses seize opportunities through innovative digital solutions."
  ogImage="/images/og-homepage.jpg"
  type="website"
  author="NOSYT Labs"
  jsonLd={jsonLd}
  containerClass="full-width"
  pageClass="home-page"
>
  <!-- Hero Section - Full width with no container -->
  <Hero 
    title="Notable Opportunities Shape Your Tomorrow"
    subtitle="NOSYT • Innovative Digital Solutions • Transform Your Business"
    ctaText="Seize Your Opportunity"
    ctaLink="/contact"
    secondaryCtaText="Explore Solutions"
    secondaryCtaLink="/services"
  />
  
  <!-- Stats Section -->
  <Section background="muted" spacing="md">
    <Container size="standard">
      <StatsDisplay stats={primaryStats} variant="hero" />
    </Container>
  </Section>
  
  <!-- Services Section -->
  <Section background="gradient" spacing="lg">
    <Container size="standard">
      <Services />
    </Container>
  </Section>
  
  <!-- Case Studies Section -->
  <Section background="muted" spacing="lg">
    <Container size="standard">
      <SectionHeader 
        title="Success Stories"
        subtitle="Real results from our client projects with measurable impact"
        level={2}
        align="center"
      />
      <CaseStudies />
    </Container>
  </Section>
  
  <!-- Testimonials Section -->
  <Section background="default" spacing="lg">
    <Container size="standard">
      <SectionHeader 
        title="What Our Clients Say"
        subtitle="Trusted by businesses worldwide"
        level={2}
        align="center"
      />
      <Testimonials />
    </Container>
  </Section>
  
  <!-- Final CTA Section -->
  <Section background="gradient" spacing="lg">
    <Container size="narrow">
      <div class="cta-content">
        <h2 class="cta-title">
          Ready to Shape Your Tomorrow?
        </h2>
        <p class="cta-description">
          Seize your opportunity today. Let's discuss how NOSYT can help you achieve your goals with innovative digital solutions.
        </p>
        <div class="cta-actions">
          <Button 
            href="/contact"
            text="Get Started"
            variant="primary"
            size="lg"
          />
          <Button 
            href="/services"
            text="Explore Services"
            variant="outline"
            size="lg"
          />
        </div>
      </div>
    </Container>
  </Section>
</MainLayout>
