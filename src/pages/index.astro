---
// NosytLabs Homepage - Modern Professional Design with Organized Components
import UnifiedLayout from "@/layouts/UnifiedLayout.astro";
import { NosytLabsBentoServices } from "@/components/marketing/nosytlabs-bento-services.tsx";
import ProjectGrid from "@/components/content/ProjectGrid.astro";
import Hero from "@/components/Hero.astro";
import TestimonialsSection from "@/components/content/TestimonialsSection.tsx";
import TestComponent from "@/components/test/TestComponent.tsx";
import HomepageCTA from "@/components/conversion/HomepageCTA.astro";
import { Button } from "@/components/ui/button.tsx"; // Import Button
import { Icon } from "@/components/ui/icon.tsx"; // Import Icon
import AnimatedSection from "@/components/animations/AnimatedSection.astro"; // Import AnimatedSection
// Featured projects data - Real NosytLabs projects with performance metrics
const featuredProjects = [
  {
    title: "High-Performance E-Commerce Platform",
    description: "Built a lightning-fast e-commerce platform achieving 98 Lighthouse score, 1.2s load time, and 47% conversion rate increase. Implemented advanced caching, image optimization, and progressive web app features.",
    image: "/images/projects/project-placeholder.svg",
    technologies: ["Next.js", "React", "Stripe", "PostgreSQL", "Redis"],
    link: "/projects",
    category: "E-Commerce",
    metrics: ["98 Lighthouse Score", "1.2s Load Time", "+47% Conversions"]
  },
  {
    title: "Enterprise SaaS Dashboard",
    description: "Developed a real-time analytics dashboard handling 10M+ data points daily. Reduced page load times by 73% and improved user engagement by 89% through optimized data visualization and smart caching.",
    image: "/images/projects/project-placeholder.svg",
    technologies: ["React", "TypeScript", "D3.js", "WebSocket", "AWS"],
    link: "/projects",
    category: "Enterprise Software",
    metrics: ["10M+ Data Points", "73% Faster Loading", "+89% Engagement"]
  },
  {
    title: "AI-Powered Content Management System",
    description: "Created an intelligent CMS with automated content optimization and SEO recommendations. Delivered 156% organic traffic increase and 92% content creation time reduction for digital marketing agencies.",
    image: "/images/projects/project-placeholder.svg",
    technologies: ["Vue.js", "Python", "OpenAI API", "MongoDB", "Docker"],
    link: "/projects",
    category: "AI Integration",
    metrics: ["+156% Organic Traffic", "92% Time Savings", "AI-Powered SEO"]
  }
] || [];


const pageTitle = "NosytLabs - Professional Web Development & AI Solutions";
const pageDescription = "Transform your business with custom web development and AI integration services. Professional, scalable solutions built with modern technologies.";
---
<UnifiedLayout title={pageTitle} description={pageDescription}>
  <Hero />

  <AnimatedSection>
    <NosytLabsBentoServices />
  </AnimatedSection>

  <AnimatedSection class="modern-projects">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <header class="projects-header">
        <div class="header-badge">
          <Icon name="briefcase" className="w-4 h-4" />
          <span>Our Work</span>
        </div>
        <h2 class="projects-title">Proven Success in Web & AI</h2>
        <p class="projects-description">
          We deliver high-performance solutions that drive growth and efficiency. Explore some of our impactful projects.
        </p>
      </header>
      <ProjectGrid projects={featuredProjects} />
      <footer class="projects-footer">
        <Button href="/projects" size="lg" variant="outline">
          Explore All Projects
          <Icon name="arrowRight" className="ml-2 w-5 h-5" />
        </Button>
      </footer>
    </div>
  </AnimatedSection>

  <AnimatedSection>
    <TestComponent client:load />
  </AnimatedSection>
  
  <AnimatedSection>
    <TestimonialsSection client:load />
  </AnimatedSection>
  
  <AnimatedSection>
    <HomepageCTA />
  </AnimatedSection>
</UnifiedLayout>

<style>
  .modern-projects {
    padding: var(--space-20) 0;
    background: var(--neutral-50);
  }

  [data-theme="dark"] .modern-projects {
    background: var(--neutral-800);
  }

  .projects-header {
    text-align: left;
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
    padding: 0 1rem;
  }

  @media (min-width: 640px) {
    .projects-header {
      margin-bottom: 3rem;
      padding: 0 1.5rem;
    }
  }

  @media (min-width: 768px) {
    .projects-header {
      margin-bottom: var(--space-16);
      padding: 0 2rem;
    }
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--nosyt-gradient-primary, linear-gradient(135deg, #6B46C1 0%, #2D1B69 100%));
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .projects-title {
    font-size: clamp(1.875rem, 5vw, var(--text-4xl));
    font-weight: 800;
    color: var(--neutral-900);
    margin-bottom: 0.75rem;
    line-height: 1.2;
  }

  @media (min-width: 640px) {
    .projects-title {
      margin-bottom: var(--space-4);
    }
  }

  [data-theme="dark"] .projects-title {
    color: var(--neutral-100);
  }

  .projects-description {
    font-size: clamp(1rem, 2.5vw, var(--text-lg));
    color: var(--neutral-600);
    line-height: 1.7;
  }

  [data-theme="dark"] .projects-description {
    color: var(--neutral-400);
  }

  .projects-footer {
    text-align: center;
    margin-top: var(--space-12);
  }


  .why-choose-us {
    padding: var(--space-20) 0;
    background: var(--neutral-100);
  }

  [data-theme="dark"] .why-choose-us {
    background: var(--neutral-900);
  }

  /* Remove redundant custom button styles */
  /* .btn-lg is not used after button component refactor */
  /* .nosyt-btn-primary, .nosyt-btn-secondary, .nosyt-button-hover are replaced by Button component */

  /* Responsive Design */
  @media (max-width: 768px) {
    .projects-title,
    .cta-title {
      font-size: var(--text-3xl);
    }

    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>