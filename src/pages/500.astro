---
/**
 * 500 Error Page
 *
 * Custom 500 server error page with recovery options and support information
 */

import BaseLayout from '../layouts/base-layout.astro';
import { generateCanonicalUrl } from '../utils/path-resolvers';

const canonicalUrl = generateCanonicalUrl('/500');

// SEO configuration
const seoConfig = {
  title: 'Server Error | NosytLabs',
  description: 'We are experiencing technical difficulties. Our team has been notified and is working to resolve the issue.',
  keywords: ['500', 'server error', 'technical difficulties', 'nosytlabs'],
};
---

<BaseLayout
  title={seoConfig.title}
  description={seoConfig.description}
  keywords={seoConfig.keywords}
  {canonicalUrl}
  type="website"
>
  <!-- 500 Error Section -->
  <section class="section-lg min-h-screen flex items-center justify-center bg-gradient-to-br from-red-50 to-orange-50 dark:from-red-950/20 dark:to-orange-950/20">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <!-- Error Code -->
        <div class="mb-8">
          <h1 class="text-9xl md:text-[12rem] font-bold text-red-500/20 leading-none select-none">
            500
          </h1>
        </div>

        <!-- Error Message -->
        <div class="mb-12">
          <h2 class="heading-2 mb-6 text-red-600 dark:text-red-400">Internal Server Error</h2>
          <p class="text-xl text-muted-foreground mb-4">
            Oops! Something went wrong on our end. We're experiencing technical difficulties.
          </p>
          <p class="text-muted-foreground">
            Our development team has been automatically notified and is working to fix this issue.
          </p>
        </div>

        <!-- Status Information -->
        <div class="bg-red-50 dark:bg-red-950/30 border border-red-200 dark:border-red-800 rounded-lg p-6 mb-8 max-w-2xl mx-auto">
          <div class="flex items-center justify-center mb-4">
            <div class="w-3 h-3 bg-red-500 rounded-full animate-pulse mr-3"></div>
            <span class="text-sm font-medium text-red-700 dark:text-red-300">System Status: Under Investigation</span>
          </div>
          <p class="text-sm text-red-600 dark:text-red-400">
            Error ID: <code class="bg-red-100 dark:bg-red-900/50 px-2 py-1 rounded text-xs" id="error-id">ERR-{Math.random().toString(36).substr(2, 9).toUpperCase()}</code>
          </p>
          <p class="text-xs text-red-500 dark:text-red-500 mt-2">
            Timestamp: {new Date().toLocaleString()}
          </p>
        </div>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
          <button 
            onclick="window.location.reload()" 
            class="btn btn-primary inline-flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
            </svg>
            Try Again
          </button>
          <a 
            href="/" 
            class="btn btn-outline inline-flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
            </svg>
            Go Home
          </a>
        </div>

        <!-- What You Can Do -->
        <div class="grid md:grid-cols-2 gap-6 max-w-3xl mx-auto mb-12">
          <!-- Wait and Retry -->
          <div class="card p-6 text-center">
            <div class="w-12 h-12 bg-blue-100 dark:bg-blue-900/30 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600 dark:text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Wait a Moment</h3>
            <p class="text-sm text-muted-foreground mb-4">
              Sometimes these issues resolve themselves quickly. Try refreshing the page in a few minutes.
            </p>
            <button 
              onclick="setTimeout(() => window.location.reload(), 60000); this.innerHTML = 'Refreshing in 60s...'; this.disabled = true;" 
              class="text-blue-600 hover:underline text-sm font-medium"
            >
              Auto-refresh in 1 minute
            </button>
          </div>

          <!-- Contact Support -->
          <div class="card p-6 text-center">
            <div class="w-12 h-12 bg-green-100 dark:bg-green-900/30 rounded-lg flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600 dark:text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18.364 5.636l-3.536 3.536m0 5.656l3.536 3.536M9.172 9.172L5.636 5.636m3.536 9.192L5.636 18.364M12 2.25a9.75 9.75 0 109.75 9.75A9.75 9.75 0 0012 2.25z" />
              </svg>
            </div>
            <h3 class="font-semibold mb-2">Need Help?</h3>
            <p class="text-sm text-muted-foreground mb-4">
              If this problem persists, please contact our support team with the error ID above.
            </p>
            <a href="/contact" class="text-green-600 hover:underline text-sm font-medium">
              Contact Support →
            </a>
          </div>
        </div>

        <!-- Technical Details (Collapsible) -->
        <div class="max-w-2xl mx-auto">
          <details class="bg-muted/50 rounded-lg p-4 text-left">
            <summary class="cursor-pointer font-medium text-sm mb-2 hover:text-primary">
              Technical Details (for developers)
            </summary>
            <div class="text-xs text-muted-foreground space-y-2 mt-4">
              <div class="grid grid-cols-2 gap-4">
                <div>
                  <strong>Error Type:</strong> Internal Server Error
                </div>
                <div>
                  <strong>Status Code:</strong> 500
                </div>
                <div>
                  <strong>User Agent:</strong> <span id="user-agent">Loading...</span>
                </div>
                <div>
                  <strong>Referrer:</strong> <span id="referrer">Loading...</span>
                </div>
              </div>
              <div class="mt-4 p-3 bg-muted rounded border">
                <strong>Possible Causes:</strong>
                <ul class="list-disc list-inside mt-2 space-y-1">
                  <li>Database connection issues</li>
                  <li>Server configuration problems</li>
                  <li>Application code errors</li>
                  <li>Resource exhaustion</li>
                  <li>Third-party service failures</li>
                </ul>
              </div>
            </div>
          </details>
        </div>

        <!-- Status Updates -->
        <div class="mt-12 text-center">
          <p class="text-sm text-muted-foreground mb-4">
            For real-time updates on system status and maintenance:
          </p>
          <div class="flex justify-center gap-4">
            <a href="/contact" class="text-primary hover:underline text-sm font-medium">
              Contact Us
            </a>
            <span class="text-muted-foreground">•</span>
            <a href="/" class="text-primary hover:underline text-sm font-medium">
              Homepage
            </a>
            <span class="text-muted-foreground">•</span>
            <a href="/services" class="text-primary hover:underline text-sm font-medium">
              Our Services
            </a>
          </div>
        </div>

        <!-- Apology Message -->
        <div class="mt-16 p-6 bg-gradient-to-r from-primary/5 to-secondary/5 rounded-lg max-w-2xl mx-auto">
          <h3 class="font-semibold mb-2">We Apologize for the Inconvenience</h3>
          <p class="text-sm text-muted-foreground">
            We understand how frustrating technical issues can be. Our team is committed to providing reliable service, 
            and we're working hard to resolve this issue as quickly as possible.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Client-side Error Reporting -->
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Populate technical details
      const userAgentEl = document.getElementById('user-agent');
      const referrerEl = document.getElementById('referrer');
      
      if (userAgentEl) {
        userAgentEl.textContent = navigator.userAgent.substring(0, 50) + '...';
      }
      
      if (referrerEl) {
        referrerEl.textContent = document.referrer || 'Direct access';
      }

      // Optional: Send error report to analytics
      try {
        // This would typically send to your error tracking service
        console.log('500 Error Page Viewed', {
          timestamp: new Date().toISOString(),
          userAgent: navigator.userAgent,
          referrer: document.referrer,
          url: window.location.href
        });
      } catch (e) {
        // Silently fail if analytics is not available
      }
    });
  </script>
</BaseLayout>