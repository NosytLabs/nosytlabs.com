---
import NewBaseLayout from '../layouts/NewBaseLayout.astro';
import HeroSection from '../components/HeroSection.astro';
---

<NewBaseLayout title="NosytLabs - Notable Opportunities Shape Your Tomorrow" description="NosytLabs provides innovative digital solutions including web development, content creation, crypto mining, and 3D printing services.">
  <!-- Hero Section -->
  <HeroSection
    title="Notable Opportunities Shape Your Tomorrow"
    subtitle="NosytLabs provides innovative digital solutions including web development, content creation, crypto mining, and 3D printing services."
    primaryButtonText="Explore Services"
    primaryButtonUrl="/services"
    secondaryButtonText="View Projects"
    secondaryButtonUrl="/projects"
  />

  <!-- Services & Projects Section -->
  <section id="services-projects" class="py-20 bg-gray-50 dark:bg-gray-900">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Services & Projects</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Discover how NosytLabs can help you with web development, content creation, crypto mining, and 3D printing services.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Web Development Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="16 18 22 12 16 6"></polyline>
              <polyline points="8 6 2 12 8 18"></polyline>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Web Development</h3>
          <p class="mb-4">Modern, responsive websites and web applications built with the latest technologies.</p>
          <a href="/services#web-development" class="service-link">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Content Creation Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polygon points="23 7 16 12 23 17 23 7"></polygon>
              <rect x="1" y="5" width="15" height="14" rx="2" ry="2"></rect>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Content Creation</h3>
          <p class="mb-4">Professional video content for YouTube and live streaming on Kick.com.</p>
          <a href="/content-creation" class="service-link">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Crypto Mining Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="12" y1="1" x2="12" y2="23"></line>
              <path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Crypto Mining</h3>
          <p class="mb-4">Cryptocurrency mining solutions and consulting for optimal performance.</p>
          <a href="/crypto-mining" class="service-link">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- 3D Printing Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M6 9l6-6 6 6"></path>
              <path d="M6 15l6 6 6-6"></path>
              <path d="M12 3v18"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">3D Printing</h3>
          <p class="mb-4">Custom 3D printing services with Creality Ender 3 S1 Pro and Elegoo Saturn 2.</p>
          <a href="/3d-printing" class="service-link">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- Consulting Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">Consulting</h3>
          <p class="mb-4">Expert advice on technology solutions, digital strategy, and implementation.</p>
          <a href="/services#consulting" class="service-link">
            Learn More
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>

        <!-- NosytOS95 Card -->
        <div class="service-card">
          <div class="service-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="3" width="20" height="14" rx="2" ry="2"></rect>
              <line x1="8" y1="21" x2="16" y2="21"></line>
              <line x1="12" y1="17" x2="12" y2="21"></line>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3">NosytOS95</h3>
          <p class="mb-4">Experience our retro Windows 95 interface with working applications like Doom II and Duck Hunt.</p>
          <a href="/nosytos95" class="service-link">
            Try It Now
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Content Section -->
  <section class="py-20 bg-white dark:bg-gray-800">
    <div class="container">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Content</h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Check out our latest videos, live streams, and blog posts.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <!-- YouTube Videos -->
        <div class="content-card">
          <h3 class="text-2xl font-semibold mb-6">Latest YouTube Videos</h3>
          <div class="aspect-video mb-4 rounded-lg overflow-hidden">
            <iframe
              width="100%"
              height="100%"
              src="https://www.youtube.com/embed/videoseries?list=UU-TycenYT"
              title="YouTube video player"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              loading="lazy"
            ></iframe>
          </div>
          <a href="https://www.youtube.com/@TycenYT" target="_blank" rel="noopener noreferrer" class="btn btn-primary">
            Visit YouTube Channel
          </a>
        </div>

        <!-- Live Stream -->
        <div class="content-card">
          <h3 class="text-2xl font-semibold mb-6">Live on Kick.com</h3>
          <div class="aspect-video mb-4 rounded-lg overflow-hidden">
            <iframe
              src="https://player.kick.com/Tycen?muted=true&autoplay=true"
              width="100%"
              height="100%"
              frameborder="0"
              scrolling="no"
              allowfullscreen
              allow="autoplay; encrypted-media; fullscreen; picture-in-picture"
              loading="lazy"
            ></iframe>
          </div>
          <a href="/live" class="btn btn-primary">
            Watch Live Stream
          </a>
        </div>
      </div>

      <!-- Blog Posts Preview -->
      <div class="mt-16">
        <h3 class="text-2xl font-semibold mb-6 text-center">Latest Blog Posts</h3>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <!-- Blog Post 1 -->
          <div class="blog-card">
            <div class="blog-image">
              <img src="/images/blog/cursor-ai.jpg" alt="Cursor AI" loading="lazy">
            </div>
            <div class="blog-content">
              <h4 class="text-xl font-semibold mb-2">Cursor AI: The Future of Coding</h4>
              <p class="text-gray-600 dark:text-gray-300 mb-4">Explore how Cursor AI is revolutionizing the way developers write code.</p>
              <a href="/blog/cursor-ai" class="blog-link">
                Read More
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </div>

          <!-- Blog Post 2 -->
          <div class="blog-card">
            <div class="blog-image">
              <img src="/images/blog/trae-ai.jpg" alt="Trae AI" loading="lazy">
            </div>
            <div class="blog-content">
              <h4 class="text-xl font-semibold mb-2">Trae AI: Transforming Content Creation</h4>
              <p class="text-gray-600 dark:text-gray-300 mb-4">How Trae AI is changing the landscape of digital content creation.</p>
              <a href="/blog/trae-ai" class="blog-link">
                Read More
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </div>

          <!-- Blog Post 3 -->
          <div class="blog-card">
            <div class="blog-image">
              <img src="/images/blog/roo-code.jpg" alt="Roo Code" loading="lazy">
            </div>
            <div class="blog-content">
              <h4 class="text-xl font-semibold mb-2">Roo Code: Simplifying Development</h4>
              <p class="text-gray-600 dark:text-gray-300 mb-4">Discover how Roo Code is making development more accessible.</p>
              <a href="/blog/roo-code" class="blog-link">
                Read More
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </a>
            </div>
          </div>
        </div>

        <div class="text-center mt-10">
          <a href="/blog" class="btn btn-outline">
            View All Blog Posts
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-primary text-white">
    <div class="container text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Ready to Work With Us?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Let's discuss how NosytLabs can help you achieve your goals with our innovative solutions.
      </p>
      <div class="flex flex-wrap justify-center gap-4">
        <a href="/contact" class="btn bg-white text-primary hover:bg-gray-100">
          Contact Us
        </a>
        <a href="/services" class="btn border-2 border-white bg-transparent hover:bg-white/10">
          Explore Services
        </a>
      </div>
    </div>
  </section>
</NewBaseLayout>

<style>
  /* Service Cards */
  .service-card {
    background-color: white;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 15px rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .dark .service-card {
    background-color: var(--gray-800);
  }

  .service-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .service-icon {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 70px;
    height: 70px;
    background-color: var(--primary-light);
    color: white;
    border-radius: 50%;
    margin-bottom: 1.5rem;
  }

  .service-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 500;
    margin-top: auto;
    transition: all 0.3s ease;
  }

  .service-link svg {
    transition: transform 0.3s ease;
  }

  .service-link:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .service-link:hover svg {
    transform: translateX(4px);
  }

  .dark .service-link {
    color: var(--primary-light);
  }

  .dark .service-link:hover {
    color: var(--accent-light);
  }

  /* Content Cards */
  .content-card {
    background-color: white;
    border-radius: 0.75rem;
    padding: 2rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 15px rgba(0, 0, 0, 0.03);
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .dark .content-card {
    background-color: var(--gray-800);
  }

  /* Blog Cards */
  .blog-card {
    background-color: white;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05), 0 10px 15px rgba(0, 0, 0, 0.03);
    transition: all 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .dark .blog-card {
    background-color: var(--gray-800);
  }

  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .blog-image {
    height: 200px;
    overflow: hidden;
  }

  .blog-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .blog-card:hover .blog-image img {
    transform: scale(1.05);
  }

  .blog-content {
    padding: 1.5rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .blog-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--primary);
    font-weight: 500;
    margin-top: auto;
    transition: all 0.3s ease;
  }

  .blog-link svg {
    transition: transform 0.3s ease;
  }

  .blog-link:hover {
    color: var(--accent);
    text-decoration: none;
  }

  .blog-link:hover svg {
    transform: translateX(4px);
  }

  .dark .blog-link {
    color: var(--primary-light);
  }

  .dark .blog-link:hover {
    color: var(--accent-light);
  }
</style>
