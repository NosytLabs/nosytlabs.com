---
// Tech Consulting & SEO Audits Page
import UnifiedLayout from '@/layouts/UnifiedLayout.astro';
import { CONTACT } from '@/config/constants.ts';
import Hero from '@/components/Hero.astro';
import { Button } from "@/components/ui/button.tsx"; // Import Button
import { Icon } from "@/components/ui/icon.tsx"; // Import Icon
import Card from '@/components/core/Card.astro'; // Ensure Card is imported

const pageTitle = "Tech Consulting & SEO Audits | NosytLabs";
const pageDescription = "Professional technology consulting and comprehensive SEO audits. Get expert guidance to improve your digital presence and website performance.";
---

<UnifiedLayout
  title={pageTitle}
  description={pageDescription}
>
  <Hero
    title="Tech Consulting & SEO Audits"
    subtitle="Expert guidance and comprehensive audits to optimize your digital presence and drive growth."
    ctaText="Get Audit"
    ctaLink="/contact"
  />

  <!-- Services Section -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Consulting Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Professional analysis and strategic recommendations to improve your digital performance.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8" data-stagger data-stagger-delay="200">
        <!-- SEO Audit -->
        <Card
          contentType="service"
          title="Comprehensive SEO Audit"
          description="Detailed analysis of your website's SEO performance with actionable recommendations for improvement."
          icon="🔍"
          pricing="$500"
          timeline="5-7 business days"
          class="stagger-item"
        >
          <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
            <li>• Technical SEO Analysis</li>
            <li>• Keyword Research & Strategy</li>
            <li>• Content Optimization Review</li>
            <li>• Competitor Analysis</li>
            <li>• Local SEO Assessment</li>
            <li>• Performance Metrics Report</li>
          </ul>
        </Card>

        <!-- Website Performance Audit -->
        <Card
          contentType="service"
          title="Website Performance Audit"
          description="Complete analysis of your website's speed, performance, and user experience with optimization recommendations."
          icon="⚡"
          pricing="$400"
          timeline="3-5 business days"
          class="stagger-item"
        >
          <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
            <li>• Core Web Vitals Analysis</li>
            <li>• Page Speed Optimization</li>
            <li>• Mobile Performance Review</li>
            <li>• Accessibility Assessment</li>
            <li>• Security Scan</li>
            <li>• Optimization Roadmap</li>
          </ul>
        </Card>
      </div>
    </div>
  </section>

  <!-- Consulting Methodology Section -->
  <section class="py-20 bg-white dark:bg-neutral-800">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Our Consulting Methodology</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          A structured and collaborative approach to deliver strategic insights and actionable recommendations that drive measurable results.
        </p>
      </div>

      <div class="grid md:grid-cols-1 lg:grid-cols-3 gap-8" data-stagger data-stagger-delay="150">
        <Card
          contentType="feature"
          icon="🔍"
          title="Discovery & Analysis"
          description="We begin with a deep dive into your current technology landscape, business objectives, and challenges. This phase includes stakeholder interviews, system analysis, and data review to build a comprehensive understanding of your needs."
          class="stagger-item"
        />
        <Card
          contentType="feature"
          icon="🗺️"
          title="Strategic Roadmapping"
          description="Based on our findings, we develop a strategic roadmap that outlines clear, prioritized recommendations. This includes technology choices, architectural improvements, and process optimizations designed to align with your long-term goals."
          class="stagger-item"
        />
        <Card
          contentType="feature"
          icon="🚀"
          title="Implementation & Support"
          description="We provide hands-on support to implement the recommended solutions, working alongside your team to ensure a smooth transition. Our engagement includes knowledge transfer, performance monitoring, and ongoing guidance to ensure sustained success."
          class="stagger-item"
        />
      </div>
    </div>
  </section>

  <!-- Areas of Expertise Section -->
  <section class="py-20 bg-gray-50 dark:bg-neutral-900">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Areas of Expertise</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Leveraging deep expertise across critical technology domains to provide holistic and effective consulting.
        </p>
      </div>
      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8" data-stagger data-stagger-delay="150">
          <Card
            contentType="info"
            title="Digital Transformation"
            description="Guiding businesses through the process of adopting modern technologies to fundamentally change how they operate and deliver value."
            class="stagger-item"
          >
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
              <li>• Cloud Migration & Strategy</li>
              <li>• Legacy System Modernization</li>
              <li>• Workflow Automation</li>
              <li>• Data-Driven Decision Making</li>
            </ul>
          </Card>
          <Card
            contentType="info"
            title="AI & Automation"
            description="Integrating artificial intelligence and automation to enhance efficiency, unlock new capabilities, and create intelligent systems."
            class="stagger-item"
          >
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
              <li>• Custom AI Model Development</li>
              <li>• Robotic Process Automation (RPA)</li>
              <li>• Chatbot & Virtual Assistant Integration</li>
              <li>• Predictive Analytics</li>
            </ul>
          </Card>
          <Card
            contentType="info"
            title="Performance & Scalability"
            description="Optimizing application performance and designing scalable architectures that can grow with your business demands."
            class="stagger-item"
          >
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
              <li>• Performance Audits & Optimization</li>
              <li>• Cloud Infrastructure Design</li>
              <li>• Load Balancing & Caching Strategies</li>
              <li>• Microservices Architecture</li>
            </ul>
          </Card>
          <Card
            contentType="info"
            title="Security & Compliance"
            description="Implementing robust security measures and ensuring compliance with industry standards to protect your digital assets."
            class="stagger-item"
          >
            <ul class="text-gray-600 dark:text-gray-300 space-y-2 mb-6">
              <li>• Security Audits & Penetration Testing</li>
              <li>• Data Privacy (GDPR, HIPAA)</li>
              <li>• Identity & Access Management</li>
              <li>• Disaster Recovery Planning</li>
            </ul>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 nosyt-hero">
    <div class="container mx-auto px-4 text-center">
      <div data-scroll-animate data-animation-type="fade-in-up">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Optimize Your Digital Presence?</h2>
        <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Get professional insights and actionable recommendations to improve your website and technology stack.
        </p>
      </div>
      <div class="flex flex-col sm:flex-row gap-4 justify-center" data-stagger data-stagger-delay="120">
        <Button href="/contact" variant="primary" size="default" client:load class="stagger-item">
          Get Your Audit
        </Button>
        <Button href={`mailto:${CONTACT.EMAIL.MAIN}?subject=Consulting Inquiry`} variant="outline" size="default" client:load class="stagger-item">
          Email Us
        </Button>
      </div>
    </div>
  </section>
</UnifiedLayout>
