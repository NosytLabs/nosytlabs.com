---
// Tech Consulting & SEO Audits Page
import BaseLayout from '../layouts/BaseLayout.astro';
import { CONTACT } from '../config/constants.ts';

const pageTitle = "Tech Consulting & SEO Audits | NosytLabs";
const pageDescription = "Professional technology consulting and comprehensive SEO audits. Get expert guidance to improve your digital presence and website performance.";
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  pageKey="consulting"
>
  <!-- Hero Section -->
  <section class="nosyt-hero min-h-[60vh] flex items-center justify-center relative overflow-hidden">
    <div class="container mx-auto px-4 text-center relative z-10">
      <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 nosyt-float">
        Tech Consulting & SEO Audits
      </h1>
      <p class="text-xl md:text-2xl text-white/90 mb-8 max-w-3xl mx-auto">
        Expert guidance and comprehensive audits to optimize your digital presence and drive growth.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="#services" class="btn-nosyt-secondary px-8 py-4 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
          View Services
        </a>
        <a href="/contact" class="btn-nosyt-outline px-8 py-4 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
          Get Audit
        </a>
      </div>
    </div>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Consulting Services</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Professional analysis and strategic recommendations to improve your digital performance.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        <!-- SEO Audit -->
        <div class="nosyt-card p-8">
          <div class="w-16 h-16 bg-gradient-to-r from-green-500 to-green-600 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M9.5,3A6.5,6.5 0 0,1 16,9.5C16,11.11 15.41,12.59 14.44,13.73L14.71,14H15.5L20.5,19L19,20.5L14,15.5V14.71L13.73,14.44C12.59,15.41 11.11,16 9.5,16A6.5,6.5 0 0,1 3,9.5A6.5,6.5 0 0,1 9.5,3M9.5,5C7,5 5,7 5,9.5C5,12 7,14 9.5,14C12,14 14,12 14,9.5C14,7 12,5 9.5,5Z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Comprehensive SEO Audit</h3>
          <p class="text-gray-600 mb-6">
            Detailed analysis of your website's SEO performance with actionable recommendations for improvement.
          </p>
          <ul class="text-gray-600 space-y-2 mb-6">
            <li>• Technical SEO Analysis</li>
            <li>• Keyword Research & Strategy</li>
            <li>• Content Optimization Review</li>
            <li>• Competitor Analysis</li>
            <li>• Local SEO Assessment</li>
            <li>• Performance Metrics Report</li>
          </ul>
          <div class="border-t pt-4">
            <div class="text-2xl font-bold text-green-600 mb-2">$500</div>
            <div class="text-sm text-gray-500">Delivered in 5-7 business days</div>
          </div>
        </div>

        <!-- Website Performance Audit -->
        <div class="nosyt-card p-8">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-500 to-blue-600 rounded-full flex items-center justify-center mb-6">
            <svg class="w-8 h-8 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M12,4A8,8 0 0,1 20,12A8,8 0 0,1 12,20A8,8 0 0,1 4,12A8,8 0 0,1 12,4M12,6A6,6 0 0,0 6,12A6,6 0 0,0 12,18A6,6 0 0,0 18,12A6,6 0 0,0 12,6M12,8A4,4 0 0,1 16,12A4,4 0 0,1 12,16A4,4 0 0,1 8,12A4,4 0 0,1 12,8Z"/>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Website Performance Audit</h3>
          <p class="text-gray-600 mb-6">
            Complete analysis of your website's speed, performance, and user experience with optimization recommendations.
          </p>
          <ul class="text-gray-600 space-y-2 mb-6">
            <li>• Core Web Vitals Analysis</li>
            <li>• Page Speed Optimization</li>
            <li>• Mobile Performance Review</li>
            <li>• Accessibility Assessment</li>
            <li>• Security Scan</li>
            <li>• Optimization Roadmap</li>
          </ul>
          <div class="border-t pt-4">
            <div class="text-2xl font-bold text-blue-600 mb-2">$400</div>
            <div class="text-sm text-gray-500">Delivered in 3-5 business days</div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Technology Consulting -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">Technology Consulting</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Strategic technology guidance to help your business make informed decisions.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <div class="nosyt-card p-6 text-center">
          <div class="w-12 h-12 bg-purple-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12,2A3,3 0 0,1 15,5V11A3,3 0 0,1 12,14A3,3 0 0,1 9,11V5A3,3 0 0,1 12,2M19,11C19,14.53 16.39,17.44 13,17.93V21H11V17.93C7.61,17.44 5,14.53 5,11H7A5,5 0 0,0 12,16A5,5 0 0,0 17,11H19Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Tech Stack Review</h3>
          <p class="text-gray-600 text-sm">Analysis of your current technology choices and recommendations for improvements.</p>
        </div>

        <div class="nosyt-card p-6 text-center">
          <div class="w-12 h-12 bg-orange-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M19,3H5C3.89,3 3,3.89 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5C21,3.89 20.1,3 19,3M19,19H5V5H19V19Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Digital Strategy</h3>
          <p class="text-gray-600 text-sm">Comprehensive planning for your digital transformation and growth initiatives.</p>
        </div>

        <div class="nosyt-card p-6 text-center">
          <div class="w-12 h-12 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M16,6L18.29,8.29L13.41,13.17L9.41,9.17L2,16.59L3.41,18L9.41,12L13.41,16L19.71,9.71L22,12V6H16Z"/>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-3">Growth Planning</h3>
          <p class="text-gray-600 text-sm">Strategic roadmaps for scaling your technology infrastructure and capabilities.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- What You Get -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">What You Get</h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive reports with actionable insights and clear next steps.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="grid md:grid-cols-2 gap-8">
          <div class="nosyt-card p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Detailed Analysis Report</h3>
            <ul class="text-gray-600 space-y-2">
              <li>• Executive summary with key findings</li>
              <li>• Detailed technical analysis</li>
              <li>• Performance benchmarks</li>
              <li>• Competitive comparison</li>
              <li>• Risk assessment</li>
            </ul>
          </div>

          <div class="nosyt-card p-6">
            <h3 class="text-xl font-bold text-gray-900 mb-4">Action Plan</h3>
            <ul class="text-gray-600 space-y-2">
              <li>• Prioritized recommendations</li>
              <li>• Implementation timeline</li>
              <li>• Resource requirements</li>
              <li>• Expected outcomes</li>
              <li>• Follow-up consultation</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 nosyt-hero">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Ready to Optimize Your Digital Presence?</h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        Get professional insights and actionable recommendations to improve your website and technology stack.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact" class="btn-nosyt-secondary px-8 py-4 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
          Get Your Audit
        </a>
        <a href={`mailto:${CONTACT.EMAIL.MAIN}?subject=Consulting Inquiry`} class="btn-nosyt-outline px-8 py-4 rounded-lg font-semibold transition-all duration-300 hover:scale-105">
          Email Us
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
