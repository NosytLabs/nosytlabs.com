const pageTitle = "Project Portfolio - Web Development & AI Integration Showcase | NOSYT Labs";
const pageDescription = "Explore our comprehensive portfolio of 47 successful web development, mobile app, and AI integration projects. See real results from e-commerce platforms, SaaS applications, and proven solutions we've delivered.";
---

<MainLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={["web development portfolio", "AI integration projects", "React projects", "Node.js applications", "e-commerce development", "SaaS applications", "mobile app development", "proven solutions"]}
  ogTitle="NOSYT Labs Portfolio - Successful Web Development & AI Projects"
  ogDescription="See our proven track record with 47 successful web applications, AI integrations, and proven solutions. Real projects, real results for businesses worldwide."
  canonicalUrl={createInternalLink("/projects")}
>
  <!-- Hero Section -->
  <PageHero
    title="Our Project Portfolio"
    subtitle="Discover our comprehensive showcase of 47 successful projects that demonstrate our expertise across web development, mobile applications, AI integration, and proven solutions. Each project represents our commitment to measurable results, quality, and client success."
    ctaText="Start Your Project"
    ctaHref={createInternalLink("/contact")}
    secondaryCtaText="View Services"
    secondaryCtaHref={createInternalLink("/services")}
    background="gradient"
    size="standard"
  />

  <!-- Add H1 heading for proper hierarchy -->
  <section class="sr-only">
    <h1>Our Projects - NOSYT Labs Portfolio</h1>
  </section>

  <!-- Featured Projects Section -->
  <FeaturedProjects
    title="Featured Projects"
    subtitle="Our Best Work"
    description="Highlighting our most impactful projects with proven ROI that showcase our technical expertise and measurable problem-solving results."
    projects={allProjects}
    showFilters={true}
    className="bg-white dark:bg-gray-900"
  />

  <!-- Project Impact Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-gradient-to-br from-primary/10 via-background to-accent/10">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Project Impact</h2>
        <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto">
          Our projects have delivered measurable results and transformed businesses across various industries.
        </p>
      </div>
      
      <StatsDisplay stats={getPrimaryStats()} variant="hero" />
    </div>
  </section>

  <!-- Technologies Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-muted/20">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Technologies We Master</h2>
        <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto">
          We leverage proven technologies and frameworks to build robust, scalable, and high-performance solutions.
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
        {[
          "React", "Vue.js", "Next.js", "Node.js", "Python", "TypeScript",
          "PostgreSQL", "MongoDB", "AWS", "Docker", "Kubernetes", "AI/ML",
          "React Native", "Flutter", "WebRTC", "Blockchain", "IoT", "Security"
        ].map((tech) => (
          <div class="card-base text-center hover:border-primary/30 hover:-translate-y-1">
            <div class="text-lg font-semibold">{tech}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Process Section -->
  <section class="py-16 md:py-20 lg:py-24 bg-background">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">Our Development Process</h2>
        <p class="text-lg md:text-xl text-muted-foreground max-w-3xl mx-auto">
          We follow a proven methodology that ensures project success from conception to deployment and beyond.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">🎯</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Discovery</h3>
          <p class="text-muted-foreground">Understanding your goals, requirements, and target audience</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">🎨</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Design</h3>
          <p class="text-muted-foreground">Creating intuitive user experiences and modern interfaces</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">⚡</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Development</h3>
          <p class="text-muted-foreground">Building robust, scalable solutions with proven technology</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary/10 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl">🚀</span>
          </div>
          <h3 class="text-xl font-semibold mb-2">Launch</h3>
          <p class="text-muted-foreground">Deploying your solution with ongoing support and optimization</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <CTA
    title="Ready to Start Your Next Project?"
    description="Let's discuss how we can help you achieve your goals with a custom solution tailored to your needs. Get a free consultation and personalized strategy for your project."
    primaryCTA={{
      text: "Get Started Today",
      href: createInternalLink("/contact")
    }}
    secondaryCTA={{
      text: "View Our Services",
      href: createInternalLink("/services")
    }}
    className="bg-gradient-to-br from-primary-600 to-secondary-600 dark:from-primary-800 dark:to-secondary-800"
  />
</MainLayout>
