---
import BaseLayout from '../layouts/base-layout.astro';
import { getCollection } from 'astro:content';
import EnhancedPortfolioShowcase from '../components/EnhancedPortfolioShowcase.astro';

const projects = await getCollection('projects');
const title = 'Our Projects';
const description = 'Explore our portfolio of innovative web development and AI integration projects.';
---

<BaseLayout title={title} description={description} pageKey="projects" type="website">
  <main>
    <section class="section-xl" role="main" aria-label="Our Projects">
      <div class="container">
        <h1 class="text-4xl md:text-5xl font-bold text-text mb-6 text-center">
          Our Projects
        </h1>
        <EnhancedPortfolioShowcase projects={projects} showFilters={true} showSearch={true} />
      </div>
    </section>
  </main>
</BaseLayout>