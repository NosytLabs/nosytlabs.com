const pageTitle = "Project Portfolio - Web Development & AI Integration Showcase | NOSYT Labs";
const pageDescription = "Explore our comprehensive portfolio of 47 successful web development, mobile app, and AI integration projects. See real results from e-commerce platforms, SaaS applications, and proven solutions we've delivered.";
---

<MainLayout 
  title={pageTitle}
  description={pageDescription}
  keywords={["web development portfolio", "AI integration projects", "React projects", "Node.js applications", "e-commerce development", "SaaS applications", "mobile app development", "proven solutions"]}
  ogTitle="NOSYT Labs Portfolio - Successful Web Development & AI Projects"
  ogDescription="See our proven track record with 47 successful web applications, AI integrations, and proven solutions. Real projects, real results for businesses worldwide."
  canonicalUrl={createInternalLink("/projects")}
>
  <!-- Hero Section -->
  <PageHero
    title="Our Project Portfolio"
    subtitle="Discover our comprehensive showcase of 47 successful projects that demonstrate our expertise across web development, mobile applications, AI integration, and proven solutions. Each project represents our commitment to measurable results, quality, and client success."
    ctaText="Start Your Project"
    ctaHref={createInternalLink("/contact")}
    secondaryCtaText="View Services"
    secondaryCtaHref={createInternalLink("/services")}
    background="gradient"
    size="standard"
  />

  <!-- Add H1 heading for proper hierarchy -->
  <section class="sr-only">
    <h1>Our Projects - NOSYT Labs Portfolio</h1>
  </section>

  <!-- Featured Projects Section -->
  <FeaturedProjects
    title="Featured Projects"
    subtitle="Our Best Work"
    description="Highlighting our most impactful projects with proven ROI that showcase our technical expertise and measurable problem-solving results."
    projects={allProjects}
    showFilters={true}
    className="bg-white dark:bg-gray-900"
  />

  <!-- What We're Building Section -->
  <Section spacing="lg" background="gradient">
    <Container size="standard">
      <div class="text-center mb-12 lg:mb-16">
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">What We're Building</h2>
