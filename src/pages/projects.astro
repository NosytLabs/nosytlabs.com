---
// Professional Projects Portfolio - NosytLabs
import UnifiedLayout from '@/layouts/UnifiedLayout.astro';
import ProjectGrid from '@/components/content/ProjectGrid.astro';
import Hero from '@/components/Hero.astro';
import { Button } from "@/components/ui/button.tsx"; // Import Button
import { Icon } from "@/components/ui/icon.tsx"; // Import Icon

// Authentic project portfolio - Real business projects
const projects = [
  {
    title: "NosytLabs Corporate Website",
    description: "Our own modern, responsive corporate website built with Astro, React, and TypeScript. Features dark mode, accessibility compliance, and optimized performance with Grade A+ optimization.",
    image: "/images/projects/nosytlabs-website-screenshot.svg",
    technologies: ["Astro", "React", "TypeScript", "Tailwind CSS"],
    category: "Web Development",
    link: "https://nosytlabs.com",
    featured: true
  },
  {
    title: "Small Business Website",
    description: "Professional website for a local New Mexico business featuring modern design, mobile responsiveness, and SEO optimization to improve online presence.",
    image: "/images/favicon.svg",
    technologies: ["HTML", "CSS", "JavaScript", "WordPress"],
    category: "Web Development",
    link: "/contact",
    featured: true
  },
  {
    title: "Rapid Prototype Development",
    description: "Quick MVP development for a startup client using AI-assisted coding tools, delivering a functional prototype in under a week.",
    image: "/images/favicon.svg",
    technologies: ["React", "Node.js", "MongoDB", "Vercel"],
    category: "MVP Development",
    link: "/contact",
    featured: false
  }
];

const pageTitle = "Our Projects - NosytLabs Portfolio";
const pageDescription = "Explore our portfolio of successful web development and AI integration projects. See how we've helped businesses transform their operations with modern technology solutions.";
---
<UnifiedLayout title={pageTitle} description={pageDescription}>
  <Hero
    title="Projects That Drive Results"
    subtitle="Explore our portfolio of successful web development and AI integration projects. Each project represents our commitment to delivering innovative solutions that transform businesses and drive measurable results."
    ctaText="View All Projects"
    ctaLink="/projects"
  />

  <!-- Projects Grid -->
  <section className="projects-section">
    <div className="container">
      <ProjectGrid
        projects={projects}
        showFilters={true}
        showLoadMore={false}
        itemsPerPage={6}
      />
    </div>
  </section>

  <!-- Technologies We Master Section -->
  <section className="py-20 bg-gray-50 dark:bg-neutral-900">
    <div className="container mx-auto px-4">
      <div className="text-center mb-16" data-scroll-animate data-animation-type="fade-in-up">
        <h2 className="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">Technologies We Master</h2>
        <p className="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Our expertise spans a wide range of modern technologies and frameworks, enabling us to build robust and scalable solutions.
        </p>
      </div>
      <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" data-stagger data-stagger-delay="150">
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="code" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Frontend Development</h3>
          <p className="text-neutral-600 dark:text-neutral-300">React, Vue.js, Angular, Next.js, Astro, Svelte, Tailwind CSS, Bootstrap, HTML5, CSS3, JavaScript, TypeScript</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="server" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Backend Development</h3>
          <p className="text-neutral-600 dark:text-neutral-300">Node.js, Python (Django, Flask), Ruby on Rails, Go, Java (Spring), PHP (Laravel), RESTful APIs, GraphQL</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="cpu" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">AI & Machine Learning</h3>
          <p className="text-neutral-600 dark:text-neutral-300">TensorFlow, PyTorch, Scikit-learn, OpenAI API, Natural Language Processing (NLP), Computer Vision, Predictive Analytics</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="database" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Databases & Data Management</h3>
          <p className="text-neutral-600 dark:text-neutral-300">PostgreSQL, MongoDB, MySQL, Redis, Cassandra, Data Warehousing, ETL, Data Migration</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="cloud" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Cloud & DevOps</h3>
          <p className="text-neutral-600 dark:text-neutral-300">AWS, Azure, Google Cloud Platform (GCP), Docker, Kubernetes, CI/CD, Serverless Architectures, Infrastructure as Code (IaC)</p>
        </div>
        <div className="flex flex-col items-center text-center p-6 bg-white dark:bg-neutral-800 rounded-lg shadow-md stagger-item">
          <Icon name="shield" size={48} className="text-brand-purple-500 mb-4" />
          <h3 className="text-xl font-semibold mb-2">Security & Compliance</h3>
          <p className="text-neutral-600 dark:text-neutral-300">OWASP Top 10, GDPR, HIPAA, PCI DSS, Penetration Testing, Security Audits, Data Encryption</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Client Success Stories Section -->
  <section className="py-20 nosyt-hero">
    <div className="container mx-auto px-4 text-center">
      <div data-scroll-animate data-animation-type="fade-in-up">
        <h2 className="text-3xl md:text-4xl font-bold text-white mb-6">Client Success Stories</h2>
        <p className="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
          Hear directly from our clients about how NosytLabs has helped them achieve their business goals.
        </p>
      </div>
      <div className="grid grid-cols-1 md:grid-cols-2 gap-8" data-stagger data-stagger-delay="200">
        <div className="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-md text-left stagger-item">
          <p className="text-neutral-700 dark:text-neutral-300 italic mb-4">"NosytLabs transformed our online presence. Their expertise in web development and SEO significantly boosted our organic traffic and conversion rates. Highly recommended!"</p>
          <p className="font-semibold text-gray-900 dark:text-white">- Jane Doe, CEO of ExampleCorp</p>
        </div>
        <div className="bg-white dark:bg-neutral-800 p-6 rounded-lg shadow-md text-left stagger-item">
          <p className="text-neutral-700 dark:text-neutral-300 italic mb-4">"The AI integration developed by NosytLabs revolutionized our data processing. We've seen a dramatic increase in efficiency and accuracy. A truly innovative partner."</p>
          <p className="font-semibold text-gray-900 dark:text-white">- John Smith, CTO of TechSolutions</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action -->
  <section className="projects-cta">
    <div className="container">
      <div className="cta-content">
        <div data-scroll-animate data-animation-type="fade-in-up">
          <h2 className="cta-title">Ready to Start Your Project?</h2>
          <p className="cta-description">
            Let's discuss your requirements and create a solution that exceeds your expectations.
          </p>
        </div>
        <div className="cta-actions" data-stagger data-stagger-delay="120">
          <Button href="/contact" variant="primary" size="default" client:load className="stagger-item">
            Start Your Project
            <Icon name="arrowRight" size={16} className="ml-2" />
          </Button>
          <Button href="/services" variant="outline" size="default" client:load className="stagger-item">
            View Our Services
          </Button>
        </div>
      </div>
    </div>
  </section>
</UnifiedLayout>

<style>
  .projects-section {
    padding: var(--spacing-20) 0;
    background: white;
  }

  [data-theme="dark"] .projects-section {
    background: var(--gray-900);
  }

  .projects-cta {
    padding: var(--spacing-20) 0;
    background: linear-gradient(135deg, var(--nosyt-purple) 0%, var(--nosyt-purple-dark) 100%);
    color: white;
    text-align: center;
  }

  .cta-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-title {
    font-size: clamp(2rem, 4vw, 3rem);
    font-weight: 800;
    margin-bottom: var(--spacing-4);
    line-height: 1.2;
  }

  .cta-description {
    font-size: clamp(1rem, 2.5vw, 1.25rem);
    margin-bottom: var(--spacing-8);
    opacity: 0.9;
    line-height: 1.7;
  }

  .cta-actions {
    display: flex;
    gap: var(--spacing-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Remove redundant custom button styles */
  /* .btn-lg, .btn-icon, .btn:hover .btn-icon are replaced by Button component */

  /* Responsive Design */
  @media (max-width: 768px) {
    .cta-actions {
      flex-direction: column;
      align-items: center;
    }
  }
</style>

