---
// src/layouts/UnifiedLayout.astro
import BaseLayout from './BaseLayout.astro';
import Footer from '../components/layout/Footer.astro';

export interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  pageKey?: string;
  keywords?: string;
  ogType?: string;
  structuredDataType?: string;
  structuredData?: object;
  canonicalUrl?: string;
}

const {
  title = 'NosytLabs',
  description = 'Professional web development and AI integration services.',
  ogImage = '/images/projects/nosytlabs-website-screenshot.svg',
  pageKey,
  keywords = 'web development, AI, software, consulting',
  ogType,
  structuredDataType,
  structuredData,
  canonicalUrl,
} = Astro.props;
---

<BaseLayout
  title={title}
  description={description}
  ogImage={ogImage}
  pageKey={pageKey}
  keywords={keywords}
  ogType={ogType}
  structuredDataType={structuredDataType}
  structuredData={structuredData}
  canonicalUrl={canonicalUrl}
>
  <div class="bg-neutral-50 text-neutral-900">
    <div class="w-full max-w-[var(--container-max-width)] mx-auto px-[var(--container-padding)] py-8">
      <slot />
    </div>
  </div>
</BaseLayout>