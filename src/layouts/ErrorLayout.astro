---
// ErrorLayout.astro - Layout for error pages
export interface Props {
  title?: string;
  errorCode?: string;
  errorMessage?: string;
  showRetry?: boolean;
}

const {
  title = 'Error - NosytLabs',
  errorCode = '404',
  errorMessage = 'Page not found',
  showRetry = true
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{title}</title>

  <!-- Favicons -->
  <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
  <link rel="shortcut icon" href="/favicon.ico">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=VT323&display=swap" rel="stylesheet">

  <style>
    .blink {
      animation: blink 1s infinite;
    }

    @keyframes blink {
      0%, 49% {
        opacity: 1;
      }
      50%, 100% {
        opacity: 0;
      }
    }

    .scanning::before {
      content: "";
      display: inline-block;
      width: 1rem;
      height: 1rem;
      border: 2px solid #a0a0a0;
      border-top-color: #ff5e5b;
      border-radius: 50%;
      margin-right: 0.5rem;
      animation: spin 1s linear infinite;
    }

    @keyframes spin {
      to {
        transform: rotate(360deg);
      }
    }
  </style>
</head>
<body class="font-sans bg-[#0a0a0a] text-[#e0e0e0] flex flex-col min-h-screen m-0 p-0">
  <!-- Enhanced Skip Links for Grade A Accessibility -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-[#ff5e5b] focus:text-[#0a0a0a] focus:rounded focus:outline-none focus:ring-2 focus:ring-white">Skip to main content</a>
  <a href="#error-actions" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-32 focus:z-50 focus:px-4 focus:py-2 focus:bg-[#ff5e5b] focus:text-[#0a0a0a] focus:rounded focus:outline-none focus:ring-2 focus:ring-white">Skip to actions</a>

  <main id="main-content" class="flex flex-col items-center justify-center text-center flex-grow p-8" role="main" aria-label="Error page content">
    <img src="/images/logo-new.svg" alt="NosytLabs Logo" class="w-30 h-auto mb-8">
    <h1 class="font-mono text-6xl mb-4 text-[#ff5e5b]">CONNECTION LOST</h1>
    <h2 class="text-2xl font-bold mb-6">Timeline Under Maintenance</h2>
    <p class="font-mono text-xl mb-8 max-w-xl text-[#a0a0a0]">NOSYT LABS TERMLINK PROTOCOL</p>
    <p class="font-mono text-xl mb-8 max-w-xl text-[#a0a0a0]">You appear to be offline. Please check your network connection and try again.</p>

    <section id="error-actions" class="mt-8" aria-label="Error recovery actions">
      {showRetry && (
        <button
          id="retry-button"
          class="bg-[#ff5e5b] text-[#0a0a0a] border-0 py-3 px-6 text-base font-bold rounded cursor-pointer transition-all duration-300 mt-4 hover:bg-[#ff7a77] hover:-translate-y-0.5 disabled:opacity-50 disabled:cursor-not-allowed"
          aria-describedby="retry-status"
        >
          <span id="retry-text">RETRY CONNECTION</span>
        </button>
      )}

      <div id="retry-status" class="font-mono text-[#a0a0a0] mt-4 text-left w-full max-w-xl" role="status" aria-live="polite">
        <div class="flex items-center mt-4 scanning">Scanning for network</div>
      </div>

      <a
        href="/"
        class="mt-8 text-[#a0a0a0] no-underline flex items-center transition-colors duration-300 hover:text-[#ff5e5b]"
        aria-label="Return to home page"
      >
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16" class="mr-2" aria-hidden="true">
          <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
          <path fill-rule="evenodd" d="M11.354 4.646a.5.5 0 0 1 0 .708l-6 6a.5.5 0 0 1-.708-.708l6-6a.5.5 0 0 1 .708 0z"/>
          <path fill-rule="evenodd" d="M4.646 4.646a.5.5 0 0 1 .708 0l6 6a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708z"/>
        </svg>
        Return to Home
      </a>
    </section>

    <slot />
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', () => {
      const retryButton = document.getElementById('retry-button');
      const retryStatus = document.getElementById('retry-status');
      const retryText = document.getElementById('retry-text');

      if (retryButton) {
        retryButton.addEventListener('click', () => {
          // Update button state
          retryButton.disabled = true;
          retryText.textContent = 'RECONNECTING...';
          
          // Update status for screen readers
          if (retryStatus) {
            retryStatus.innerHTML = '<div class="flex items-center mt-4 scanning">Attempting to reconnect...</div>';
          }
          
          // Announce to screen readers
          if (typeof window.announceToScreenReader === 'function') {
            window.announceToScreenReader('Attempting to reconnect to the network', 'polite');
          }
          
          // Simulate connection attempt with timeout
          setTimeout(() => {
            window.location.reload();
          }, 1000);
        });
      }

      // Enhanced keyboard navigation
      document.addEventListener('keydown', (e) => {
        if (e.key === 'r' && e.ctrlKey) {
          e.preventDefault();
          if (retryButton && !retryButton.disabled) {
            retryButton.click();
          }
        }
      });
    });
  </script>
</body>
</html>
