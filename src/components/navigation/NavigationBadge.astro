---
/**
 * NavigationBadge Component
 *
 * Displays visual indicators for navigation items that are new or AI-powered.
 * Uses modern design patterns and animations for enhanced user experience.
 */

import AstroIcon from '../ui/AstroIcon.astro';

export interface Props {
  /**
   * The type of badge to display
   */
  type: 'new' | 'ai';

  /**
   * Optional additional CSS classes
   */
  className?: string;
}

const { type, className = '' } = Astro.props;

const badgeClasses = {
  new: 'bg-gradient-to-r from-primary to-secondary',
  ai: 'bg-gradient-to-r from-accent to-primary',
};

const textContent = {
  new: 'NEW',
  ai: 'AI',
};
---

<span
  class:list={[
    'inline-flex items-center px-2 py-0.5 rounded text-xs font-medium text-white',
    'entrance-fade transition-all duration-300',
    badgeClasses[type],
    className,
  ]}
>
  {textContent[type]}
  {
    type === 'ai' && (
      <AstroIcon name="tabler:sparkles" class="ml-1 w-3 h-3" />
    )
  }
</span>

<style>
  @keyframes pulse-subtle {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.85;
    }
  }

  /* Prefer a single, subtle entrance animation over perpetual pulsing for accessibility */
</style>
