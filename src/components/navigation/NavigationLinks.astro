---
/**
 * NavigationLinks Component
 *
 * Renders a list of navigation links based on the provided layout.
 * This component is designed to be reusable for both desktop and mobile navigation.
 */

import { NAVIGATION } from '../../config/navigation-constants';
import NavigationLink from './NavigationLink.astro';

export interface Props {
  /**
   * The current path to determine active links
   */
  currentPath: string;

  /**
   * The layout of the navigation links
   */
  layout: 'horizontal' | 'vertical';

  /**
   * Optional additional CSS classes
   */
  class?: string;
}

const { currentPath, layout, class: className = '' } = Astro.props;

const listClasses =
  layout === 'horizontal' ? 'flex items-center space-x-8' : 'flex flex-col space-y-4';

const isMobile = layout === 'vertical';
---

<ul class:list={[listClasses, className]}>
  {NAVIGATION.map(item => (
    <li>
      <NavigationLink href={item.href} label={item.label} currentPath={currentPath} isMobile={isMobile} />
    </li>
  ))}
</ul>
