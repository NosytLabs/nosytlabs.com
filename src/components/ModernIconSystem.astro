<svg
  class={`modern-icon ${sizeMap[size]} ${className}`}
  xmlns="http://www.w3.org/2000/svg"
  fill={variant === 'solid' ? color : 'none'}
  viewBox={viewBox}
  stroke={variant === 'solid' ? 'none' : color}
  stroke-width={variant === 'solid' ? '0' : strokeWidth}
  aria-label={ariaLabel || name}
  role="img"
>
  <path set:html={iconPath} />
</svg>

<style>
  .modern-icon {
    display: inline-block;
    vertical-align: middle;
    flex-shrink: 0;
    transition: all 0.2s ease;
  }

  .modern-icon:hover {
    transform: scale(1.05);
  }

  /* Accessibility */
  @media (prefers-reduced-motion: reduce) {
    .modern-icon,
    .modern-icon:hover {
      transform: none;
      transition: none;
    }
  }
</style>
