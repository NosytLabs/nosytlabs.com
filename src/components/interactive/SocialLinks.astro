---
// SocialLinks.astro
// A component to display social media links

import { Icon } from '@/components/ui/icon';

interface Props {
  className?: string;
  showLabels?: boolean;
  size?: 'sm' | 'md' | 'lg';
}

const {
  className = "",
  showLabels = false,
  size = 'md'
} = Astro.props;

const socialLinks = [
  { name: "GitHub", url: "https://github.com/NosytLabs", icon: "github" },
  { name: "Kick", url: "https://kick.com/Tycen", icon: "zap" }, // Using 'zap' as a placeholder for Kick icon
  { name: "YouTube", url: "https://www.youtube.com/@TycenYT", icon: "youtube" },
  { name: "3D Printing Portfolio", url: "/3d-printing", icon: "box" } // Using 'box' as a placeholder for 3D Printing icon
];

// Determine icon size based on prop
let iconSize = 'w-6 h-6';
if (size === 'sm') iconSize = 'w-5 h-5';
if (size === 'lg') iconSize = 'w-8 h-8';

// Determine container size based on prop
let containerSize = 'w-10 h-10';
if (size === 'sm') containerSize = 'w-8 h-8';
if (size === 'lg') containerSize = 'w-12 h-12';
---

<ul class={`flex items-center space-x-4 ${className}`} role="list">
  {socialLinks.map((link, index) => (
    <li>
      <a
        href={link.url}
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center nosyt-social-pulse group transition-all duration-300"
        aria-label={link.name}
        style={`animation-delay: ${index * 100}ms`}
      >
        <div class={`${containerSize} p-2 bg-gradient-to-br from-brand-blue-500 to-brand-ethereal-500 hover:from-brand-orange-500 hover:to-brand-red-500 rounded-full transition-all duration-300 flex items-center justify-center nosyt-glow-blue hover:shadow-[0_0_20px_rgba(0,123,255,0.6)] hover:scale-110 group-hover:rotate-6`}>
          <Icon
            name={link.icon}
            size={iconSize === 'w-5 h-5' ? 20 : iconSize === 'w-8 h-8' ? 32 : 24}
            className="text-white transition-transform duration-300 group-hover:scale-110 nosyt-icon-bounce"
          />
        </div>
        {showLabels && (
          <span class="ml-2 text-sm font-medium transition-all duration-300 group-hover:text-brand-blue-500 group-hover:font-semibold">{link.name}</span>
        )}
      </a>
    </li>
  ))}
</ul>

