---
// Simple Astro image component to replace React UnifiedImageComponent
export interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
  fallbackSrc?: string;
  client?: 'load' | 'idle' | 'visible';
}

const {
  src,
  alt,
  width,
  height,
  className = '',
  loading = 'lazy',
  fallbackSrc,
  // client prop is available but not used in this implementation
} = Astro.props;

// Use actual image file without generating non-existent variants
const getImageSrc = (baseSrc: string) => {
  // Just use the original image source
  return baseSrc;
};
---

<img
  src={getImageSrc(src)}
  {alt}
  {width}
  {height}
  {loading}
  class={`${className} max-w-full h-auto`}
  onerror={fallbackSrc ? `this.src='${fallbackSrc}'` : undefined}
/>
