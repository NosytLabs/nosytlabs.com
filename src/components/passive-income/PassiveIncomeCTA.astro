---
/**
 * PassiveIncomeCTA Component
 * A call-to-action component for the passive income page
 */

interface Props {
  title?: string;
  description?: string;
  primaryButtonText?: string;
  primaryButtonLink?: string;
  secondaryButtonText?: string;
  secondaryButtonLink?: string;
  className?: string;
}

const {
  title = "Start Your Passive Income Journey Today",
  description = "Begin with one or two apps that interest you most and expand from there. The sooner you start, the sooner you'll see results.",
  primaryButtonText = "Explore Top Apps",
  primaryButtonLink = "#passive-income-apps",
  secondaryButtonText = "Get Personalized Advice",
  secondaryButtonLink = "mailto:contact@nosytlabs.com?subject=Passive Income Advice",
  className = ""
} = Astro.props;
---

<div class={`bg-gradient-to-br from-primary-dark to-primary-main text-white rounded-lg shadow-xl overflow-hidden ${className}`}>
  <div class="relative px-6 py-12 md:py-16 md:px-12">
    <!-- Background pattern -->
    <div class="absolute inset-0 opacity-10">
      <svg width="100%" height="100%" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <pattern id="grid-pattern" width="40" height="40" patternUnits="userSpaceOnUse">
            <path d="M0 0 L40 0 L40 40 L0 40 Z" fill="none" stroke="currentColor" stroke-width="1"/>
          </pattern>
        </defs>
        <rect width="100%" height="100%" fill="url(#grid-pattern)" />
      </svg>
    </div>

    <!-- Content -->
    <div class="relative z-10 max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">{title}</h2>
      <p class="text-lg md:text-xl opacity-90 mb-8 max-w-2xl mx-auto">{description}</p>

      <div class="flex flex-col sm:flex-row justify-center gap-4">
        <a
          href={primaryButtonLink}
          class="inline-block bg-white text-primary-dark hover:bg-gray-100 font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
        >
          {primaryButtonText}
        </a>
        <a
          href={secondaryButtonLink}
          class="inline-block bg-transparent border-2 border-white text-white hover:bg-white/10 font-bold py-3 px-8 rounded-lg shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1"
        >
          {secondaryButtonText}
        </a>
      </div>

      <!-- Decorative elements -->
      <div class="mt-12 flex justify-center space-x-8">
        <div class="text-center">
          <div class="text-4xl font-bold">$50+</div>
          <div class="text-sm opacity-80">Monthly Potential</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold">25+</div>
          <div class="text-sm opacity-80">Available Apps</div>
        </div>
        <div class="text-center">
          <div class="text-4xl font-bold">100%</div>
          <div class="text-sm opacity-80">Educational</div>
        </div>
      </div>

      <div class="mt-6 text-xs opacity-70 max-w-md mx-auto">
        All earnings figures are estimates based on publicly available information.
        Monthly potential represents potential combined earnings from multiple methods with consistent usage.
        This information is provided for educational purposes only and not as financial advice.
      </div>
    </div>

    <!-- Decorative corner accent -->
    <div class="absolute bottom-0 right-0 w-24 h-24 md:w-32 md:h-32 bg-accent/20 rounded-tl-full"></div>
    <div class="absolute top-0 left-0 w-16 h-16 md:w-24 md:h-24 bg-accent/20 rounded-br-full"></div>
  </div>
</div>
