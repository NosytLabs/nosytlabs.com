---
// Quantum AI Particles Component
// Handles the animated particle effects for the hero background
---

<!-- Quantum AI Particles -->
<div
  aria-hidden="true"
  class="absolute top-4 left-4 md:top-16 md:left-16 w-16 h-16 md:w-24 md:h-24 bg-gradient-to-br from-primary-400/30 to-secondary-600/20 rounded-full blur-lg md:blur-xl animate-quantum-pulse pointer-events-none select-none"
>
</div>
<div
  aria-hidden="true"
  class="absolute bottom-4 right-4 md:bottom-16 md:right-16 w-20 h-20 md:w-32 md:h-32 bg-gradient-to-br from-secondary-400/25 to-accent-600/15 rounded-full blur-lg md:blur-xl animate-quantum-float pointer-events-none select-none"
>
</div>
<div
  aria-hidden="true"
  class="absolute top-1/2 left-1/3 w-12 h-12 md:w-20 md:h-20 bg-gradient-to-br from-primary-400/30 to-secondary-600/20 rounded-full blur-md md:blur-lg animate-quantum-glow pointer-events-none select-none"
>
</div>
<div
  aria-hidden="true"
  class="absolute top-1/4 right-1/4 w-14 h-14 md:w-24 md:h-24 bg-gradient-to-br from-secondary-400/25 to-accent-600/15 rounded-full blur-lg md:blur-xl animate-quantum-drift pointer-events-none select-none"
>
</div>
<div
  aria-hidden="true"
  class="absolute bottom-1/4 left-1/4 w-10 h-10 md:w-16 md:h-16 bg-gradient-to-br from-accent-400/20 to-primary-600/10 rounded-full blur-md md:blur-lg animate-quantum-orbit pointer-events-none select-none"
>
</div>
<div
  aria-hidden="true"
  class="absolute top-3/4 right-1/3 w-12 h-12 md:w-20 md:h-20 bg-gradient-to-br from-primary-400/25 to-secondary-600/15 rounded-full blur-md md:blur-lg animate-quantum-spiral pointer-events-none select-none"
>
</div>

<!-- Quantum field effect -->
<div
  aria-hidden="true"
  class="absolute inset-0 bg-gradient-to-br from-transparent via-primary-500/5 to-transparent animate-quantum-field pointer-events-none select-none"
>
</div>

<style>
  /* Quantum AI Animations */
  @keyframes quantum-pulse {
    0%,
    100% {
      transform: scale(1) translateY(0px) rotate(0deg);
      opacity: 0.7;
      filter: hue-rotate(0deg);
    }
    25% {
      transform: scale(1.15) translateY(-8px) rotate(90deg);
      opacity: 0.9;
      filter: hue-rotate(90deg);
    }
    50% {
      transform: scale(1.2) translateY(-15px) rotate(180deg);
      opacity: 1;
      filter: hue-rotate(180deg);
    }
    75% {
      transform: scale(1.1) translateY(-8px) rotate(270deg);
      opacity: 0.8;
      filter: hue-rotate(270deg);
    }
  }

  @keyframes quantum-float {
    0%,
    100% {
      transform: translateY(0px) rotate(0deg) scale(1);
      opacity: 0.6;
      filter: brightness(1) saturate(1);
    }
    20% {
      transform: translateY(-12px) rotate(72deg) scale(1.08);
      opacity: 0.85;
      filter: brightness(1.2) saturate(1.3);
    }
    40% {
      transform: translateY(-20px) rotate(144deg) scale(0.95);
      opacity: 0.9;
      filter: brightness(1.1) saturate(1.1);
    }
    60% {
      transform: translateY(-25px) rotate(216deg) scale(1.12);
      opacity: 0.75;
      filter: brightness(1.3) saturate(1.4);
    }
    80% {
      transform: translateY(-15px) rotate(288deg) scale(1.05);
      opacity: 0.8;
      filter: brightness(1.15) saturate(1.2);
    }
  }

  @keyframes quantum-glow {
    0%,
    100% {
      transform: scale(1) rotate(0deg);
      opacity: 0.6; /* reduced for better readability */
      box-shadow: 0 0 20px rgb(var(--color-accent-500-rgb) / 0.3);
    }
    50% {
      transform: scale(1.3) rotate(180deg);
      opacity: 0.85; /* reduced peak opacity */
      box-shadow:
        0 0 40px rgb(var(--color-accent-500-rgb) / 0.6),
        0 0 60px rgb(var(--color-secondary-500-rgb) / 0.4);
    }
  }

  @keyframes quantum-drift {
    0%,
    100% {
      transform: translateX(0px) translateY(0px) rotate(0deg) scale(1);
      opacity: 0.7;
    }
    25% {
      transform: translateX(15px) translateY(-10px) rotate(90deg) scale(1.1);
      opacity: 0.9;
    }
    50% {
      transform: translateX(0px) translateY(-20px) rotate(180deg) scale(0.9);
      opacity: 0.8;
    }
    75% {
      transform: translateX(-15px) translateY(-10px) rotate(270deg) scale(1.05);
      opacity: 0.85;
    }
  }

  @keyframes quantum-orbit {
    0% {
      transform: rotate(0deg) translateX(30px) rotate(0deg) scale(1);
      opacity: 0.6;
    }
    25% {
      transform: rotate(90deg) translateX(35px) rotate(-90deg) scale(1.2);
      opacity: 0.9;
    }
    50% {
      transform: rotate(180deg) translateX(40px) rotate(-180deg) scale(0.8);
      opacity: 0.7;
    }
    75% {
      transform: rotate(270deg) translateX(35px) rotate(-270deg) scale(1.1);
      opacity: 0.8;
    }
    100% {
      transform: rotate(360deg) translateX(30px) rotate(-360deg) scale(1);
      opacity: 0.6;
    }
  }

  @keyframes quantum-spiral {
    0% {
      transform: rotate(0deg) scale(1) translateY(0px);
      opacity: 0.5;
    }
    25% {
      transform: rotate(90deg) scale(1.15) translateY(-8px);
      opacity: 0.8;
    }
    50% {
      transform: rotate(180deg) scale(0.9) translateY(-15px);
      opacity: 1;
    }
    75% {
      transform: rotate(270deg) scale(1.05) translateY(-8px);
      opacity: 0.7;
    }
    100% {
      transform: rotate(360deg) scale(1) translateY(0px);
      opacity: 0.5;
    }
  }

  @keyframes quantum-field {
    0%,
    100% {
      opacity: 0.06; /* reduced from 0.1 */
      transform: scale(1) rotate(0deg);
    }
    50% {
      opacity: 0.12; /* reduced from 0.3 */
      transform: scale(1.02) rotate(1deg);
    }
  }

  /* Animation Assignments */
  .animate-quantum-pulse {
    animation: quantum-pulse 4s ease-in-out infinite;
  }

  .animate-quantum-float {
    animation: quantum-float 6s ease-in-out infinite;
  }

  .animate-quantum-glow {
    animation: quantum-glow 3s ease-in-out infinite;
  }

  .animate-quantum-drift {
    animation: quantum-drift 5s ease-in-out infinite;
  }

  .animate-quantum-orbit {
    animation: quantum-orbit 8s linear infinite;
  }

  .animate-quantum-spiral {
    animation: quantum-spiral 7s ease-in-out infinite;
  }

  .animate-quantum-field {
    animation: quantum-field 10s ease-in-out infinite;
  }
</style>

<style>
  .quantum-particle {
    position: absolute;
    border-radius: 50%;
    background-image: radial-gradient(
      circle at center,
      hsla(var(--primary-hue), 100%, 80%, 0.8) 0%,
      hsla(var(--primary-hue), 100%, 80%, 0) 70%
    );
    filter: blur(2px);
    animation: quantum-pulse 3s infinite ease-in-out;
  }

  .quantum-glow {
    position: absolute;
    border-radius: 50%;
    background-image: radial-gradient(
      circle at center,
      hsla(var(--secondary-hue), 100%, 70%, 0.1) 0%,
      hsla(var(--secondary-hue), 100%, 70%, 0) 60%
    );
    animation: quantum-glow 5s infinite ease-in-out;
  }

  .quantum-field {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(
      circle at var(--x, 50%) var(--y, 50%),
      hsla(var(--accent-hue), 100%, 75%, 0.05) 0%,
      transparent 30%
    );
    animation: quantum-field 10s infinite linear;
  }
</style>
