<section class="modern-services">
  <div class="container">
    <div class="services-header">
      <div class="header-badge">
        <span class="badge-icon">‚ö°</span>
        <span class="badge-text">Our Services</span>
      </div>
      
      <h2 class="services-title">
        Professional Development Solutions
      </h2>
      
      <p class="services-description">
        From AI-enhanced web development to mobile apps, consulting, and 3D printing - we offer comprehensive digital solutions to help your business thrive.
      </p>
    </div>
    
    <div class="services-grid">
      {services.map((service) => (
        <div class={`service-card ${service.popular ? 'popular' : ''}`}>
          {service.popular && (
            <div class="popular-badge">
              <span class="badge-icon">‚≠ê</span>
              <span class="badge-text">Most Popular</span>
            </div>
          )}
          
          <div class="service-header">
            <div class="service-icon">{service.icon}</div>
            <div class="service-meta">
              <h3 class="service-title">{service.title}</h3>
              <div class="service-pricing">
                <div class="current-price">{service.price}</div>
                {service.originalPrice && (
                  <div class="price-comparison">
                    <span class="original-price">{service.originalPrice}</span>
                    <span class="savings-badge">{service.savings}</span>
                  </div>
                )}
                <div class="timeline">‚ö° {service.timeline}</div>
              </div>
            </div>
          </div>
          
          <p class="service-description">{service.description}</p>
          
          <ul class="service-features">
            {service.features.map((feature) => (
              <li class="feature-item">
                <svg class="feature-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M20 6L9 17l-5-5"/>
                </svg>
                <span class="feature-text">{feature}</span>
              </li>
            ))}
          </ul>
          
          <div class="service-actions">
            <a href="/contact" class="btn btn-primary btn-full">
              Get Started
              <svg class="btn-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </a>
            <a href="/services" class="btn btn-outline btn-full">
              Learn More
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="services-footer">
      <p class="footer-text">
        Need something custom? We'd love to discuss your specific requirements.
      </p>
      <a href="/contact" class="btn btn-secondary">
        Contact Us
      </a>
    </div>
  </div>
</section>

<style>
  .modern-services {
    padding: var(--space-20) 0;
    background: white;
  }

  [data-theme="dark"] .modern-services {
    background: var(--neutral-900);
  }

  .services-header {
    text-align: center;
    margin-bottom: var(--space-16);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .header-badge {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    background: var(--brand-primary);
    color: white;
    padding: var(--space-2) var(--space-4);
    border-radius: var(--radius-full);
    font-size: var(--text-sm);
    font-weight: 600;
    margin-bottom: var(--space-4);
  }

  .services-title {
    font-size: var(--text-4xl);
    font-weight: 800;
    color: var(--neutral-900);
    margin-bottom: var(--space-4);
    line-height: 1.2;
  }

  [data-theme="dark"] .services-title {
    color: var(--neutral-100);
  }

  .services-description {
    font-size: var(--text-lg);
    color: var(--neutral-600);
    line-height: 1.7;
  }

  [data-theme="dark"] .services-description {
    color: var(--neutral-400);
  }

  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--space-6);
    margin-bottom: var(--space-16);
  }

  .service-card {
    background: white;
    border-radius: var(--radius-2xl);
    padding: var(--space-8);
    box-shadow: var(--shadow-md);
    border: 2px solid transparent;
    transition: all var(--transition-normal);
    position: relative;
  }

  [data-theme="dark"] .service-card {
    background: var(--neutral-100);
  }

  .service-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-xl);
  }

  .service-card.popular {
    border-color: var(--brand-primary);
    box-shadow: var(--shadow-lg), 0 0 0 1px var(--brand-primary);
  }

  .popular-badge {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    background: var(--brand-primary);
    color: white;
    padding: var(--space-1) var(--space-3);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }

  .service-header {
    display: flex;
    align-items: flex-start;
    gap: var(--space-4);
    margin-bottom: var(--space-6);
  }

  .service-icon {
    font-size: var(--text-4xl);
    background: var(--brand-primary);
    background: linear-gradient(135deg, var(--brand-primary), var(--brand-secondary));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .service-meta {
    flex: 1;
  }

  .service-title {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--neutral-900);
    margin-bottom: var(--space-2);
  }

  [data-theme="dark"] .service-title {
    color: var(--neutral-100);
  }

  .service-pricing {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .current-price {
    font-size: var(--text-lg);
    font-weight: 700;
    color: var(--brand-primary);
  }

  .price-comparison {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
  }

  .original-price {
    text-decoration: line-through;
    color: var(--neutral-500);
    font-weight: 500;
  }

  .savings-badge {
    background: linear-gradient(135deg, #10B981, #059669);
    color: white;
    padding: 2px 6px;
    border-radius: var(--radius-sm);
    font-size: var(--text-xs);
    font-weight: 600;
  }

  .timeline {
    font-size: var(--text-sm);
    color: var(--nosyt-orange-main, #FF6B35);
    font-weight: 600;
  }

  .service-description {
    font-size: var(--text-base);
    color: var(--neutral-600);
    line-height: 1.7;
    margin-bottom: var(--space-6);
  }

  [data-theme="dark"] .service-description {
    color: var(--neutral-400);
  }

  .service-features {
    list-style: none;
    margin-bottom: var(--space-8);
  }

  .feature-item {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-3);
  }

  .feature-icon {
    color: var(--success);
    flex-shrink: 0;
  }

  .feature-text {
    font-size: var(--text-base);
    color: var(--neutral-700);
  }

  [data-theme="dark"] .feature-text {
    color: var(--neutral-300);
  }

  .service-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .btn-full {
    width: 100%;
    justify-content: center;
  }

  .services-footer {
    text-align: center;
    padding: var(--space-8);
    background: var(--neutral-50);
    border-radius: var(--radius-2xl);
  }

  [data-theme="dark"] .services-footer {
    background: var(--neutral-800);
  }

  .footer-text {
    font-size: var(--text-lg);
    color: var(--neutral-600);
    margin-bottom: var(--space-4);
  }

  [data-theme="dark"] .footer-text {
    color: var(--neutral-400);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .services-grid {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .service-card {
      padding: var(--space-6);
    }

    .services-title {
      font-size: var(--text-3xl);
    }
  }
</style>
