---
// Modular ProjectCard Component
import Card from './core/Card.astro';
import ProjectCardBackground from './project-card/ProjectCardBackground.astro';
import ProjectCardImage from './project-card/ProjectCardImage.astro';
import ProjectCardContent from './project-card/ProjectCardContent.astro';
import ProjectCardTechnologies from './project-card/ProjectCardTechnologies.astro';


interface Props {
  title: string;
  description: string;
  image: string;
  technologies: string[];
  category: string;
  href: string;
  featured?: boolean;
}

const { title, description, image, technologies, category, href, featured = false } = Astro.props;
---

<Card
  {href}
  rawClass={`project-card group relative overflow-hidden ${featured ? 'featured-card' : ''}`}
>
  <Fragment slot="before">
    <!-- Background Effects -->
    <ProjectCardBackground />

    {
      featured && (
        <div class="absolute top-4 left-4 z-20 featured-badge">
          <span class="bg-gradient-to-r from-primary-500 to-secondary-500 text-white text-xs font-medium px-3 py-1 rounded-full shadow-lg backdrop-blur-sm">
            âœ¨ Featured
          </span>
        </div>
      )
    }

    <!-- Project Image -->
    <ProjectCardImage {image} {title} />

    <!-- Project Content -->
    <ProjectCardContent {title} {description} {category} {featured} />

    <!-- Technologies -->
    <div class="px-6 pb-6">
      <ProjectCardTechnologies {technologies} />
    </div>
  </Fragment>
</Card>
