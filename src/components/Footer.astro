---
import Icon from './Icon.tsx';
---

<footer class="bg-gray-900 text-white py-12 mt-16">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <div class="col-span-1 md:col-span-2">
        <h3 class="text-xl font-bold mb-4">Nosyt Labs</h3>
        <p class="text-gray-400">
          Innovating web development and AI integration for modern businesses.
        </p>
      </div>
      <div>
        <h4 class="font-semibold mb-4">Services</h4>
        <ul class="space-y-2 text-gray-400">
          <li><a href="/services" class="hover:text-white">Web Development</a></li>
          <li><a href="/services" class="hover:text-white">AI Integration</a></li>
          <li><a href="/services" class="hover:text-white">Consulting</a></li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold mb-4">Connect</h4>
        <div class="space-y-2">
          <a href="https://twitter.com/nosytlabs" class="flex items-center space-x-2 text-gray-400 hover:text-white">
            <Icon name="twitter" size={20} client:load />
            <span>Twitter</span>
          </a>
          <a href="https://linkedin.com/company/nosytlabs" class="flex items-center space-x-2 text-gray-400 hover:text-white">
            <Icon name="linkedin" size={20} client:load />
            <span>LinkedIn</span>
          </a>
          <a href="https://github.com/nosytlabs" class="flex items-center space-x-2 text-gray-400 hover:text-white">
            <Icon name="github" size={20} client:load />
            <span>GitHub</span>
          </a>
        </div>
      </div>
    </div>
    <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
      <p>&copy; 2024 Nosyt Labs. All rights reserved.</p>
    </div>
  </div>
</footer>
