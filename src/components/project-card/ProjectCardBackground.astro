---
// ProjectCard Background Effects Component
// Handles quantum particles, neural networks, and holographic effects
---

<!-- Enhanced AI Quantum Background -->
<div class="absolute inset-0 pointer-events-none overflow-hidden entrance-fade motion-reduce:opacity-100">
  <!-- Quantum Particle System -->
  <div class="quantum-particles">
    <div class="quantum-particle quantum-particle-1"></div>
    <div class="quantum-particle quantum-particle-2"></div>
    <div class="quantum-particle quantum-particle-3"></div>
    <div class="quantum-particle quantum-particle-4"></div>
    <div class="quantum-particle quantum-particle-5"></div>
  </div>
  <!-- Neural Network Connections -->
  <div class="neural-network">
    <div class="neural-connection neural-connection-1"></div>
    <div class="neural-connection neural-connection-2"></div>
    <div class="neural-connection neural-connection-3"></div>
  </div>
  <!-- Holographic Energy Field -->
  <div class="holographic-field"></div>
  <!-- Quantum Glow Effect -->
  <div class="quantum-glow-effect"></div>
</div>

<style>
  /* Enhanced Quantum Particle System */
  .quantum-particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .quantum-particle {
    position: absolute;
    border-radius: 50%;
    opacity: 0;
    pointer-events: none;
    filter: blur(0.5px);
    box-shadow: 0 0 10px currentColor;
  }

  .quantum-particle-1 {
    width: 6px;
    height: 6px;
    background: radial-gradient(circle, hsl(var(--accent-500)), hsl(var(--primary-500)));
    top: 15%;
    left: 10%;
    animation: quantum-float-1 8s ease-in-out infinite;
  }

  .quantum-particle-2 {
    width: 4px;
    height: 4px;
    background: radial-gradient(circle, hsl(var(--secondary-500)), hsl(var(--secondary-700)));
    top: 70%;
    right: 15%;
    animation: quantum-float-2 10s ease-in-out infinite 2s;
  }

  .quantum-particle-3 {
    width: 8px;
    height: 8px;
    background: radial-gradient(circle, hsl(var(--tertiary-500)), hsl(var(--tertiary-700)));
    bottom: 25%;
    left: 75%;
    animation: quantum-float-3 12s ease-in-out infinite 4s;
  }

  .quantum-particle-4 {
    width: 3px;
    height: 3px;
    background: radial-gradient(circle, hsl(var(--quaternary-500)), hsl(var(--quaternary-700)));
    top: 40%;
    left: 50%;
    animation: quantum-float-4 9s ease-in-out infinite 1s;
  }

  .quantum-particle-5 {
    width: 5px;
    height: 5px;
    background: radial-gradient(circle, hsl(var(--primary-300)), hsl(var(--primary-500)));
    bottom: 60%;
    right: 40%;
    animation: quantum-float-5 11s ease-in-out infinite 3s;
  }

  /* Neural Network Connections */
  .neural-network {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .neural-connection {
    position: absolute;
    background: linear-gradient(90deg, transparent, hsla(var(--accent-500), 0.3), transparent);
    height: 1px;
    opacity: 0;
    transform-origin: left center;
  }

  .neural-connection-1 {
    top: 25%;
    left: 10%;
    width: 60%;
    animation: neural-pulse-1 6s ease-in-out infinite;
  }

  .neural-connection-2 {
    top: 60%;
    right: 20%;
    width: 40%;
    animation: neural-pulse-2 8s ease-in-out infinite 2s;
    transform: rotate(-15deg);
  }

  .neural-connection-3 {
    bottom: 30%;
    left: 30%;
    width: 50%;
    animation: neural-pulse-3 7s ease-in-out infinite 4s;
    transform: rotate(10deg);
  }

  /* Holographic Energy Field */
  .holographic-field {
    position: absolute;
    inset: 0;
    background: conic-gradient(
      from 0deg at 50% 50%,
      transparent 0deg,
      hsla(var(--accent-500), 0.1) 60deg,
      transparent 120deg,
      hsla(var(--secondary-500), 0.1) 180deg,
      transparent 240deg,
      hsla(var(--tertiary-500), 0.1) 300deg,
      transparent 360deg
    );
    opacity: 0;
    animation: holographic-rotation 20s linear infinite;
  }

  .quantum-glow-effect {
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 50% 50%, hsla(var(--primary-500), 0.1) 0%, transparent 70%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  /* Enhanced Quantum Float Animations */
  @keyframes quantum-float-1 {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) scale(1) rotate(0deg);
      opacity: 0.4;
      filter: blur(0.5px) hue-rotate(0deg);
    }
    25% {
      transform: translateY(-15px) translateX(8px) scale(1.3) rotate(90deg);
      opacity: 0.9;
      filter: blur(0.2px) hue-rotate(90deg);
    }
    50% {
      transform: translateY(-25px) translateX(-5px) scale(0.8) rotate(180deg);
      opacity: 1;
      filter: blur(0.8px) hue-rotate(180deg);
    }
    75% {
      transform: translateY(-12px) translateX(12px) scale(1.1) rotate(270deg);
      opacity: 0.7;
      filter: blur(0.3px) hue-rotate(270deg);
    }
  }

  @keyframes quantum-float-2 {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
      opacity: 0.3;
      filter: blur(0.4px) saturate(1);
    }
    30% {
      transform: translateY(-18px) translateX(-10px) rotate(108deg) scale(1.4);
      opacity: 0.8;
      filter: blur(0.1px) saturate(1.5);
    }
    60% {
      transform: translateY(-30px) translateX(6px) rotate(216deg) scale(0.7);
      opacity: 1;
      filter: blur(0.6px) saturate(2);
    }
    90% {
      transform: translateY(-10px) translateX(-8px) rotate(324deg) scale(1.2);
      opacity: 0.5;
      filter: blur(0.2px) saturate(1.2);
    }
  }

  @keyframes quantum-float-3 {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) rotate(0deg) scale(1);
      opacity: 0.2;
      filter: blur(0.6px) brightness(1);
    }
    20% {
      transform: translateY(-10px) translateX(-15px) rotate(72deg) scale(1.5);
      opacity: 0.7;
      filter: blur(0.1px) brightness(1.3);
    }
    40% {
      transform: translateY(-22px) translateX(8px) rotate(144deg) scale(0.6);
      opacity: 1;
      filter: blur(0.8px) brightness(1.6);
    }
    60% {
      transform: translateY(-35px) translateX(-3px) rotate(216deg) scale(1.3);
      opacity: 0.9;
      filter: blur(0.3px) brightness(1.4);
    }
    80% {
      transform: translateY(-15px) translateX(10px) rotate(288deg) scale(0.9);
      opacity: 0.6;
      filter: blur(0.4px) brightness(1.1);
    }
  }

  @keyframes quantum-float-4 {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) scale(1) rotate(0deg);
      opacity: 0.5;
    }
    33% {
      transform: translateY(-12px) translateX(6px) scale(1.2) rotate(120deg);
      opacity: 0.8;
    }
    66% {
      transform: translateY(-20px) translateX(-4px) scale(0.8) rotate(240deg);
      opacity: 1;
    }
  }

  @keyframes quantum-float-5 {
    0%,
    100% {
      transform: translateY(0px) translateX(0px) scale(1) rotate(0deg);
      opacity: 0.3;
    }
    40% {
      transform: translateY(-16px) translateX(-8px) scale(1.4) rotate(144deg);
      opacity: 0.9;
    }
    80% {
      transform: translateY(-28px) translateX(5px) scale(0.7) rotate(288deg);
      opacity: 1;
    }
  }

  /* Neural Network Pulse Animations */
  @keyframes neural-pulse-1 {
    0%,
    100% {
      opacity: 0;
      transform: scaleX(0);
    }
    50% {
      opacity: 1;
      transform: scaleX(1);
    }
  }

  @keyframes neural-pulse-2 {
    0%,
    100% {
      opacity: 0;
      transform: scaleX(0) rotate(-15deg);
    }
    50% {
      opacity: 0.8;
      transform: scaleX(1) rotate(-15deg);
    }
  }

  @keyframes neural-pulse-3 {
    0%,
    100% {
      opacity: 0;
      transform: scaleX(0) rotate(10deg);
    }
    50% {
      opacity: 0.6;
      transform: scaleX(1) rotate(10deg);
    }
  }

  /* Holographic Rotation */
  @keyframes holographic-rotation {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  @keyframes quantum-pulse-glow {
    0%,
    100% {
      opacity: 0.3;
      transform: scale(1);
    }
    50% {
      opacity: 0.8;
      transform: scale(1.05);
    }
  }

  /* Accessibility Enhancements */
  @media (prefers-reduced-motion: reduce) {
    .quantum-particle,
    .neural-connection,
    .holographic-field,
    .quantum-glow-effect {
      animation: none;
      transition: none;
    }
    .quantum-particle { opacity: 0.35; }
    .neural-connection { opacity: 0.4; }
    .holographic-field { opacity: 0.2; }
    .quantum-glow-effect { opacity: 0.25; }
  }
</style>
