---
// ProjectCard Technologies Component
// Handles technology badges display with animations

interface Props {
  technologies: string[];
}

const { technologies } = Astro.props;
---

<!-- Enhanced Technologies -->{
  technologies && technologies.length > 0 && (
    <div class="project-technologies mb-6">
      <div class="flex flex-wrap gap-2">
        {technologies.slice(0, 4).map((tech, index) => {
          const badgeClass = `tech-badge tech-badge-${index % 3} bg-gradient-to-r from-primary-50 to-secondary-50 dark:from-primary-900/30 dark:to-secondary-900/30 text-primary-700 dark:text-primary-300 text-xs font-medium px-3 py-1 rounded-full border border-primary-200/50 dark:border-primary-700/50 hover:scale-105 transition-transform duration-300`;
          return <span class={badgeClass}>{tech}</span>;
        })}
        {technologies.length > 4 && (
          <span class="text-gray-500 dark:text-gray-400 text-xs font-medium px-3 py-1 rounded-full border border-gray-200 dark:border-gray-700">
            +{technologies.length - 4} more
          </span>
        )}
      </div>
    </div>
  )
}

<style>
  /* Technology Badge Animations */
  .tech-badge {
    position: relative;
    overflow: hidden;
  }

  .tech-badge::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgb(var(--color-neutral-0-rgb) / 0.2), transparent);
    transition: left 0.3s ease;
  }

  .tech-badge:hover::before {
    left: 100%;
  }

  .tech-badge-0 {
    animation-delay: 0s;
  }

  .tech-badge-1 {
    animation-delay: 0.1s;
  }

  .tech-badge-2 {
    animation-delay: 0.2s;
  }

  /* Accessibility Enhancements */
  @media (prefers-reduced-motion: reduce) {
    .tech-badge {
      animation: none;
      transition: none;
    }
  }
</style>
