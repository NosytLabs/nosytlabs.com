---
import Icon from './ui/Icon.astro';

interface Props {
  name: string;
  company: string;
  role: string;
  quote: string;
  avatar: string;
  rating: number;
}

const { name, company, role, quote, avatar, rating } = Astro.props;
---

<div class="card-enhanced group animate-enhanced-scale-in">
  <!-- Quote Icon -->
  <div class="mb-6">
    <div class="icon-container-enhanced icon-container-md bg-accent/10">
      <Icon name="quote" size="md" class="text-accent" />
    </div>
  </div>

  <!-- Quote Content -->
  <div class="flex-1 space-y-enhanced">
    <blockquote class="text-responsive-lg text-text-secondary italic text-pretty leading-relaxed">
      "{quote}"
    </blockquote>

    <!-- Rating Stars -->
    <div class="flex-enhanced gap-1">
      {Array.from({ length: rating }, (_, index: number) => (
        <Icon name="star" size="sm" class="text-accent" />
      ))}
      {Array.from({ length: 5 - rating }, (_, index: number) => (
        <Icon name="star" size="sm" class="text-border-primary opacity-30" />
      ))}
    </div>
  </div>

  <!-- Author Info -->
  <div class="flex-enhanced gap-4 mt-6 pt-6 border-t border-border-primary">
    <!-- Avatar -->
    <div class="icon-container-enhanced icon-container-lg bg-surface-elevated flex-shrink-0 overflow-hidden">
      {avatar ? (
        <img 
          loading="lazy" 
          src={avatar} 
          alt={name} 
          class="w-full h-full object-cover" 
        />
      ) : (
        <Icon name="user" size="lg" class="text-text-tertiary" />
      )}
    </div>
    
    <!-- Author Details -->
    <div class="min-w-0 flex-1 space-y-enhanced-sm">
      <h4 class="text-responsive font-semibold text-text-primary group-hover:text-primary transition-colors duration-300">
        {name}
      </h4>
      <p class="text-responsive text-text-secondary">
        {role}
      </p>
      <p class="text-sm text-text-tertiary font-medium">
        {company}
      </p>
    </div>
    
    <!-- Verification Badge -->
    <div class="flex-shrink-0">
      <div class="icon-container-enhanced icon-container-sm bg-success/10 group-hover:bg-success/20 transition-colors duration-300">
        <Icon name="check" size="sm" class="text-success" />
      </div>
    </div>
  </div>
</div>

<style>
  /* Enhanced testimonial card styles */
  .card-enhanced {
    position: relative;
    overflow: hidden;
  }
  
  .card-enhanced::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, hsl(var(--accent)), hsl(var(--primary)));
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .card-enhanced:hover::after {
    opacity: 1;
  }
  
  /* Quote styling enhancements */
  blockquote {
    position: relative;
  }
  
  blockquote::before {
    content: '';
    position: absolute;
    left: -1rem;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(180deg, hsl(var(--accent)), hsl(var(--primary)));
    border-radius: 2px;
    opacity: 0.3;
  }
  
  /* Avatar hover effect */
  .icon-container-enhanced img {
    transition: transform 0.3s ease;
  }
  
  .group:hover .icon-container-enhanced img {
    transform: scale(1.05);
  }
  
  /* Responsive adjustments */
  @media (max-width: 640px) {
    .card-enhanced {
      padding: 1.5rem;
    }
    
    .flex-enhanced {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }
    
    .icon-container-lg {
      width: 3rem;
      height: 3rem;
    }
  }
  
  /* Accessibility enhancements */
  @media (prefers-reduced-motion: reduce) {
    .card-enhanced,
    .icon-container-enhanced img,
    .group:hover .icon-container-enhanced img {
      transition: none;
    }
  }
  
  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .card-enhanced {
      border-width: 2px;
    }
    
    blockquote::before {
      opacity: 1;
      width: 6px;
    }
  }
</style>