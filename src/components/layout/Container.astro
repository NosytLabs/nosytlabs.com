---
export interface Props {
  /** Container size variant */
  size?: 'standard' | 'wide' | 'narrow' | 'full';
  /** Additional CSS classes */
  className?: string;
  /** HTML element type */
  as?: 'div' | 'main' | 'article' | 'section';
}

const {
  size = 'standard',
  className = '',
  as: Element = 'div',
  ...rest
} = Astro.props;

// Enhanced container size classes - Maximized for modern 2025 layouts
const sizeClasses = {
  full: 'w-full px-4 sm:px-6 md:px-8 lg:px-8 xl:px-10 2xl:px-12 overflow-hidden',
  narrow: 'max-w-5xl mx-auto px-4 sm:px-6 md:px-8 lg:px-8 xl:px-10 w-full',
  standard: 'container-fixed w-full', // Use the CSS utility class (now max-w-[2400px])
  wide: 'max-w-[2800px] mx-auto px-4 sm:px-6 md:px-8 lg:px-8 xl:px-10 2xl:px-12 w-full'
};

const containerClasses = [
  sizeClasses[size as keyof typeof sizeClasses],
  className
].filter(Boolean).join(' ');
---

<Element class={containerClasses} {...rest}>
  <slot />
</Element>

