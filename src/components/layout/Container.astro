---
/**
 * Container Component
 * A consistent container component with proper spacing and alignment
 */

export interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl' | 'full';
  padding?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  class?: string;
}

const {
  size = 'lg',
  padding = 'md',
  class: className = '',
} = Astro.props;

// Size classes
const sizeClasses = {
  sm: 'max-w-screen-sm',
  md: 'max-w-screen-md',
  lg: 'max-w-screen-lg',
  xl: 'max-w-screen-xl',
  '2xl': 'max-w-screen-2xl',
  full: 'max-w-full',
};

// Padding classes
const paddingClasses = {
  none: 'px-0',
  sm: 'px-4',
  md: 'px-6 md:px-8',
  lg: 'px-8 md:px-12',
  xl: 'px-12 md:px-16',
};

// Combine all classes
const containerClasses = [
  'container',
  'mx-auto',
  sizeClasses[size],
  paddingClasses[padding],
  className,
].filter(Boolean).join(' ');
---

<div class={containerClasses}>
  <slot />
</div>

<style>
  .container {
    width: 100%;
    position: relative;
  }
  
  .max-w-screen-sm {
    max-width: var(--container-sm, 640px);
  }
  
  .max-w-screen-md {
    max-width: var(--container-md, 768px);
  }
  
  .max-w-screen-lg {
    max-width: var(--container-lg, 1024px);
  }
  
  .max-w-screen-xl {
    max-width: var(--container-xl, 1280px);
  }
  
  .max-w-screen-2xl {
    max-width: var(--container-2xl, 1536px);
  }
  
  .max-w-full {
    max-width: 100%;
  }
</style>
