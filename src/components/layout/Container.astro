---
interface Props {
  size?: 'sm' | 'standard' | 'lg' | 'full';
  className?: string;
}

const {
  size = 'standard',
  className = ''
} = Astro.props;

const sizeClasses = {
  sm: 'max-w-2xl',
  standard: 'max-w-7xl',
  lg: 'max-w-7xl',
  full: 'w-full'
};
---

<div class={`${sizeClasses[size]} mx-auto px-4 sm:px-6 lg:px-8 ${className}`}>
  <slot />
</div>
