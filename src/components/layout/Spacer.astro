---
/**
 * Spacer Component
 * A consistent spacer component for adding vertical space between elements
 */

export interface Props {
  size?: 'xs' | 'sm' | 'md' | 'lg' | 'xl' | '2xl' | '3xl' | '4xl';
  responsive?: boolean;
  class?: string;
}

const {
  size = 'md',
  responsive = true,
  class: className = '',
} = Astro.props;

// Size classes
const sizeClasses = {
  xs: 'h-2',
  sm: 'h-4',
  md: 'h-8',
  lg: 'h-12',
  xl: 'h-16',
  '2xl': 'h-24',
  '3xl': 'h-32',
  '4xl': 'h-40',
};

// Responsive classes
const responsiveClasses = responsive ? {
  xs: 'sm:h-3 md:h-4',
  sm: 'sm:h-6 md:h-8',
  md: 'sm:h-10 md:h-12',
  lg: 'sm:h-16 md:h-20',
  xl: 'sm:h-20 md:h-24',
  '2xl': 'sm:h-28 md:h-32',
  '3xl': 'sm:h-36 md:h-40',
  '4xl': 'sm:h-44 md:h-48',
} : {};

// Combine all classes
const spacerClasses = [
  sizeClasses[size],
  responsive ? responsiveClasses[size] : '',
  className,
].filter(Boolean).join(' ');
---

<div class={spacerClasses} aria-hidden="true"></div>

