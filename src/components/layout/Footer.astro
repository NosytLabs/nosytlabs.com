---
/**
 * Modern footer Component for NosytLabs - 2025 Edition
 * Cutting-edge footer with glassmorphism, animations, and modern patterns
 */

// Removed unused import: generateServicePath
import { allServices as services } from '../../config/services/index';
import { Logo } from '../ui/Logo.tsx';
import AstroIcon from '../ui/AstroIcon.astro';

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Footer navigation items - Professional AI-powered development focus
const footerNavItems = [
  { name: 'Home', path: '/', icon: 'home' },
  { name: 'AI Services', path: '/services', icon: 'brain-circuit' },
  { name: 'Contact', path: '/contact', icon: 'mail' },
];

// Legal navigation items - removed as per requirements
// const legalNavItems = [
//   { name: "Privacy Policy", path: "/privacy-policy" },
//   { name: "Terms of Service", path: "/terms-of-service" }
// ];

// Get featured services for footer - select popular services first
const featuredServices = services
  .filter(service => service.popular)
  .concat(services.filter(service => !service.popular))
  .slice(0, 4);

// Enhanced social media links with modern styling
const socialLinks = [
  {
    name: 'GitHub',
    url: 'https://github.com/NosytLabs',
    icon: 'github',
    color: 'hover:text-text',
    bgColor: 'hover:bg-background-muted',
  },
  {
    name: 'LinkedIn',
    url: 'https://linkedin.com/company/nosytlabs',
    icon: 'linkedin',
    color: 'hover:text-primary',
    bgColor: 'hover:bg-primary/10',
  },
  {
    name: 'Twitter',
    url: 'https://twitter.com/nosytlabs',
    icon: 'twitter',
    color: 'hover:text-info',
    bgColor: 'hover:bg-info/10',
  },
];
---

<footer
  class="relative overflow-hidden bg-gradient-to-b from-background-muted to-background border-t border-border"
>
  <!-- Enhanced background with animated gradients -->
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_20%_20%,var(--primary-glow),transparent_50%)]"
  >
  </div>
  <div
    class="absolute inset-0 bg-[radial-gradient(circle_at_80%_80%,var(--secondary-glow),transparent_50%)]"
  >
  </div>

  <!-- Floating animation elements -->
  <div
class="absolute top-10 left-1/4 w-32 h-32 bg-primary/10 rounded-full blur-2xl entrance-fade"
  >
  </div>
  <div
class="absolute bottom-10 right-1/4 w-40 h-40 bg-secondary/10 rounded-full blur-2xl entrance-fade"
  >
  </div>

  <div class="container mx-auto relative z-10">
    <!-- Main Footer Content -->
    <div class="py-16 lg:py-20">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-8 lg:gap-12">
        <!-- Brand Section - Enhanced -->
        <div class="lg:col-span-4 space-y-6">
          <div class="group">
            <a
              href="/"
              class="inline-block transition-all duration-300 hover:scale-105"
              aria-label="NosytLabs Home"
            >
              <Logo
                client:load
                size="lg"
                variant="full"
                className="hover:drop-shadow-xl transition-all duration-300"
              />
            </a>
          </div>

          <p class="text-text-muted text-lg leading-relaxed max-w-md">
            <span
              class="font-semibold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent"
              >Notable Opportunities Shape Your Tomorrow</span
            >
            <br />
            <span class="text-base mt-2 block"
              >Transforming ideas into exceptional digital experiences with cutting-edge technology
              and modern design.</span
            >
          </p>

          <!-- Enhanced Social Links -->
          <div class="flex items-center gap-3">
            <span class="text-sm font-medium text-text">Follow us:</span>
            <div class="flex gap-2">
              {
                socialLinks.map(link => (
                  <a
                    href={link.url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class={`group relative p-3 rounded-xl bg-background-muted/50 backdrop-blur-sm border border-border shadow-sm transition-all duration-300 hover:scale-110 hover:shadow-lg ${link.bgColor} ${link.color}`}
                    aria-label={`Follow us on ${link.name}`}
                  >
                    <AstroIcon name={link.icon} size={20} class="transition-transform duration-300" />
                    <div class="absolute inset-0 rounded-xl bg-gradient-to-r from-primary/10 to-secondary/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300" />
                  </a>
                ))
              }
            </div>
          </div>
        </div>

        <!-- Quick Links - Enhanced -->
        <div class="lg:col-span-2 space-y-6">
          <h3 class="text-lg font-bold text-text relative">
            Quick Links
            <div
              class="absolute bottom-0 left-0 w-8 h-0.5 bg-gradient-to-r from-primary to-secondary rounded-full"
            >
            </div>
          </h3>
          <nav class="space-y-3">
            {
              footerNavItems.map(item => (
                <a
                  href={item.path}
                  class="group flex items-center gap-3 text-text-muted hover:text-primary transition-all duration-300 hover:translate-x-2"
                >
                  <div class="p-1.5 rounded-lg bg-background-muted group-hover:bg-primary/10 transition-colors duration-300">
                    <AstroIcon name={item.icon} size={14} class="group-hover:scale-110 transition-transform duration-300" />
                  </div>
                  <span class="font-medium">{item.name}</span>
                  <AstroIcon name="arrowRight" size={14} class="opacity-0 group-hover:opacity-100 transition-all duration-300 -translate-x-2 group-hover:translate-x-0" />
                </a>
              ))
            }
          </nav>
          <div class="pt-4 border-t border-border/30">
            <nav class="grid gap-2 text-sm text-text-muted">
              <a href="/privacy-policy" class="hover:text-primary">Privacy Policy</a>
              <a href="/terms-of-service" class="hover:text-primary">Terms of Service</a>
              <a href="/cookies" class="hover:text-primary">Cookie Policy</a>
            </nav>
          </div>
        </div>

        <!-- Services - Enhanced -->
        <div class="lg:col-span-3 space-y-6">
          <h3 class="text-lg font-bold text-text relative">
            Our Services
            <div
              class="absolute bottom-0 left-0 w-8 h-0.5 bg-gradient-to-r from-primary to-secondary rounded-full"
            >
            </div>
          </h3>
          <nav class="space-y-3">
            {
              featuredServices.map(service => (
                <a
                  href={service.href}
                  class="group block p-3 rounded-xl bg-background-muted/30 backdrop-blur-sm border border-border/30 hover:bg-background-muted/60 hover:border-primary/20 transition-all duration-300 hover:shadow-lg hover:-translate-y-1"
                >
                  <div class="flex items-center gap-2 mb-1">
                    <AstroIcon name={service.icon} size={16} class="text-primary group-hover:scale-110 transition-transform duration-300" />
                    <span class="font-semibold text-text text-sm">
                      {service.name}
                    </span>
                  </div>
                  <p class="text-xs text-text-muted line-clamp-2">
                    {service.shortDescription}
                  </p>
                </a>
              ))
            }
          </nav>
        </div>

        <!-- Contact - Enhanced with Modern Patterns -->
        <div class="lg:col-span-3 space-y-6">
          <h3 class="text-lg font-bold text-text relative">
            Get In Touch
            <div
              class="absolute bottom-0 left-0 w-8 h-0.5 bg-gradient-to-r from-primary to-secondary rounded-full"
            >
            </div>
          </h3>

          <div class="space-y-4">
            <!-- Email -->
            <a
              href="mailto:hello@nosytlabs.com"
              class="group flex items-center gap-3 p-4 rounded-2xl bg-gradient-glass backdrop-blur-md border border-border/20 hover:border-primary/30 transition-all duration-300 hover:shadow-lg hover:scale-105"
            >
              <div class="p-2.5 rounded-xl bg-gradient-to-br from-primary/20 to-secondary/20">
                <AstroIcon name="tabler:mail" class="w-5 h-5 text-primary" />
              </div>
              <div>
                <div class="text-sm font-semibold text-text">Email Us</div>
                <div class="text-xs text-text-muted">hello@nosytlabs.com</div>
              </div>
              <AstroIcon name="tabler:arrow-right" size={16} class="ml-auto text-text-muted group-hover:text-primary transition-all duration-300 group-hover:translate-x-1" />
            </a>

            <!-- Address -->
            <div
              class="flex items-start gap-3 p-4 rounded-2xl bg-gradient-glass backdrop-blur-md border border-border/20"
            >
              <div class="p-2.5 rounded-xl bg-gradient-to-br from-primary/20 to-secondary/20">
                <AstroIcon name="tabler:map-pin" class="w-5 h-5 text-primary" />
              </div>
              <address class="not-italic">
                <div class="text-sm font-semibold text-text">Location</div>
                <div class="text-xs text-text-muted leading-relaxed">
                  Remote-First Development Team<br />
                  NosytLabs
                </div>
              </address>
            </div>

            <!-- AI Newsletter Signup -->
            <div class="mt-6">
              <div class="text-sm font-semibold text-text mb-3">Stay Updated</div>
              <div class="flex gap-2">
                <input 
                  type="email" 
                  placeholder="Enter your email" 
                  class="flex-1 px-3 py-2 text-sm bg-background-muted/50 backdrop-blur-sm border border-border/30 rounded-xl focus:outline-none focus:border-primary/50 transition-colors duration-300"
                />
                <button class="px-4 py-2 text-sm bg-gradient-to-r from-primary to-secondary text-white rounded-xl hover:shadow-lg transition-all duration-300 hover:scale-105">
                  Subscribe
                </button>
              </div>
            </div>

            <!-- CTA Button -->
            <a href="/contact" class="group block w-full">
              <div
                class="relative overflow-hidden rounded-2xl p-4 bg-gradient-to-r from-primary to-secondary text-text-on-primary font-semibold text-center transition-all duration-300 hover:shadow-lg hover:shadow-primary/25 hover:scale-105 active:scale-95"
              >
                <div
                  class="absolute inset-0 bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
                >
                </div>
                <div class="relative flex items-center justify-center gap-2">
                  <span>Start Your Project</span>
                  <AstroIcon name="tabler:arrow-right" class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1" />
                </div>
              </div>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Enhanced Copyright with Modern Patterns -->
    <div class="border-t border-border/20 py-8 bg-gradient-to-r from-background-muted/50 to-transparent backdrop-blur-sm">
      <div class="container mx-auto">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="text-center md:text-left">
            <p class="text-text-muted text-sm">
              &copy; {currentYear} <span class="font-bold bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">NosytLabs</span>. All rights reserved.
            </p>
            <p class="text-text-muted/70 text-xs mt-1 flex items-center justify-center md:justify-start gap-2">
              <span>Built with</span>
              <AstroIcon name="tabler:heart" class="inline-block w-3 h-3 text-red-500 animate-pulse" />
              <span>and cutting-edge web technologies</span>
            </p>
          </div>

          <!-- Technology Stack with Glassmorphism -->
          <div class="flex items-center gap-4 text-xs text-text-muted/70">
            <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-glass backdrop-blur-sm border border-border/20">
              <AstroIcon name="tabler:brand-astro" class="w-4 h-4 text-primary" />
              <span class="font-medium">Astro</span>
            </div>
            <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-glass backdrop-blur-sm border border-border/20">
              <AstroIcon name="tabler:brand-react" class="w-4 h-4 text-info" />
              <span class="font-medium">React</span>
            </div>
            <div class="flex items-center gap-2 px-3 py-1.5 rounded-lg bg-gradient-glass backdrop-blur-sm border border-border/20">
              <AstroIcon name="tabler:brand-tailwind" class="w-4 h-4 text-secondary" />
              <span class="font-medium">Tailwind</span>
            </div>
          </div>
        </div>
        
        <!-- AI-Powered Badge -->
        <div class="mt-4 flex items-center justify-center">
          <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-glass backdrop-blur-sm border border-border/20 text-xs text-text-muted">
            <AstroIcon name="tabler:brain" class="w-4 h-4 text-primary" />
            <span>AI-Powered Development • 2025</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</footer>
