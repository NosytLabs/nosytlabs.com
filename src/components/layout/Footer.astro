---
// Enhanced Footer Component with improved layout and accessibility
import Icon from '../ui/Icon.astro';

// Footer configuration
export interface Props {
  showNewsletter?: boolean;
  showSocialLinks?: boolean;
  companyName?: string;
  currentYear?: number;
}

const {
  showNewsletter = true,
  showSocialLinks = true,
  companyName = "NosytLabs",
  currentYear = new Date().getFullYear()
} = Astro.props;

// Navigation links configuration
const navigationSections = [
  {
    title: "Services",
    links: [
      { text: "Web Development", href: "/services/web-development" },
      { text: "Mobile Apps", href: "/services/mobile-apps" },
      { text: "UI/UX Design", href: "/services/design" },
      { text: "Consulting", href: "/services/consulting" }
    ]
  },
  {
    title: "Company",
    links: [
      { text: "About Us", href: "/about" },
      { text: "Our Team", href: "/team" },
      { text: "Careers", href: "/careers" },
      { text: "Contact", href: "/contact" }
    ]
  },
  {
    title: "Resources",
    links: [
      { text: "Blog", href: "/blog" },
      { text: "Case Studies", href: "/case-studies" },
      { text: "Documentation", href: "/docs" },
      { text: "Support", href: "/support" }
    ]
  }
];

// Social media links
const socialLinks = [
  { name: "GitHub", href: "https://github.com/nosytlabs", icon: "github" },
  { name: "Twitter", href: "https://twitter.com/nosytlabs", icon: "twitter" },
  { name: "LinkedIn", href: "https://linkedin.com/company/nosytlabs", icon: "linkedin" },
  { name: "Instagram", href: "https://instagram.com/nosytlabs", icon: "instagram" },
  { name: "YouTube", href: "https://youtube.com/@nosytlabs", icon: "youtube" }
];

// Legal links
const legalLinks = [
  { text: "Privacy Policy", href: "/privacy" },
  { text: "Terms of Service", href: "/terms" },
  { text: "Cookie Policy", href: "/cookies" },
  { text: "Accessibility", href: "/accessibility" }
];
---

<footer class="layout-section footer-section" id="footer">
  <div class="layout-container">
    <!-- Main Footer Content -->
    <div class="footer-main">
      <!-- Company Info -->
      <div class="footer-brand">
        <div class="footer-logo">
          <Icon name="logo" size="lg" class="footer-logo-icon" />
          <span class="footer-logo-text">{companyName}</span>
        </div>
        
        <p class="footer-description">
          Creating exceptional digital experiences through innovative web development, 
          mobile applications, and cutting-edge design solutions.
        </p>
        
        <!-- Social Links -->
        {showSocialLinks && (
          <div class="footer-social">
            <h3 class="footer-social-title">Follow Us</h3>
            <div class="footer-social-links">
              {socialLinks.map((social) => (
                <a 
                  href={social.href}
                  class="footer-social-link"
                  target="_blank"
                  rel="noopener noreferrer"
                  aria-label={`Follow us on ${social.name}`}
                >
                  <Icon name={social.icon} size="md" />
                </a>
              ))}
            </div>
          </div>
        )}
      </div>

      <!-- Navigation Sections -->
      <div class="footer-navigation">
        {navigationSections.map((section) => (
          <div class="footer-nav-section">
            <h3 class="footer-nav-title">{section.title}</h3>
            <ul class="footer-nav-list">
              {section.links.map((link) => (
                <li class="footer-nav-item">
                  <a href={link.href} class="footer-nav-link">
                    {link.text}
                  </a>
                </li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <!-- Newsletter Signup -->
      {showNewsletter && (
        <div class="footer-newsletter">
          <h3 class="footer-newsletter-title">Stay Updated</h3>
          <p class="footer-newsletter-description">
            Get the latest updates on our projects, insights, and industry trends.
          </p>
          
          <form class="footer-newsletter-form" action="/api/newsletter" method="POST">
            <div class="footer-newsletter-input-group">
              <label for="newsletter-email" class="sr-only">Email address</label>
              <input 
                type="email" 
                id="newsletter-email"
                name="email"
                class="footer-newsletter-input"
                placeholder="Enter your email"
                required
                aria-describedby="newsletter-description"
              />
              <button 
                type="submit" 
                class="footer-newsletter-button"
                aria-label="Subscribe to newsletter"
              >
                <Icon name="arrow-right" size="sm" />
              </button>
            </div>
            
            <div class="footer-newsletter-consent">
              <label class="footer-newsletter-checkbox">
                <input 
                  type="checkbox" 
                  name="consent" 
                  required
                  class="footer-newsletter-checkbox-input"
                />
                <span class="footer-newsletter-checkbox-mark"></span>
                <span class="footer-newsletter-checkbox-text">
                  I agree to receive marketing communications
                </span>
              </label>
            </div>
            
            <p id="newsletter-description" class="footer-newsletter-privacy">
              We respect your privacy. Unsubscribe at any time.
            </p>
          </form>
        </div>
      )}
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <div class="footer-bottom-content">
        <!-- Copyright -->
        <div class="footer-copyright">
          <p class="footer-copyright-text">
            © {currentYear} {companyName}. All rights reserved.
          </p>
        </div>

        <!-- Legal Links -->
        <nav class="footer-legal" aria-label="Legal navigation">
          <ul class="footer-legal-list">
            {legalLinks.map((link, index) => (
              <li class="footer-legal-item">
                <a href={link.href} class="footer-legal-link">
                  {link.text}
                </a>
                {index < legalLinks.length - 1 && (
                  <span class="footer-legal-separator" aria-hidden="true">•</span>
                )}
              </li>
            ))}
          </ul>
        </nav>

        <!-- Back to Top -->
        <button 
          class="footer-back-to-top"
          onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
          aria-label="Back to top"
        >
          <Icon name="chevron-up" size="md" />
          <span class="footer-back-to-top-text">Back to Top</span>
        </button>
      </div>
    </div>
  </div>

  <!-- Footer Background Elements -->
  <div class="footer-background">
    <div class="footer-background-pattern"></div>
    <div class="footer-background-gradient"></div>
  </div>
</footer>

<style>
  /* Footer Section */
  .footer-section {
    position: relative;
    background: var(--surface-secondary);
    border-top: 1px solid var(--border-subtle);
    overflow: hidden;
  }

  /* Footer Background */
  .footer-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .footer-background-pattern {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 80%, var(--color-primary-500) 0%, transparent 50%),
      radial-gradient(circle at 80% 20%, var(--color-secondary-500) 0%, transparent 50%);
    opacity: 0.03;
  }

  .footer-background-gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      transparent 0%,
      var(--color-primary-50) 50%,
      transparent 100%
    );
    opacity: 0.5;
  }

  /* Footer Main */
  .footer-main {
    position: relative;
    z-index: 1;
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: var(--space-12);
    padding-bottom: var(--space-12);
    border-bottom: 1px solid var(--border-subtle);
  }

  /* Footer Brand */
  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }

  .footer-logo {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    margin-bottom: var(--space-2);
  }

  .footer-logo-icon {
    color: var(--color-primary-500);
  }

  .footer-logo-text {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--text-primary);
  }

  .footer-description {
    color: var(--text-secondary);
    line-height: var(--line-height-relaxed);
    max-width: 300px;
  }

  /* Footer Social */
  .footer-social-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-social-links {
    display: flex;
    align-items: center;
    gap: var(--space-3);
  }

  .footer-social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    background: var(--surface-tertiary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    transition: all var(--transition-fast);
  }

  .footer-social-link:hover {
    background: var(--color-primary-500);
    border-color: var(--color-primary-500);
    color: white;
    transform: translateY(-2px);
  }

  /* Footer Navigation */
  .footer-navigation {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--space-8);
  }

  .footer-nav-section {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .footer-nav-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }

  .footer-nav-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  .footer-nav-link {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
    transition: color var(--transition-fast);
    position: relative;
  }

  .footer-nav-link:hover {
    color: var(--color-primary-600);
  }

  .footer-nav-link::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 4px;
    background: var(--color-primary-500);
    border-radius: var(--radius-full);
    opacity: 0;
    transition: opacity var(--transition-fast);
  }

  .footer-nav-link:hover::before {
    opacity: 1;
  }

  /* Footer Newsletter */
  .footer-newsletter {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  .footer-newsletter-title {
    font-size: var(--font-size-sm);
    font-weight: var(--font-weight-semibold);
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-2);
  }

  .footer-newsletter-description {
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    line-height: var(--line-height-relaxed);
  }

  .footer-newsletter-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }

  .footer-newsletter-input-group {
    display: flex;
    gap: 0;
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    overflow: hidden;
    background: var(--surface-primary);
    transition: border-color var(--transition-fast);
  }

  .footer-newsletter-input-group:focus-within {
    border-color: var(--color-primary-500);
  }

  .footer-newsletter-input {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    border: none;
    background: transparent;
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    outline: none;
  }

  .footer-newsletter-input::placeholder {
    color: var(--text-tertiary);
  }

  .footer-newsletter-button {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-3);
    background: var(--color-primary-500);
    border: none;
    color: white;
    cursor: pointer;
    transition: background-color var(--transition-fast);
  }

  .footer-newsletter-button:hover {
    background: var(--color-primary-600);
  }

  /* Newsletter Consent */
  .footer-newsletter-consent {
    margin-top: var(--space-2);
  }

  .footer-newsletter-checkbox {
    display: flex;
    align-items: flex-start;
    gap: var(--space-2);
    cursor: pointer;
    font-size: var(--font-size-xs);
    line-height: var(--line-height-relaxed);
  }

  .footer-newsletter-checkbox-input {
    position: absolute;
    opacity: 0;
    pointer-events: none;
  }

  .footer-newsletter-checkbox-mark {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 16px;
    height: 16px;
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-sm);
    background: var(--surface-primary);
    transition: all var(--transition-fast);
    flex-shrink: 0;
    margin-top: 2px;
  }

  .footer-newsletter-checkbox-input:checked + .footer-newsletter-checkbox-mark {
    background: var(--color-primary-500);
    border-color: var(--color-primary-500);
  }

  .footer-newsletter-checkbox-input:checked + .footer-newsletter-checkbox-mark::after {
    content: '✓';
    color: white;
    font-size: 10px;
    font-weight: bold;
  }

  .footer-newsletter-checkbox-text {
    color: var(--text-secondary);
  }

  .footer-newsletter-privacy {
    color: var(--text-tertiary);
    font-size: var(--font-size-xs);
    margin-top: var(--space-2);
  }

  /* Footer Bottom */
  .footer-bottom {
    position: relative;
    z-index: 1;
    padding-top: var(--space-8);
  }

  .footer-bottom-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-6);
    flex-wrap: wrap;
  }

  .footer-copyright-text {
    color: var(--text-tertiary);
    font-size: var(--font-size-sm);
    margin: 0;
  }

  /* Footer Legal */
  .footer-legal-list {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    list-style: none;
    padding: 0;
    margin: 0;
    flex-wrap: wrap;
  }

  .footer-legal-item {
    display: flex;
    align-items: center;
    gap: var(--space-4);
  }

  .footer-legal-link {
    color: var(--text-tertiary);
    text-decoration: none;
    font-size: var(--font-size-sm);
    transition: color var(--transition-fast);
  }

  .footer-legal-link:hover {
    color: var(--color-primary-600);
  }

  .footer-legal-separator {
    color: var(--text-quaternary);
    font-size: var(--font-size-xs);
  }

  /* Back to Top */
  .footer-back-to-top {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-2) var(--space-3);
    background: var(--surface-tertiary);
    border: 1px solid var(--border-subtle);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    font-size: var(--font-size-sm);
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .footer-back-to-top:hover {
    background: var(--surface-quaternary);
    color: var(--color-primary-600);
    transform: translateY(-2px);
  }

  .footer-back-to-top-text {
    display: none;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
      gap: var(--space-8);
    }

    .footer-newsletter {
      grid-column: 1 / -1;
      max-width: 400px;
      margin: 0 auto;
      text-align: center;
    }

    .footer-navigation {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-6);
    }
  }

  @media (max-width: 768px) {
    .footer-main {
      grid-template-columns: 1fr;
      gap: var(--space-8);
      text-align: center;
    }

    .footer-brand {
      align-items: center;
    }

    .footer-description {
      max-width: none;
    }

    .footer-navigation {
      grid-template-columns: 1fr;
      gap: var(--space-6);
    }

    .footer-nav-section {
      text-align: center;
    }

    .footer-nav-link::before {
      display: none;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
      gap: var(--space-4);
    }

    .footer-legal-list {
      justify-content: center;
    }

    .footer-back-to-top-text {
      display: inline;
    }
  }

  @media (max-width: 480px) {
    .footer-social-links {
      justify-content: center;
    }

    .footer-newsletter-form {
      gap: var(--space-4);
    }

    .footer-newsletter-input-group {
      flex-direction: column;
      border-radius: var(--radius-lg);
    }

    .footer-newsletter-input {
      border-bottom: 1px solid var(--border-subtle);
    }

    .footer-newsletter-button {
      border-radius: 0 0 var(--radius-lg) var(--radius-lg);
    }

    .footer-legal-list {
      flex-direction: column;
      gap: var(--space-2);
    }

    .footer-legal-separator {
      display: none;
    }
  }

  /* Enhanced Focus States */
  .footer-social-link:focus-visible,
  .footer-nav-link:focus-visible,
  .footer-newsletter-input:focus-visible,
  .footer-newsletter-button:focus-visible,
  .footer-newsletter-checkbox:focus-within,
  .footer-legal-link:focus-visible,
  .footer-back-to-top:focus-visible {
    outline: 2px solid var(--color-primary-500);
    outline-offset: 2px;
  }

  /* Dark Mode Enhancements */
  @media (prefers-color-scheme: dark) {
    .footer-section {
      background: var(--surface-secondary-dark);
      border-color: var(--border-subtle-dark);
    }

    .footer-background-gradient {
      background: linear-gradient(
        135deg,
        transparent 0%,
        var(--color-primary-900) 50%,
        transparent 100%
      );
    }

    .footer-social-link {
      background: var(--surface-tertiary-dark);
      border-color: var(--border-subtle-dark);
    }

    .footer-newsletter-input-group {
      background: var(--surface-primary-dark);
      border-color: var(--border-subtle-dark);
    }

    .footer-newsletter-checkbox-mark {
      background: var(--surface-primary-dark);
      border-color: var(--border-subtle-dark);
    }

    .footer-back-to-top {
      background: var(--surface-tertiary-dark);
      border-color: var(--border-subtle-dark);
    }

    .footer-back-to-top:hover {
      background: var(--surface-quaternary-dark);
    }
  }

  /* High Contrast Mode */
  @media (prefers-contrast: high) {
    .footer-section {
      border-top-width: 2px;
    }

    .footer-social-link,
    .footer-newsletter-input-group,
    .footer-newsletter-checkbox-mark,
    .footer-back-to-top {
      border-width: 2px;
    }
  }

  /* Reduced Motion */
  @media (prefers-reduced-motion: reduce) {
    .footer-social-link,
    .footer-nav-link,
    .footer-newsletter-input-group,
    .footer-newsletter-button,
    .footer-newsletter-checkbox-mark,
    .footer-back-to-top {
      transition: none;
    }

    .footer-social-link:hover,
    .footer-back-to-top:hover {
      transform: none;
    }
  }

  /* Print Styles */
  @media print {
    .footer-section {
      background: white;
      border-top: 1px solid #ccc;
    }

    .footer-background,
    .footer-newsletter,
    .footer-social,
    .footer-back-to-top {
      display: none;
    }

    .footer-main {
      grid-template-columns: 1fr 2fr;
    }

    .footer-nav-link,
    .footer-legal-link {
      color: #000;
    }
  }

  /* Screen Reader Only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }
</style>

<script>
  // Enhanced footer functionality
  function initFooter() {
    const footer = document.querySelector('.footer-section');
    if (!footer) return;

    // Newsletter form handling
    const newsletterForm = document.querySelector('.footer-newsletter-form');
    if (newsletterForm) {
      newsletterForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(newsletterForm);
        const email = formData.get('email');
        const consent = formData.get('consent');
        
        if (!email || !consent) {
          alert('Please fill in all required fields.');
          return;
        }
        
        try {
          const response = await fetch('/api/newsletter', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({ email, consent: true }),
          });
          
          if (response.ok) {
            alert('Thank you for subscribing!');
            newsletterForm.reset();
          } else {
            throw new Error('Subscription failed');
          }
        } catch (error) {
          alert('Sorry, there was an error. Please try again later.');
        }
      });
    }

    // Enhanced keyboard navigation for social links
    const socialLinks = document.querySelectorAll('.footer-social-link');
    socialLinks.forEach((link, index) => {
      link.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowRight') {
          e.preventDefault();
          const nextLink = socialLinks[index + 1] || socialLinks[0];
          nextLink.focus();
        }
        
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          const prevLink = socialLinks[index - 1] || socialLinks[socialLinks.length - 1];
          prevLink.focus();
        }
      });
    });

    // Smooth scroll for back to top
    const backToTopButton = document.querySelector('.footer-back-to-top');
    if (backToTopButton) {
      backToTopButton.addEventListener('click', () => {
        window.scrollTo({
          top: 0,
          behavior: 'smooth'
        });
      });
    }

    // Add loading state to newsletter form
    const newsletterButton = document.querySelector('.footer-newsletter-button');
    if (newsletterButton && newsletterForm) {
      const originalContent = newsletterButton.innerHTML;
      
      newsletterForm.addEventListener('submit', () => {
        newsletterButton.innerHTML = '<div class="loading-spinner"></div>';
        newsletterButton.disabled = true;
        
        setTimeout(() => {
          newsletterButton.innerHTML = originalContent;
          newsletterButton.disabled = false;
        }, 2000);
      });
    }
  }

  // Initialize on DOM content loaded
  document.addEventListener('DOMContentLoaded', initFooter);

  // Re-initialize on navigation (for SPA-like behavior)
  document.addEventListener('astro:page-load', initFooter);
</script>