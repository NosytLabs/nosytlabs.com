---
/**
 * Modern Footer Component for NosytLabs
 * A clean, professional footer with navigation and social links
 */

import { getBlogIndexPath, getServicesIndexPath, generateServicePath } from '@/utils/pathResolvers';
import { services } from '@/config/services';
import { Icon } from '@/components/ui/icon';

// Get current year for copyright
const currentYear = new Date().getFullYear();

// Footer navigation items - Professional AI-powered development focus
const footerNavItems = [
  { name: "Home", path: "/" },
  { name: "Services", path: getServicesIndexPath() },
  { name: "Projects", path: "/projects" },
  { name: "Blog", path: getBlogIndexPath() },
  { name: "Contact", path: "/contact" },
  { name: "Privacy Policy", path: "/privacy-policy" },
  { name: "Terms of Service", path: "/terms-of-service" }
];

// Get featured services for footer
const featuredServices = services.slice(0, 3);

// Social media links - Authentic NosytLabs links with SVG icons
const socialLinks = [
  { name: "GitHub", url: "https://github.com/NosytLabs", icon: "github" },
  { name: "LinkedIn", url: "https://linkedin.com/company/nosytlabs", icon: "linkedin" },
  { name: "Twitter", url: "https://twitter.com/nosytlabs", icon: "twitter" }
];
---

<footer class="bg-gradient-to-br from-primary-700 to-primary-900 text-white relative overflow-hidden py-12 md:py-16">
  <div class="absolute inset-0 bg-grid-pattern opacity-5"></div>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <div>
        <div class="flex items-center space-x-3 mb-4">
          <img src="/images/favicon.svg" alt="NosytLabs Logo" width="32" height="32" class="w-8 h-8" />
          <span class="text-2xl font-bold">NosytLabs</span>
        </div>
        <p class="text-neutral-300 mb-6">Notable Opportunities Shape Your Tomorrow</p>
        <ul class="flex space-x-4" role="list">
          {socialLinks.map((link) => (
            <li>
              <a href={link.url} target="_blank" rel="noopener noreferrer" class="text-neutral-300 hover:text-secondary-500 transition-colors" aria-label={`Follow us on ${link.name}`}>
                <Icon name={link.icon} size={24} />
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
        <ul class="space-y-3">
          {footerNavItems.slice(0, 5).map((item) => (
            <li>
              <a href={item.path} class="text-neutral-300 hover:text-secondary-500 transition-colors">
                {item.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Services</h3>
        <ul class="space-y-3">
          {featuredServices.map((service) => (
            <li>
              <a href={service.href} class="text-neutral-300 hover:text-secondary-500 transition-colors">
                {service.name}
              </a>
            </li>
          ))}
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-4">Contact Us</h3>
        <ul class="space-y-3">
          <li class="flex items-center space-x-3">
            <Icon name="mail" size={20} className="text-secondary-500" />
            <a href="mailto:hi@nosytlabs.com" class="text-neutral-300 hover:text-secondary-500 transition-colors">
              hi@nosytlabs.com
            </a>
          </li>
          <li class="flex items-start space-x-3">
            <Icon name="mapPin" size={20} className="text-secondary-500 mt-1" />
            <address class="text-neutral-300 not-italic">
              801 White Sands Blvd #1018<br />
              Alamogordo, NM 88310
            </address>
          </li>
          <li class="pt-2">
            <a href="/contact" class="inline-flex items-center justify-center px-5 py-2.5 text-base font-medium text-white bg-secondary-600 hover:bg-secondary-700 rounded-lg transition-colors focus:ring-4 focus:ring-secondary-300 dark:focus:ring-secondary-900">
              Get in Touch
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="border-t border-primary-800 pt-8 mt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-neutral-400 text-sm">&copy; {currentYear} NosytLabs. All rights reserved.</p>
      <ul class="flex space-x-6 mt-4 md:mt-0" role="list">
        {footerNavItems.slice(5).map((item) => (
          <li>
            <a href={item.path} class="text-sm text-neutral-400 hover:text-white transition-colors">
              {item.name}
            </a>
          </li>
        ))}
      </ul>
    </div>
  </div>
</footer>
