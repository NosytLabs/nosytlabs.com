---
interface Props {
  background?: 'default' | 'muted' | 'gradient' | 'none';
  spacing?: 'none' | 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
  id?: string;
}

const { 
  background = 'default', 
  spacing = 'md',
  className = '',
  id
} = Astro.props;

const bgClasses = {
  default: 'bg-background',
  muted: 'bg-muted/30',
  gradient: 'bg-gradient-to-br from-primary/5 via-background to-accent/5',
  none: ''
};

const spacingClasses = {
  none: 'py-0',
  sm: 'py-8 md:py-12',
  md: 'py-12 md:py-16 lg:py-20',
  lg: 'py-16 md:py-24 lg:py-32',
  xl: 'py-20 md:py-32 lg:py-40'
};
---

<section 
  class={`${bgClasses[background]} ${spacingClasses[spacing]} ${className}`}
  {...(id && { id })}
>
  <slot />
</section>
