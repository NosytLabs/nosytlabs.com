---
interface Props {
  title: string;
  subtitle?: string;
  size?: 'compact' | 'standard' | 'large';
  background?: 'default' | 'gradient' | 'muted';
  alignment?: 'center' | 'left';
}

const {
  title,
  subtitle = '',
  size = 'standard',
  background = 'gradient',
  alignment = 'center'
} = Astro.props;

const sizeClasses = {
  compact: 'py-12 md:py-16 lg:py-20',
  standard: 'py-16 md:py-24 lg:py-32',
  large: 'py-20 md:py-32 lg:py-40'
};

const bgClasses = {
  default: 'bg-background',
  gradient: 'bg-gradient-to-br from-primary/5 via-background to-accent/5',
  muted: 'bg-muted/30'
};

const alignClasses = alignment === 'center' ? 'text-center' : 'text-left';
---

<section class={`${bgClasses[background]} ${sizeClasses[size]} border-b border-border/50`}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`max-w-4xl ${alignment === 'center' ? 'mx-auto' : ''}`}>
      <div class={`mb-6 flex items-center gap-3 ${alignment === 'center' ? 'justify-center' : ''}`}>
        <div class="h-1 w-8 bg-gradient-to-r from-primary to-accent rounded-full"></div>
        <span class="text-sm font-semibold uppercase tracking-widest text-primary">Featured</span>
      </div>
      
      <h1 class={`text-4xl sm:text-5xl md:text-6xl lg:text-7xl font-bold mb-6 text-foreground ${alignClasses}`}>
        {title}
      </h1>
      
      {subtitle && (
        <p class={`text-lg md:text-xl lg:text-2xl text-muted-foreground leading-relaxed ${alignClasses}`}>
          {subtitle}
        </p>
      )}
    </div>
  </div>
</section>
