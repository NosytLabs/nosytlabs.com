---
import MainLayout from "@/layouts/MainLayout.astro";
import Breadcrumbs from "@/components/ui/Breadcrumbs.astro";
import Button from "@/components/ui/Button.astro";
import { serviceIcons } from "@/lib/icons/service-icons";
import { createInternalLink, createImagePath } from "../../lib/constants";
import type { MarkdownHeading } from "astro";

interface Props {
  title: string;
  description: string;
  icon?: string;
  heroSubtitle?: string;
  benefits?: string[];
  features?: string[];
  price?: string;
  delivery?: string;
  popular?: boolean;
  category?: string;
  tags?: string[];
  featured?: boolean;
  timeline?: string;
  deliverables?: string[];
  ctaPrimary?: { text: string; href: string };
  ctaSecondary?: { text: string; href: string };
  headings?: MarkdownHeading[];
}

const {
  title,
  description,
  icon,
  heroSubtitle,
  price,
  delivery,
  popular = false,
  benefits = [],
  features = [],

  ctaPrimary = { text: "Start Your Project", href: createInternalLink("/contact") },
  ctaSecondary = { text: "Contact Us", href: createInternalLink("/contact") }
} = Astro.props;



// Custom icon mapping for high-quality SVG icons
const customIconMap: Record<string, string> = {
  'cpu': '/icons/ai-integration.svg',
  'brain': '/icons/brain.svg',
  'globe': '/icons/code.svg',
  'smartphone': '/icons/cube.svg',
  'search': '/icons/debug.svg',
  'zap': '/icons/sprint.svg',
  'palette': '/icons/cube.svg',
  'shopping-cart': '/icons/code.svg',
  'message-circle': '/icons/brain.svg',
  'rocket': '/icons/sprint.svg',
  'code': '/icons/code.svg',
  'star': '/icons/debug.svg'
};

// Icon will be rendered using IIFE pattern to avoid toString() issues
---

<MainLayout title={title} description={description}>
  <script type="application/ld+json" is:inline>
    {JSON.stringify({
      '@context': 'https://schema.org',
      '@type': 'Service',
      name: title,
      description,
      provider: {
        '@type': 'Organization',
        name: 'NOSYT Labs',
        url: new URL(Astro.request.url).origin,
        logo: new URL(`${import.meta.env.BASE_URL}/images/logo.svg`, Astro.request.url).href,
      },
      areaServed: 'Remote',
      serviceType: title,
      url: pageUrl,
      offers: {
        '@type': 'Offer',
        priceCurrency: 'USD',
        availability: 'https://schema.org/InStock',
      },
      mainEntityOfPage: pageUrl,
    })}
  </script>

  <!-- Breadcrumbs with improved spacing -->
  <div class="container pt-6">
    <Breadcrumbs items={[{ name: 'Home', url: createInternalLink('/') }, { name: 'Services', url: createInternalLink('/services') }, { name: title }]} />
  </div>

  <!-- Hero Section with improved hierarchy and typography -->
  <section class="py-16 lg:py-20 bg-gradient-to-br from-background via-background to-muted/5 relative overflow-hidden">
    <!-- Subtle background elements -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/2 via-transparent to-accent/2"></div>
    <div class="absolute top-1/3 right-1/4 w-32 h-32 bg-primary/3 rounded-full blur-3xl animate-float"></div>
    <div class="absolute bottom-1/3 left-1/4 w-24 h-24 bg-accent/3 rounded-full blur-2xl animate-float animation-delay-2000"></div>
    
    <div class="container relative z-10">
      <div class="grid gap-12 lg:grid-cols-[1fr_280px] items-center">
        <!-- Content Column with improved typography hierarchy -->
        <div class="animate-fade-in-up space-y-5">
          {popular && (
            <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/8 border border-primary/15 hover:bg-primary/12 transition-all duration-300">
              <div class="w-2 h-2 bg-primary rounded-full animate-pulse"></div>
              <span class="text-sm font-semibold text-primary uppercase tracking-wide">Most Popular</span>
            </div>
          )}
          
          <!-- Improved title hierarchy -->
          <div class="space-y-4">
            <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold tracking-tight text-foreground leading-[1.1]">
              {title}
            </h1>
            <p class="text-lg lg:text-xl text-muted-foreground leading-relaxed max-w-2xl">
              {description}
            </p>
            {heroSubtitle && (
              <p class="text-base text-muted-foreground/90 leading-relaxed max-w-2xl">
                {heroSubtitle}
              </p>
            )}
          </div>
          
          <!-- Enhanced pricing card with better visual hierarchy -->
          {(price || delivery) && (
            <div class="p-6 bg-card/40 backdrop-blur-sm border border-border/30 rounded-2xl hover:border-primary/20 transition-all duration-300 max-w-md">
              {price && (
                <div class="mb-4">
                  <div class="flex items-baseline gap-2">
                    <span class="text-4xl font-bold text-primary">{price}</span>
                    <span class="text-base text-muted-foreground">Starting Price</span>
                  </div>
                </div>
              )}
              {delivery && (
                <div class="flex items-center gap-2 text-base text-muted-foreground">
                  <div class="w-6 h-6 rounded-full bg-primary/15 flex items-center justify-center">
                    <svg class="w-3.5 h-3.5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                  </div>
                  <span class="font-medium">{delivery} Delivery</span>
                </div>
              )}
            </div>
          )}
          
          <!-- Improved CTA buttons with better spacing -->
          <div class="flex flex-col sm:flex-row gap-4 pt-4">
            {ctaPrimary && <Button href={ctaPrimary.href} text={ctaPrimary.text} variant="primary" />}
            {ctaSecondary && <Button href={ctaSecondary.href} text={ctaSecondary.text} variant="secondary" />}
          </div>
        </div>
        
        <!-- Icon Column with improved media placement -->
        {icon && (
          <div class="flex justify-center lg:justify-end animate-fade-in-up animate-delay-300">
            <div class="relative group">
              <div class="absolute inset-0 bg-gradient-to-br from-primary/8 to-accent/8 rounded-full blur-3xl opacity-60 group-hover:opacity-80 transition-opacity duration-500"></div>
              {(() => {
                const customIconPath = customIconMap[icon];
                if (customIconPath) {
                  return <img src={createImagePath(customIconPath)} alt={`${title} service icon`} class="h-64 w-64 lg:h-72 lg:w-72 relative z-10 group-hover:scale-105 transition-transform duration-300" loading="lazy" decoding="async" />;
                } else {
                  const Icon = serviceIcons[icon as keyof typeof serviceIcons] || serviceIcons['default-icon'];
                  return <Icon size={280} className="h-64 w-64 lg:h-72 lg:w-72 relative z-10 group-hover:scale-105 transition-transform duration-300" aria-label={`${title} service icon`} />;
                }
              })()}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Benefits Section with improved color scheme and typography -->
  {benefits.length > 0 && (
    <section class="py-16 bg-background">
