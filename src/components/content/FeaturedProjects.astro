---
import HeroButton from '../ui/HeroUIButtonAstro.astro';
import { createInternalLink } from '../../lib/constants';
---

<div class="space-y-12">
  <!-- Placeholder for projects - will be populated when project data is available -->
  <div class="card-base text-center py-16 border-2 border-dashed">
    <svg class="w-16 h-16 mx-auto mb-4 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
    </svg>
    <h3 class="text-2xl font-bold mb-2">Featured Projects Coming Soon</h3>
    <p class="text-muted-foreground mb-6">We're currently showcasing our portfolio of 47 successful deployments</p>
  </div>

  <!-- CTA -->
  <div class="cta-content">
    <h3 class="text-2xl md:text-3xl font-bold">Ready to Start Your Project?</h3>
    <p class="text-muted-foreground max-w-3xl mx-auto">
      Let's discuss how we can bring your vision to life with our expertise in web development, AI integration, and digital solutions.
    </p>
    <HeroButton 
      href={createInternalLink("/contact")}
      text="Start Your Project"
      variant="primary"
      size="lg"
    />
  </div>
</div>

