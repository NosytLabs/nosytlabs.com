---
import Button from '../ui/Button.astro';
import { createInternalLink } from '../../lib/constants';

const caseStudies = [
  {
    title: "AI-Powered Customer Service Revolution",
    description: "Automated 80% of customer inquiries, reducing response time from 24 hours to under 2 minutes while maintaining 95% satisfaction rate.",
    metrics: ["80% automation", "2min response", "95% satisfaction"],
    tags: ["AI", "Automation", "Customer Service"]
  },
  {
    title: "E-commerce Performance Optimization",
    description: "Reduced page load time by 65% and increased conversion rate by 28% through technical optimization and UX improvements.",
    metrics: ["65% faster load", "28% conversion", "3x traffic growth"],
    tags: ["Performance", "E-commerce", "Optimization"]
  },
  {
    title: "FinTech Security & Compliance Solution",
    description: "Built secure payment processing system handling $2M+ monthly transactions with zero security incidents and full PCI compliance.",
    metrics: ["$2M+ processed", "Zero incidents", "PCI compliant"],
    tags: ["FinTech", "Security", "Compliance"]
  }
];
---

<div class="space-y-8">
  {caseStudies.map((study) => (
    <details class="group card-featured">
      <summary class="cursor-pointer p-6 flex items-center justify-between">
        <div class="flex-1">
          <h3 class="text-xl font-bold mb-2">{study.title}</h3>
          <p class="text-muted-foreground">{study.description}</p>
        </div>
        <button 
          class="ml-4 w-8 h-8 rounded-full bg-primary/10 flex items-center justify-center group-open:rotate-180 transition-transform"
          aria-label={`Toggle details for ${study.title} case study`}
        >
          <svg class="w-5 h-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
          </svg>
        </button>
      </summary>
      <div class="px-6 pb-6 space-y-4">
        <div class="flex flex-wrap gap-3">
          {study.metrics.map((metric) => (
            <span class="px-4 py-2 bg-primary/10 text-primary rounded-lg font-semibold text-sm">
              {metric}
            </span>
          ))}
        </div>
        <div class="flex flex-wrap gap-2">
          {study.tags.map((tag) => (
            <span class="px-3 py-1 bg-muted text-muted-foreground rounded-md text-sm">
              {tag}
            </span>
          ))}
        </div>
      </div>
    </details>
  ))}

  <div class="text-center pt-8">
    <Button 
      href={createInternalLink("/projects")}
      text="View All Case Studies"
      variant="outline"
      size="lg"
    />
  </div>
</div>
