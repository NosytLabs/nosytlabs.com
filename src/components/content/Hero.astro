---
import Button from '../ui/Button.astro';
import Container from '../layout/Container.astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  ctaText?: string;
  ctaLink?: string;
  secondaryCtaText?: string;
  secondaryCtaLink?: string;
  className?: string;
}

const {
  title = "Modern Web Solutions That Drive Results",
  subtitle = "Full-Stack Development • AI Integration • Digital Innovation",
  description = "We create clean, efficient web applications that solve real business challenges. From modern dashboards to AI-powered tools, our solutions are built for performance and growth.",
  ctaText = "Get Started",
  ctaLink = "/contact",
  secondaryCtaText = "View Projects",
  secondaryCtaLink = "/projects",
  className = ""
} = Astro.props;
---

<section class={`hero-enhanced section-spacing-lg ${className}`} aria-labelledby="hero-title">
  <Container size="standard">
    <!-- Hero Content Wrapper -->
    <div class="hero-content text-center">
      
      <!-- Subtitle Badge -->
      <div class="mb-6">
        <span class="hero-badge inline-block">
          {subtitle}
        </span>
      </div>

      <!-- Title -->
      <h1 id="hero-title" class="text-4xl md:text-5xl lg:text-6xl font-bold tracking-tight mb-6 max-w-4xl mx-auto">
        {title}
      </h1>

      <!-- Description -->
      <p class="text-lg md:text-xl text-muted-foreground max-w-2xl mx-auto mb-8 leading-relaxed">
        {description}
      </p>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-12">
        <Button 
          href={ctaLink}
          text={ctaText}
          variant="primary"
          size="lg"
        />
        
        <Button 
          href={secondaryCtaLink}
          text={secondaryCtaText}
          variant="outline"
          size="lg"
        />
      </div>

      <!-- Trust Indicators -->
      <div class="flex flex-wrap gap-6 md:gap-8 justify-center text-sm text-muted-foreground">
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>47 Projects Delivered</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>10,000+ Users</span>
        </div>
        <div class="flex items-center gap-2">
          <svg class="w-5 h-5 text-success flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>Sub-Second Response</span>
        </div>
      </div>

    </div>
  </Container>
</section>
