---
import { getCollection } from 'astro:content';

const services = await getCollection('services');

// Sort services by priority
const coreServices = services.sort((a, b) => {
  const priority: Record<string, number> = {
    "professional-web-development": 1,
    "ai-integration-automation": 2,
    "mobile-app-development": 3,
    "rapid-prototype-development": 4,
    "tech-consulting-seo-audits": 5,
    "3d-printing-services": 6,
  };
  return (priority[a.slug] || 99) - (priority[b.slug] || 99);
});

const iconMap: Record<string, string> = {
  "web-development": "M12 14l9-5-9-5-9 5 9 5z M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z",
  "mobile-development": "M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z",
  "ai-integration": "M9 2a1 1 0 000 2h2a1 1 0 100-2H9z M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z",
  code: "M9.4 16.6L4.8 12l4.6-4.6L8 6l-6 6 6 6 1.4-1.4zm5.2 0l4.6-4.6-4.6-4.6L16 6l6 6-6 6-1.4-1.4z",
};
---

<div class="space-y-8 md:space-y-10">
  {/* Section Header */}
  <div class="text-center space-y-3 md:space-y-4">
    <div class="inline-flex items-center px-4 py-2 rounded-full bg-primary/5 border border-primary/10 text-primary text-sm font-medium mb-2">
      <svg
        class="w-4 h-4 mr-2"
        fill="none"
        stroke="currentColor"
        viewBox="0 0 24 24"
        stroke-width="2"
      >
        <path d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
      </svg>
      What We Offer
    </div>

    <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold tracking-tight">
      Our Core{" "}
      <span class="bg-gradient-to-r from-primary to-accent bg-clip-text text-transparent">
        Services
      </span>
    </h2>

    <p class="text-base md:text-lg lg:text-xl text-muted-foreground max-w-3xl mx-auto leading-relaxed px-4">
      We specialize in web development, AI integration, mobile apps, and rapid prototyping. Each service is designed to deliver measurable results for your business.
    </p>
  </div>

  {/* Services Grid - Static HTML */}
  <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8 w-full">
    {coreServices.map((service) => {
      const iconPath = iconMap[service.data.icon || "code"] || iconMap["code"];
      const truncatedDescription = service.data.description.length > 150 
        ? service.data.description.substring(0, 147) + "..."
        : service.data.description;
      const limitedFeatures = (service.data.features || []).slice(0, 4);

      return (
        <div class="h-full group border-2 border-default-200/60 bg-gradient-to-br from-content1 via-content1/95 to-default-50/80 hover:border-primary/60 hover:shadow-2xl hover:-translate-y-2 transition-all duration-500 backdrop-blur-sm rounded-xl overflow-hidden">
          {/* Decorative gradient overlay */}
          <div class="absolute inset-0 bg-gradient-to-br from-primary/8 via-transparent to-accent/8 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none rounded-xl" />

          <div class="relative z-10 flex flex-col gap-5 p-6 md:p-8 h-full">
            {/* Icon */}
            <div class="flex items-center justify-center w-16 h-16 md:w-20 md:h-20 rounded-2xl bg-gradient-to-br from-primary/20 to-accent/20 border-2 border-primary/40 group-hover:scale-110 group-hover:rotate-6 transition-all duration-500 shadow-lg group-hover:shadow-2xl">
              <svg
                class="w-8 h-8 md:w-10 md:h-10 text-primary group-hover:text-accent transition-colors duration-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                stroke-width="2.5"
              >
                <path d={iconPath} />
              </svg>
            </div>

            {/* Title */}
            <h3 class="text-xl md:text-2xl font-bold group-hover:text-primary transition-colors duration-300 leading-tight">
              {service.data.title}
            </h3>

            {/* Description */}
            <p class="text-sm md:text-base text-muted-foreground leading-relaxed flex-grow">
              {truncatedDescription}
            </p>

            {/* Features */}
            {limitedFeatures.length > 0 && (
              <ul class="space-y-3 my-5">
                {limitedFeatures.map((feature) => (
                  <li class="flex items-start gap-3 text-sm font-medium group/item">
                    <div class="flex-shrink-0 w-6 h-6 mt-0.5 bg-gradient-to-br from-success to-success/70 rounded-full flex items-center justify-center shadow-md group-hover/item:scale-110 transition-transform">
                      <svg class="w-3.5 h-3.5 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                      </svg>
                    </div>
                    <span class="text-foreground/95 group-hover/item:text-foreground transition-colors leading-snug pt-0.5">
                      {feature}
                    </span>
                  </li>
                ))}
              </ul>
            )}

            {/* Price */}
            {service.data.price && (
              <div class="mt-8 pt-8 border-t-2 border-border/40">
                <p class="text-xs font-semibold text-muted-foreground mb-3 tracking-wide uppercase">Starting Price</p>
                <span class="text-5xl md:text-6xl font-extrabold bg-gradient-to-r from-primary via-primary to-accent bg-clip-text text-transparent block mb-2">
                  {service.data.price}
                </span>
                <p class="text-sm text-muted-foreground mt-2">Custom quotes available for all projects</p>
              </div>
            )}

            {/* CTA Button */}
            <a
              href={`/services/${service.slug}`}
              class="w-full mt-4 px-6 py-4 inline-flex items-center justify-center rounded-xl font-bold text-lg bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300"
            >
              Learn More
              <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>

          {/* Decorative accent line */}
          <div class="absolute top-0 left-0 right-0 h-1 bg-gradient-to-r from-primary via-accent to-primary opacity-0 group-hover:opacity-100 transition-opacity duration-300 rounded-t-xl" />
        </div>
      );
    })}
  </div>

  {/* CTA Section */}
  <div class="text-center pt-8 md:pt-12">
    <p class="text-lg text-muted-foreground mb-6 max-w-2xl mx-auto">
      Ready to transform your business with modern technology? Let's discuss your project and deliver results that matter.
    </p>
    <div class="inline-flex flex-col sm:flex-row gap-4 items-center">
      <a
        href="/contact"
        class="w-full sm:w-auto px-10 py-4 inline-flex items-center justify-center text-lg font-bold rounded-2xl bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-xl hover:shadow-2xl hover:scale-105 transition-all duration-300 min-h-16"
      >
        Get Started Today
      </a>
      <a
        href="/services"
        class="w-full sm:w-auto px-10 py-4 inline-flex items-center justify-center text-lg font-bold rounded-2xl bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-lg hover:shadow-xl hover:scale-105 transition-all duration-300 min-h-16"
      >
        Get a Quote
      </a>
    </div>

    <p class="mt-6 text-sm text-muted-foreground">
      Not sure which service is right for you?{" "}
      <a
        href="/contact"
        class="text-primary hover:underline font-medium"
      >
        Contact us
      </a>{" "}
      for a free consultation.
    </p>
  </div>
</div>
