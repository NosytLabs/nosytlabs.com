---
import AstroIcon from '../ui/AstroIcon.astro';
---

<section class="relative overflow-hidden bg-gradient-to-br from-background via-background to-background-muted">
  <!-- Background Decorations -->
  <div class="absolute inset-0">
    <div class="absolute top-1/4 left-1/4 w-96 h-96 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
    <div class="absolute bottom-1/4 right-1/4 w-80 h-80 bg-secondary/10 rounded-full blur-3xl animate-pulse delay-1000"></div>
    <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-64 h-64 bg-accent/5 rounded-full blur-2xl"></div>
  </div>

  <div class="relative container py-32">
    <div class="text-center max-w-5xl mx-auto">
      <!-- Badge -->
      <div class="inline-flex items-center gap-2 bg-background-muted/10 backdrop-blur-sm px-6 py-3 rounded-full mb-8 border border-border/20">
        <AstroIcon name="tabler:message-circle" class="w-5 h-5 text-primary" />
        <span class="text-primary font-semibold">Get In Touch</span>
      </div>

      <!-- Main Title -->
      <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-text mb-8 leading-tight">
        Let's Build Something
        <span class="bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent">
          Amazing
        </span>
      </h1>

      <!-- Subtitle -->
      <p class="text-xl md:text-2xl text-text-muted mb-12 max-w-4xl mx-auto leading-relaxed">
        Ready to transform your operations with cutting-edge technology? Get in touch and discover
        how we can help you achieve your goals.
      </p>

      <!-- Quick Contact Stats -->
      <div class="grid md:grid-cols-3 gap-8 max-w-3xl mx-auto">
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-background-muted/10 rounded-full mb-4">
            <AstroIcon name="tabler:clock" class="w-8 h-8 text-primary" />
          </div>
          <div class="text-2xl font-bold text-text mb-1">24h</div>
          <div class="text-text-muted">Response Time</div>
        </div>
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-background-muted/10 rounded-full mb-4">
            <AstroIcon name="tabler:circle-check" class="w-8 h-8 text-secondary" />
          </div>
          <div class="text-2xl font-bold text-text mb-1">100%</div>
          <div class="text-text-muted">Free Consultation</div>
        </div>
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-background-muted/10 rounded-full mb-4">
            <AstroIcon name="tabler:bolt" class="w-8 h-8 text-accent" />
          </div>
          <div class="text-2xl font-bold text-text mb-1">Fast</div>
          <div class="text-text-muted">Project Start</div>
        </div>
      </div>
    </div>
  </div>
</section>
