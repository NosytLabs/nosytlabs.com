---
import AdvancedContactForm from './AdvancedContactForm.tsx';
import Toaster from '../ui/Toaster.tsx';
---

<div class="relative">
  <div class="bg-background/80 backdrop-blur-sm rounded-2xl p-10 md:p-12 shadow-xl border border-border/50">
    <div class="text-center mb-8">
      <div class="inline-flex items-center gap-2 bg-primary/10 backdrop-blur-sm px-4 py-2 rounded-full mb-4 border border-primary/30">
        <span class="text-primary font-semibold text-sm">Send Message</span>
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-text mb-4">
        Let's Start the Conversation
      </h2>
      <p class="text-text-muted text-lg">
        Fill out the form below and we'll get back to you within 24 hours.
      </p>
    </div>
    <AdvancedContactForm client:load />
      <Toaster client:load />
  </div>
</div>