---
/**
 * NosytLabs Logo Component
 * Displays the official NosytLabs logo with proper branding
 */

interface Props {
  size?: 'sm' | 'md' | 'lg' | 'xl';
  variant?: 'full' | 'icon' | 'text';
  class?: string;
  showText?: boolean;
}

const { 
  size = 'md', 
  variant = 'full',
  class: className = '',
  showText = true 
} = Astro.props;

const sizeClasses = {
  sm: 'w-6 h-6',
  md: 'w-10 h-10',
  lg: 'w-16 h-16',
  xl: 'w-24 h-24'
};

const textSizeClasses = {
  sm: 'text-sm',
  md: 'text-xl',
  lg: 'text-2xl',
  xl: 'text-4xl'
};
---

<div class:list={['flex items-center gap-2 transition-all duration-300 ease-out group', className]}>
  {(variant === 'full' || variant === 'icon') && (
    <div class={`${sizeClasses[size]} flex-shrink-0 transition-transform duration-300 ease-out group-hover:scale-105`}>
      <img
        src={variant === 'full' ? "/logo.svg" : "/images/favicon.svg"}
        alt="NosytLabs Official Logo"
        class="w-full h-full object-contain"
        width="100"
        height="100"
      />
    </div>
  )}
  
  {(variant === 'full' || variant === 'text') && showText && (
    <span class={`font-bold text-brand-purple-500 dark:text-brand-purple-300 transition-colors duration-300 ease-out group-hover:text-brand-orange-500 ${textSizeClasses[size]}`}>
      NosytLabs
    </span>
  )}
</div>

