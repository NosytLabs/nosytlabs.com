---
export interface Props {
  title: string;
  description: string;
  icon: string;
  features: string[];
  pricing?: string;
  badge?: string;
  href?: string;
  class?: string;
}

const {
  title,
  description,
  icon,
  features,
  pricing,
  badge,
  href,
  class: className = '',
  ...rest
} = Astro.props;

const Tag = href ? 'a' : 'div';
---

<Tag
  class={`group glass p-6 sm:p-8 rounded-xl border border-surface-tertiary hover:border-accent/50 transition-all duration-300 hover:shadow-2xl hover:shadow-accent/30 touch-target ${className}`}
  href={href}
  role="article"
  aria-label={`${title} service card`}
  title={`${title} - ${description}`}
  aria-describedby={`service-description-${title.replace(/\s+/g, '-').toLowerCase()}`}
  {...rest}
>
  <div class="icon-container-enhanced icon-container-lg text-accent group-hover:text-secondary transition-colors duration-300 mb-4" set:html={icon}></div>
  
  {badge && (
    <div class="px-3 py-1 text-xs font-semibold bg-gradient-to-r from-accent/10 to-secondary/10 text-accent rounded-full border border-accent/20 animate-pulse mb-4">
      {badge}
    </div>
  )}
  
  <div class="space-y-enhanced">
    <h3 class="text-responsive-xl font-bold text-white mb-3 group-hover:text-accent transition-colors duration-300">
      {title}
    </h3>
    <p class="text-muted text-responsive" id={`service-description-${title.replace(/\s+/g, '-').toLowerCase()}`}>
      {description}
    </p>
    
    {pricing && (
      <div class="text-center md:text-left py-4">
        <div class="text-2xl font-bold text-accent mb-1">{pricing}</div>
        <div class="text-sm text-muted">Starting price</div>
      </div>
    )}
    
    {features && features.length > 0 && (
      <div>
        <h4 class="text-sm font-semibold text-white mb-4 uppercase tracking-wider">
          What's Included
        </h4>
        <ul class="space-y-enhanced" role="list">
          {features.map((feature) => (
            <li class="flex-enhanced gap-3 text-sm text-muted group/item" role="listitem">
              <div class="flex-shrink-0">
                <svg class="icon-xs text-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
              </div>
              <span class="group-hover/item:text-white transition-colors duration-300">{feature}</span>
            </li>
          ))}
        </ul>
      </div>
    )}
  </div>
</Tag>

<style>
  .glass {
    background: var(--color-brand-signal-white-05) /* Fixed: design token */;
    backdrop-filter: blur(var(--space-2)) /* Fixed: 8px grid */;
    -webkit-backdrop-filter: blur(var(--space-2)) /* Fixed: 8px grid */;
  }

  /* ===== RESPONSIVE DESIGN ===== */
  /* Mobile-first responsive design */
  .group {
    min-height: 200px;
    display: flex;
    flex-direction: column;
    margin-bottom: var(--grid-lg);
  }

  .group .text-accent {
    font-size: clamp(1.5rem, 2vw + 1rem, 2rem);
    margin-bottom: var(--grid-sm);
  }

  .group h3 {
    font-size: clamp(1.125rem, 1.5vw + 1rem, 1.5rem);
    line-height: 1.3;
    margin-bottom: var(--grid-md);
  }

  .group p {
    font-size: clamp(0.875rem, 1vw + 0.8rem, 1rem);
    line-height: 1.6;
    margin-bottom: var(--grid-md);
  }

  .group ul {
    margin-bottom: var(--grid-md);
  }

  .group li {
    font-size: clamp(0.8rem, 0.9vw + 0.75rem, 0.9rem);
    line-height: 1.5;
    padding: var(--grid-xs) 0;
  }

  /* Touch-friendly interactions */
  .group,
  .group h3,
  .group a,
  .group button {
    min-height: 48px /* Fixed: 8px grid compliance */;
    display: flex;
    align-items: center;
  }

  /* Mobile optimizations */
  @media (max-width: var(--breakpoint-md)) {
    .group {
      padding: var(--grid-md) !important;
      min-height: 184px /* Fixed: 8px grid compliance */;
      margin-bottom: var(--grid-md);
    }

    .group .text-accent {
      font-size: clamp(1.25rem, 3vw + 1rem, 1.75rem);
    }

    .group h3 {
      font-size: clamp(1rem, 2vw + 0.9rem, 1.25rem);
      margin-bottom: var(--grid-sm);
    }

    .group p {
      font-size: clamp(0.8rem, 1.5vw + 0.7rem, 0.9rem);
      margin-bottom: var(--grid-sm);
    }

    .group li {
      font-size: clamp(0.75rem, 1vw + 0.7rem, 0.85rem);
      padding: var(--grid-xs) 0;
    }
  }

  /* Tablet optimizations */
  @media (min-width: var(--breakpoint-md)) and (max-width: var(--breakpoint-lg)) {
    .group {
      padding: var(--grid-lg) !important;
      min-height: 224px /* Fixed: 8px grid compliance */;
    }

    .group h3 {
      font-size: clamp(1.2rem, 1.5vw + 1rem, 1.4rem);
    }
  }

  /* Desktop optimizations */
  @media (min-width: 1024px) {
    .group {
      padding: var(--grid-xl) !important;
      min-height: 240px;
    }

    .group h3 {
      font-size: clamp(1.3rem, 1vw + 1.2rem, 1.6rem);
    }
  }

  /* Hover effects for touch devices */
  @media (hover: none) and (pointer: coarse) {
    .group:hover {
      transform: none;
      box-shadow: 0 4px 8px /* Fixed: 8px grid */ var(--color-black-alpha-15) /* Fixed: design token */;
    }
  }

  /* Reduced motion preferences */
  @media (prefers-reduced-motion: reduce) {
    .group {
      transition: none;
    }

    .group:hover {
      transform: none;
    }
  }
</style>
