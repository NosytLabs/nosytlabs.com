---
import { cva, type VariantProps } from "class-variance-authority";

const cardVariants = cva("rounded-lg border bg-card text-card-foreground shadow-sm", {
  variants: {
    variant: {
      default: "",
      featured: "border-primary/80 shadow-md",
    },
  },
  defaultVariants: {
    variant: "default",
  },
});

export interface Props extends VariantProps<typeof cardVariants> {
  class?: string;
  [key: string]: any;
}

const { variant, class: className, ...props } = Astro.props;
---

<div class={cardVariants({ variant, class: className })} {...props}>
  <slot />
</div>