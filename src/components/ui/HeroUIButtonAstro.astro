---
import { createInternalLink } from '@/lib/constants';

export interface Props {
  href?: string;
  text?: string;
  variant?: 'primary' | 'secondary' | 'tertiary' | 'outline' | 'ghost' | 'destructive' | 'gradient';
  size?: 'sm' | 'md' | 'lg';
  class?: string;
  className?: string;
  'aria-label'?: string;
  disabled?: boolean;
  type?: 'button' | 'submit' | 'reset';
  external?: boolean;
  [key: string]: unknown;
}

const { 
  href, 
  text, 
  variant = 'primary', 
  size = 'md', 
  class: className,
  className: classNameProp,
  'aria-label': ariaLabel,
  disabled = false,
  type = 'button',
  external = false,
  ...rest 
} = Astro.props;

// Normalize internal links
const normalizedHref = (typeof href === 'string' && href.startsWith('/'))
  ? createInternalLink(href)
  : href;

const finalClassName = classNameProp || className;

// Enhanced variant classes with better styling
const variantClasses = {
  primary: 'bg-primary text-primary-foreground hover:bg-primary/90 shadow-lg hover:shadow-xl hover:scale-105 active:scale-95',
  secondary: 'border-2 border-primary text-primary hover:bg-primary/10 hover:border-primary/70 shadow-md hover:shadow-lg hover:scale-105 active:scale-95',
  tertiary: 'bg-muted/50 text-foreground hover:bg-muted hover:scale-105 active:scale-95 shadow-sm hover:shadow-md',
  outline: 'border-2 border-border text-foreground hover:border-primary hover:bg-primary/10 hover:text-primary shadow-sm hover:shadow-md hover:scale-105 active:scale-95',
  ghost: 'bg-transparent text-muted-foreground hover:text-foreground hover:bg-muted/50 hover:scale-105 active:scale-95',
  destructive: 'bg-destructive text-destructive-foreground hover:bg-destructive/90 shadow-lg hover:shadow-xl hover:scale-105 active:scale-95',
  gradient: 'bg-gradient-to-r from-primary via-primary to-accent text-primary-foreground shadow-xl hover:shadow-2xl hover:scale-105 active:scale-95 relative overflow-hidden',
};

const sizeClasses = {
  sm: 'px-5 py-2.5 text-sm min-h-[40px] rounded-lg',
  md: 'px-7 py-3.5 text-base min-h-[48px] rounded-xl',
  lg: 'px-9 py-4.5 text-lg min-h-[56px] rounded-xl font-bold',
};

const classes = `
  inline-flex items-center justify-center gap-3 font-semibold
  transition-all duration-300 ease-out transform
  focus:outline-none focus:ring-4 focus:ring-primary/30 focus:ring-offset-2
  disabled:opacity-50 disabled:cursor-not-allowed disabled:hover:scale-100
  select-none cursor-pointer
  ${variantClasses[variant]}
  ${sizeClasses[size]}
  ${finalClassName || ''}
`.trim();
---

{normalizedHref ? (
  <a
    href={normalizedHref}
    class={classes}
    {...(external && { target: '_blank', rel: 'noopener noreferrer' })}
    {...(ariaLabel && { 'aria-label': ariaLabel })}
    {...(disabled && { 'aria-disabled': 'true' })}
    {...rest}
  >
    {text}
    <slot />
  </a>
) : (
  <button
    type={type}
    class={classes}
    {...(ariaLabel && { 'aria-label': ariaLabel })}
    disabled={disabled}
    {...rest}
  >
    {text}
    <slot />
  </button>
)}

