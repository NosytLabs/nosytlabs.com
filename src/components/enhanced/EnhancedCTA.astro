---
import Button from '../ui/Button.astro';
import Card from '../ui/Card.astro';

interface Props {
  title?: string;
  subtitle?: string;
  description?: string;
  primaryCTA?: {
    text: string;
    href: string;
    variant?: string;
  };
  secondaryCTA?: {
    text: string;
    href: string;
    variant?: string;
  };
  features?: string[];
  className?: string;
}

const {
  title = "Ready to Get Started?",
  subtitle = "Transform Your Business Today",
  description = "Join hundreds of satisfied clients who have transformed their digital presence with our expert solutions.",
  primaryCTA = {
    text: "Start Your Project",
    href: "/contact",
    variant: "primary"
  },
  secondaryCTA = {
    text: "Schedule Consultation",
    href: "/book-a-consultation",
    variant: "outline"
  },
  features = [
    "Free initial consultation",
    "30-day money-back guarantee",
    "Dedicated project manager",
    "24/7 support included"
  ],
  className = ""
} = Astro.props;
---

<section class={`py-20 bg-gradient-to-br from-primary-50 to-accent-50 dark:from-primary-900/20 dark:to-accent-900/20 ${className}`}>
  <div class="container mx-auto px-6">
    <div class="max-w-4xl mx-auto">
      <Card variant="glass" padding="xl" rounded="2xl" class="text-center">
        <div class="max-w-2xl mx-auto">
          <!-- Title Section -->
          <h2 class="text-4xl md:text-5xl font-bold text-foreground mb-4">
            {title}
          </h2>
          <h3 class="text-2xl md:text-3xl font-semibold text-primary mb-6">
            {subtitle}
          </h3>
          <p class="text-xl text-muted-foreground mb-8 leading-relaxed">
            {description}
          </p>
          
          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
            <Button 
              variant={primaryCTA.variant || "primary"}
              size="lg"
              href={primaryCTA.href}
              class="w-full sm:w-auto group"
            >
              <span>{primaryCTA.text}</span>
              <svg 
                class="icon-sm ml-2 group-hover:translate-x-1 transition-transform duration-300" 
                fill="none" 
                stroke="currentColor" 
                viewBox="0 0 24 24"
                aria-hidden="true"
              >
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
              </svg>
            </Button>
            
            {secondaryCTA && (
              <Button 
                variant={secondaryCTA.variant || "outline"}
                size="lg"
                href={secondaryCTA.href}
                class="w-full sm:w-auto"
              >
                {secondaryCTA.text}
              </Button>
            )}
          </div>

          <!-- Features Grid -->
          {features && features.length > 0 && (
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-left">
              {features.map((feature) => (
                <div class="flex items-center gap-3">
                  <div class="flex-shrink-0">
                    <svg 
                      class="icon-sm text-accent" 
                      fill="none" 
                      stroke="currentColor" 
                      viewBox="0 0 24 24"
                      aria-hidden="true"
                    >
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                  </div>
                  <span class="text-muted-foreground">{feature}</span>
                </div>
              ))}
            </div>
          )}
        </div>
      </Card>
    </div>
  </div>
</section>
