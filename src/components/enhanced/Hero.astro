---
import { Icon } from '@astrojs/starlight/components';
import Button from '../ui/Button.astro';
---

<section class="relative min-h-screen flex items-center justify-center overflow-hidden">
  <!-- Background Elements -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-blue-50 to-slate-100 dark:from-slate-900 dark:via-blue-900 dark:to-slate-900"></div>
  
  <!-- Animated Background Orbs - Fixed positioning for pixel-perfect alignment -->
  <div class="absolute top-20 left-48 w-96 h-96 bg-gradient-to-r from-[hsl(var(--accent)/0.3)] to-[hsl(var(--accent-light)/0.3)] rounded-full blur-3xl animate-float"></div>
  <div class="absolute bottom-20 right-48 w-96 h-96 bg-gradient-to-r from-[hsl(var(--primary)/0.3)] to-[hsl(var(--accent)/0.3)] rounded-full blur-3xl animate-float-delayed"></div>
  
  <!-- Grid Pattern Overlay -->
  <div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
  </div>
  
  <div class="container relative z-10 text-center">
    <!-- Hero Badge -->
    <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-gradient-to-r from-[hsl(var(--accent)/0.1)] to-[hsl(var(--accent-light)/0.1)] border border-[hsl(var(--accent)/0.2)] mb-8 animate-fade-in">
      <div class="w-2 h-2 bg-[hsl(var(--accent))] rounded-full animate-pulse"></div>
      <span class="text-sm font-medium text-[hsl(var(--accent))] uppercase tracking-wider">Welcome to Nosyt Labs</span>
    </div>
    
    <!-- Main Heading -->
    <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-[hsl(var(--text-primary))] dark:text-[hsl(var(--text-on-dark))] mb-6 animate-fade-in-up">
      Innovative
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-[hsl(var(--accent))] to-[hsl(var(--accent-light))]">
        Digital Solutions