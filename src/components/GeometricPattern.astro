---
const { class: className = "" } = Astro.props;
---
<div class={`pointer-events-none absolute inset-0 -z-10 ${className}`} aria-hidden="true">
  <svg class="w-full h-full opacity-20 text-[var(--color-brand-accent)]" viewBox="0 0 800 600" preserveAspectRatio="none" role="img" aria-label="decorative geometric pattern">
    <defs>
      <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
        <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" />
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid)" />
  </svg>
</div>
