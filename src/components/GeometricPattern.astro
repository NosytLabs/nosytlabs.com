---
const { class: className = "" } = Astro.props;
---
<div class={`pointer-events-none absolute inset-x-0 top-0 -z-10 ${className}`} aria-hidden="true">
  <svg class="w-full h-32 md:h-48 lg:h-64 opacity-20 text-accent focus:outline-none focus:ring-2 focus:ring-accent" viewBox="0 0 800 600" preserveAspectRatio="xMidYMid meet" role="img" aria-label="decorative geometric pattern">
    <defs>
      <pattern id="grid" width="40" height="40" patternUnits="userSpaceOnUse">
        <path d="M 40 0 L 0 0 0 40" fill="none" stroke="currentColor" stroke-width="0.5" />
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#grid)" />
  </svg>
</div>
