---
/**
 * Enhanced Service Card Component
 * 
 * Modern service card with animations, detailed features, and conversion-optimized CTAs
 * Now using unified Card component for consistency
 */

import type { ServiceData } from '../../config/services/types';
import AstroIcon from '../ui/AstroIcon.astro';
import Button from '../ui/Button.astro';
import Card from '../core/Card.astro';

interface Props {
  service: ServiceData;
  featured?: boolean;
  showDetails?: boolean;
}

const { service, featured = false, showDetails = false } = Astro.props;
---

<Card 
  variant={featured ? "elevated" : "default"}
  size="lg"
  interactive={true}
  class={`service-card ${featured ? 'featured-service' : ''}`}
  data-service-card
>
  <!-- Popular Badge -->
  {service.popular && (
    <div class="absolute top-4 right-4 z-10">
      <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-gradient-to-r from-primary to-secondary text-white">
        <AstroIcon name="star" class="w-3 h-3 mr-1" />
        Popular
      </span>
    </div>
  )}

  <!-- Animated Background Gradient -->
  <div class="absolute inset-0 bg-gradient-to-br from-primary/5 to-secondary/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>

  <!-- Card Content -->
    <!-- Icon and Category -->
    <div class="flex items-center justify-between mb-6">
      <div class="flex items-center space-x-3">
        <div class="p-3 rounded-xl bg-gradient-to-br from-primary to-secondary text-white group-hover:scale-110 transition-transform duration-300">
          <AstroIcon name={service.icon} class="w-6 h-6" />
        </div>
        <span class="text-sm font-medium text-gray-600 dark:text-gray-400 uppercase tracking-wide">
          {service.category}
        </span>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-primary">{service.price}</div>
        <div class="text-sm text-gray-500">{service.timeline}</div>
      </div>
    </div>

    <!-- Title and Description -->
    <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-4 group-hover:text-primary transition-colors duration-300">
      {service.name}
    </h3>
    
    <p class="text-gray-600 dark:text-gray-300 mb-6 leading-relaxed">
      {service.shortDescription}
    </p>

    <!-- Features List -->
    <div class="mb-8">
      <h4 class="text-sm font-semibold text-gray-900 dark:text-white mb-3 uppercase tracking-wide">
        Key Features
      </h4>
      <ul class="space-y-2">
        {service.features.slice(0, showDetails ? service.features.length : 4).map((feature) => (
          <li class="flex items-center text-sm text-gray-600 dark:text-gray-300">
            <AstroIcon name="check" class="w-4 h-4 text-green-500 mr-3 flex-shrink-0" />
            {feature}
          </li>
        ))}
        {!showDetails && service.features.length > 4 && (
          <li class="text-sm text-primary font-medium">
            +{service.features.length - 4} more features
          </li>
        )}
      </ul>
    </div>

    <!-- Testimonial (if available) -->
    {service.testimonial && (
      <div class="mb-6 p-4 bg-gray-50 dark:bg-gray-800 rounded-lg border-l-4 border-primary">
        <blockquote class="text-sm text-gray-700 dark:text-gray-300 italic mb-2">
          "{service.testimonial.quote}"
        </blockquote>
        <cite class="text-xs text-gray-500 not-italic">
          â€” {service.testimonial.author}, {service.testimonial.company}
        </cite>
      </div>
    )}

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row gap-3">
      <Button
        href={service.href}
        variant="primary"
        size="lg"
        class="flex-1 group-hover:scale-105 transition-transform duration-300"
        aria-label={`Learn more about ${service.name}`}
      >
        {service.cta}
        <AstroIcon name="arrowRight" class="w-4 h-4 ml-2" />
      </Button>
      
      <Button
        href="/contact"
        variant="outline"
        size="lg"
        class="sm:flex-initial"
        aria-label="Get a quote for this service"
      >
        Get Quote
      </Button>
    </div>
</Card>

<style>
  /* Service card specific styling */
  .service-card {
    animation: fadeInUp 0.6s ease-out forwards;
  }
  
  .featured-service {
    /* Use border instead of ring to avoid opacity issues with CSS variable colors */
    @apply border-2 border-primary-500 border-opacity-50 scale-105;
  }
  
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  /* Stagger animation for multiple cards */
  .service-card:nth-child(1) { animation-delay: 0.1s; }
  .service-card:nth-child(2) { animation-delay: 0.2s; }
  .service-card:nth-child(3) { animation-delay: 0.3s; }
  .service-card:nth-child(4) { animation-delay: 0.4s; }
  .service-card:nth-child(5) { animation-delay: 0.5s; }
  .service-card:nth-child(6) { animation-delay: 0.6s; }
</style>